<?xml version="1.0" encoding="utf-8"?><!--背景墙推荐的布局-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!--背景底图-->
    <LinearLayout
        android:id="@+id/assembly_fragment_main_singleBack"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/assembly_fragment_main_singleAlphaTitle"
        android:layout_width="230dp"
        android:layout_height="35dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="30dp"
        android:alpha="0.2"
        android:background="#000000"
        android:orientation="vertical">

    </LinearLayout>
    <!--只能接受11个字-->

    <TextView
        android:id="@+id/assembly_fragment_main_singleTitlea"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="30dp"
        android:gravity="center_vertical"
        android:text="海天蚝油,一招定鲜"
        android:textColor="#000000"
        android:textSize="18dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/assembly_fragment_main_singleTitleb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="70dp"
        android:text="海天回馈,7折起购."
        android:textColor="#666666"
        android:textSize="15dp"
        android:textStyle="bold" />
    <!--背景透明的商品或者商户图片-->
    <ImageView
        android:id="@+id/assembly_fragment_main_singleBigImg"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:scaleType="fitXY"
        android:src="@drawable/sf998" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="140dp"
        android:alpha="0.4"
        android:background="#000000">

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/assembly_fragment_main_singleShopabody"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/assembly_fragment_main_singleShopaImage"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:scaleType="fitXY"
                android:src="@drawable/yu8899" />

            <TextView
                android:id="@+id/assembly_fragment_main_singleShopaTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:gravity="center|left"
                android:maxLines="1"
                android:paddingLeft="10dp"
                android:paddingRight="5dp"
                android:text="沙宣750毫升洗发露"
                android:textColor="#ffffff"
                android:textSize="10sp" />


            <!--价格-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:gravity="bottom"
                        android:orientation="horizontal"
                        android:id="@+id/assembly_fragment_main_singleFirstShop"
                        android:paddingLeft="10dp"
                        android:paddingRight="5dp">

                        <shlm.lmcs.com.lazycat.LazyShopView.PriceNumberView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="￥"
                            android:textColor="@color/colorPrice"
                            android:textSize="9sp"
                            android:textStyle="bold" />


                        <shlm.lmcs.com.lazycat.LazyShopView.PriceNumberView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:text="30"
                            android:textColor="#000000"
                            android:textSize="17sp"
                            android:textStyle="bold" />


                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:paddingTop="2dp"
                        android:paddingRight="5dp"
                        android:id="@+id/assembly_fragment_main_singleFirstStatic"
                        android:paddingBottom="2dp"
                        android:layout_toRightOf="@id/assembly_fragment_main_singleFirstShop"
                        android:text="限时优惠"
                        android:textSize="5sp" />


                </RelativeLayout>


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/assembly_fragment_main_singleShopbbody"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/assembly_fragment_main_singleShopbImage"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:scaleType="fitXY"
                android:src="@drawable/yu8899" />

            <TextView
                android:id="@+id/assembly_fragment_main_singleShopbTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:gravity="center|left"
                android:maxLines="1"
                android:paddingLeft="10dp"
                android:paddingRight="5dp"
                android:text="沙宣750毫升洗发露"
                android:textColor="#ffffff"
                android:textSize="10sp" />


            <!--价格-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:gravity="bottom"
                        android:orientation="horizontal"
                        android:id="@+id/assembly_fragment_main_singleSecondShop"
                        android:paddingLeft="10dp"
                        android:paddingRight="5dp">

                        <shlm.lmcs.com.lazycat.LazyShopView.PriceNumberView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="￥"
                            android:textColor="@color/colorPrice"
                            android:textSize="10sp"
                            android:textStyle="bold" />


                        <shlm.lmcs.com.lazycat.LazyShopView.PriceNumberView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:text="30"
                            android:textColor="#000000"
                            android:textSize="15sp"
                            android:textStyle="bold" />


                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="3dp"
                        android:paddingTop="2dp"
                        android:paddingRight="3dp"
                        android:paddingBottom="2dp"
                        android:layout_toRightOf="@id/assembly_fragment_main_singleSecondShop"
                        android:text="限时优惠"
                        android:textSize="8sp" />


                </RelativeLayout>


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/assembly_fragment_main_singleShopcbody"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/assembly_fragment_main_singleShopcImage"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:scaleType="fitXY"
                android:src="@drawable/yu8899" />

            <TextView
                android:id="@+id/assembly_fragment_main_singleShopcTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:gravity="center|left"
                android:maxLines="1"
                android:paddingLeft="10dp"
                android:paddingRight="5dp"
                android:text="沙宣750毫升洗发露"
                android:textColor="#ffffff"
                android:textSize="10sp" />


            <!--价格-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:gravity="bottom"
                        android:orientation="horizontal"
                        android:id="@+id/assembly_fragment_main_singleThreeShop"
                        android:paddingLeft="10dp"
                        android:paddingRight="5dp">

                        <shlm.lmcs.com.lazycat.LazyShopView.PriceNumberView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="￥"
                            android:textColor="@color/colorPrice"
                            android:textSize="10sp"
                            android:textStyle="bold" />


                        <shlm.lmcs.com.lazycat.LazyShopView.PriceNumberView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:text="30"
                            android:textColor="#000000"
                            android:textSize="15sp"
                            android:textStyle="bold" />


                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="3dp"
                        android:paddingTop="2dp"
                        android:paddingRight="3dp"
                        android:paddingBottom="2dp"
                        android:layout_toRightOf="@id/assembly_fragment_main_singleThreeShop"
                        android:text="限时优惠"
                        android:textSize="8sp" />


                </RelativeLayout>


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>