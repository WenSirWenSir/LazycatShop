<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:scrollbars="none">    <!--顶层隔板-->    <LinearLayout        android:layout_width="match_parent"        android:layout_height="30dp"        android:background="#efefef">    </LinearLayout>    <FrameLayout        android:id="@+id/activity_main_Framelayout"        android:layout_width="match_parent"        android:layout_height="match_parent"        android:layout_marginTop="30dp"        android:layout_marginBottom="50dp">    </FrameLayout>    <LinearLayout        android:layout_width="match_parent"        android:layout_height="50dp"        android:layout_alignParentBottom="true"        android:background="#efefef"        android:orientation="horizontal">        <RelativeLayout            android:id="@+id/activity_main_btn_IcoMain"            android:layout_width="0dp"            android:layout_height="50dp"            android:layout_weight="1">            <ImageView                android:layout_width="35dp"                android:layout_height="35dp"                android:layout_centerHorizontal="true"                android:layout_marginTop="2dp"                android:scaleType="center"                android:src="@drawable/ico_btn_main" />            <TextView                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_alignParentBottom="true"                android:gravity="center"                android:text="懒猫超市"                android:textColor="#f30d88"                android:textSize="10sp" />        </RelativeLayout>        <RelativeLayout            android:id="@+id/activity_main_btn_IcoDelivery"            android:layout_width="0dp"            android:layout_height="50dp"            android:layout_weight="1">            <ImageView                android:layout_width="35dp"                android:layout_height="35dp"                android:layout_centerHorizontal="true"                android:layout_marginTop="2dp"                android:scaleType="center"                android:src="@drawable/ico_freight" />            <TextView                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_alignParentBottom="true"                android:gravity="center"                android:text="正在配送"                android:textColor="#bfbfbf"                android:textSize="10sp" />        </RelativeLayout>        <RelativeLayout            android:id="@+id/activity_main_btn_IcoUserCenter"            android:layout_width="0dp"            android:layout_height="50dp"            android:layout_weight="1">            <ImageView                android:layout_width="35dp"                android:layout_height="35dp"                android:layout_centerHorizontal="true"                android:layout_marginTop="2dp"                android:scaleType="center"                android:src="@drawable/ico_usercontent" />            <TextView                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_alignParentBottom="true"                android:gravity="center"                android:text="个人中心"                android:textColor="#bfbfbf"                android:textSize="10sp" />        </RelativeLayout>    </LinearLayout></RelativeLayout>