<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"        xmlns:app="http://schemas.android.com/apk/res-auto"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:background="#efefef"        android:orientation="vertical">    <RelativeLayout            android:layout_width="match_parent"            android:layout_height="110dp"            android:layout_margin="10dp">        <!--显示区-->        <LinearLayout                android:id="@+id/item_superpickshopshowBody"                android:layout_width="match_parent"                android:layout_height="match_parent"                android:gravity="center_vertical"                android:orientation="horizontal">            <RelativeLayout                    android:layout_width="0dp"                    android:layout_height="100dp"                    android:layout_weight="1">                <com.makeramen.roundedimageview.RoundedImageView                        android:id="@+id/item_superpickshopImg"                        android:layout_width="80dp"                        android:layout_height="80dp"                        android:layout_centerInParent="true"                        app:riv_corner_radius="5dp"                        app:riv_oval="false" />            </RelativeLayout>            <LinearLayout                    android:layout_width="0dp"                    android:layout_height="100dp"                    android:layout_weight="3"                    android:orientation="vertical"                    android:paddingLeft="5dp"                    android:paddingTop="5dp"                    android:paddingRight="5dp">                <shlm.lmcs.com.lazycat.LazyShopView.SystemTextView                        android:id="@+id/item_superpickshopTitle"                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:maxLines="1"                        android:textColor="#000000"                        android:textSize="12dp" />                <shlm.lmcs.com.lazycat.LazyShopView.SystemTextView                        android:id="@+id/item_superpickshopSpec"                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:layout_marginTop="5dp"                        android:maxLines="1"                        android:textColor="#a9a9a9"                        android:textSize="10dp" />                <shlm.lmcs.com.lazycat.LazyShopView.SystemTextView                        android:id="@+id/item_superpickshopTp"                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:layout_marginTop="5dp"                        android:maxLines="1"                        android:textColor="#a9a9a9"                        android:textSize="10dp" />                <shlm.lmcs.com.lazycat.LazyShopView.SystemTextView                        android:id="@+id/item_superpickshopPayhow"                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:layout_marginTop="5dp"                        android:maxLines="1"                        android:textColor="#a9a9a9"                        android:textSize="10dp" />            </LinearLayout>        </LinearLayout>        <!--功能区-->        <LinearLayout                android:id="@+id/item_superpickshopfunctionBody"                android:layout_width="match_parent"                android:layout_height="110dp"                android:alpha="0.8"                android:background="#efefef"                android:orientation="horizontal"                android:visibility="gone">            <RelativeLayout                    android:layout_width="0dp"                    android:layout_height="match_parent"                    android:layout_weight="1">                <ImageView                        android:id="@+id/item_superpickshopBtngetDone"                        android:layout_width="50dp"                        android:layout_height="50dp"                        android:layout_centerInParent="true"                        android:src="@drawable/ico_superusers" />                <shlm.lmcs.com.lazycat.LazyShopView.SystemTextView                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:layout_below="@id/item_superpickshopBtngetDone"                        android:layout_centerHorizontal="true"                        android:text="取货完毕"                        android:textColor="#666666"                        android:textSize="10dp" />            </RelativeLayout>            <RelativeLayout                    android:layout_width="0dp"                    android:layout_height="match_parent"                    android:layout_weight="1">                <ImageView                        android:id="@+id/item_superpickshopBtnnotShop"                        android:layout_width="50dp"                        android:layout_height="50dp"                        android:layout_centerInParent="true"                        android:src="@drawable/ico_superusers" />                <shlm.lmcs.com.lazycat.LazyShopView.SystemTextView                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:layout_below="@id/item_superpickshopBtnnotShop"                        android:layout_centerHorizontal="true"                        android:text="库存不足"                        android:textColor="#666666"                        android:textSize="10dp" />            </RelativeLayout>            <RelativeLayout                    android:layout_width="0dp"                    android:layout_height="match_parent"                    android:layout_weight="1">                <ImageView                        android:id="@+id/item_superpickshopBtnauto"                        android:layout_width="50dp"                        android:layout_height="50dp"                        android:layout_centerInParent="true"                        android:src="@drawable/ico_superusers" />                <shlm.lmcs.com.lazycat.LazyShopView.SystemTextView                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:layout_below="@id/item_superpickshopBtnauto"                        android:layout_centerHorizontal="true"                        android:text="自主取消"                        android:textColor="#666666"                        android:textSize="10dp" />            </RelativeLayout>            <RelativeLayout                    android:layout_width="0dp"                    android:layout_height="match_parent"                    android:layout_weight="1">                <ImageView                        android:id="@+id/item_superpickshopBtnclose"                        android:layout_width="50dp"                        android:layout_height="50dp"                        android:layout_alignParentTop="true"                        android:layout_alignParentRight="true"                        android:src="@drawable/ico_superpickclose" />            </RelativeLayout>        </LinearLayout>    </RelativeLayout></LinearLayout>