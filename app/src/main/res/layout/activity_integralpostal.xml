<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"        android:layout_width="match_parent"        android:layout_height="match_parent"        android:background="#efefef"        android:fitsSystemWindows="true"        android:orientation="vertical"        android:scrollbars="none">    <include layout="@layout/assembly_act_head" />    <RelativeLayout            android:layout_width="match_parent"            android:layout_height="match_parent"            android:layout_marginTop="10dp"            android:background="#efefef"            android:orientation="vertical">        <!--积分-->        <LinearLayout                android:id="@+id/activity_integralpostalIntegralBody"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:background="#ffffff"                android:paddingTop="9dp"                android:paddingBottom="9dp">            <LinearLayout                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:orientation="horizontal">                <RelativeLayout                        android:layout_width="0dp"                        android:layout_height="wrap_content"                        android:layout_weight="1">                    <ImageView                            android:layout_width="20dp"                            android:layout_height="20dp"                            android:layout_alignParentRight="true"                            android:layout_marginRight="10dp"                            android:src="@drawable/ico_integral" />                </RelativeLayout>                <RelativeLayout                        android:layout_width="0dp"                        android:layout_height="match_parent"                        android:layout_weight="1">                    <shlm.lmcs.com.lazycat.LazyShopView.SystemTextView                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:layout_centerVertical="true"                            android:text="积分"                            android:textColor="#000000"                            android:textSize="13dp" />                </RelativeLayout>                <RelativeLayout                        android:layout_width="0dp"                        android:layout_height="match_parent"                        android:layout_weight="4">                    <ImageView                            android:layout_width="10dp"                            android:layout_height="10dp"                            android:layout_alignParentRight="true"                            android:layout_centerVertical="true"                            android:layout_marginRight="5dp"                            android:src="@drawable/ico_rightarrow" />                    <shlm.lmcs.com.lazycat.LazyShopView.SystemTextView                            android:id="@+id/activity_integralpostalIntegral"                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:layout_alignParentRight="true"                            android:layout_centerVertical="true"                            android:layout_marginRight="25dp"                            android:textColor="#000000"                            android:textSize="13dp" />                </RelativeLayout>            </LinearLayout>        </LinearLayout>        <!--积分宝-->        <LinearLayout                android:id="@+id/activity_integralpostalIntegralBBody"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_below="@id/activity_integralpostalIntegralBody"    