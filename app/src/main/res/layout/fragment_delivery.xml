<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:background="#ffffff"    android:orientation="vertical">    <!--标题-->    <RelativeLayout        android:id="@+id/fragment_deliveryBody"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:background="#f30d88"        android:orientation="vertical"        android:paddingTop="10dp"        android:paddingBottom="10dp">        <TextView            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_centerHorizontal="true"            android:text="购物车"            android:textColor="#ffffff"            android:textSize="15sp"            android:textStyle="bold" />        <TextView            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_alignParentRight="true"            android:layout_centerVertical="true"            android:layout_marginRight="10dp"            android:text="删除选定"            android:textColor="#666666"            android:textSize="13sp" />    </RelativeLayout>    <!--广告界面-->    <RelativeLayout        android:layout_width="match_parent"        android:layout_height="70dp"        android:visibility="gone">        <HorizontalScrollView            android:layout_width="match_parent"            android:layout_height="wrap_content">            <LinearLayout                android:layout_width="match_parent"                android:layout_height="wrap_content">            </LinearLayout>        </HorizontalScrollView>    </RelativeLayout>    <!--显示一个提示-->    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:paddingLeft="10dp"        android:paddingBottom="5dp">        <TextView            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:text="此单还差"            android:textSize="12sp" />        <TextView            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:text="@string/PriceSymbol"            android:textColor="#f30d66"            android:textSize="12sp" />        <TextView            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:text="199"            android:textColor="#f30d66"            android:textSize="12sp" />        <TextView            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:text="元即可免运费立减30元"            android:textSize="12sp" />        <TextView            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:gravity="right"            android:paddingRight="10dp"            android:text="去凑单>"            android:textColor="#f30d66"            android:textSize="10sp" />    </LinearLayout>    <!--购物车主界面-->    <ListView        android:id="@+id/fragment_delivery_shoplistview"        android:layout_width="match_parent"        android:layout_height="match_parent"        android:layout_weight="1"        android:scrollbars="none">    </ListView>    <LinearLayout        android:layout_width="match_parent"        android:layout_height="50dp"        android:layout_weight="0"        android:background="#ffffff"        android:orientation="horizontal">        <RelativeLayout            android:layout_width="50dp"            android:layout_height="50dp"            >            <ImageView                android:id="@+id/fragment_delivery_btnSelect"                android:layout_width="30dp"                android:layout_height="30dp"                android:layout_centerVertical="true"                android:src="@drawable/ico_car_noselect" />            <TextView                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_centerVertical="true"                android:layout_toRightOf="@id/fragment_delivery_btnSelect"                android:text="全选"                android:textSize="10dp" />        </RelativeLayout>        <LinearLayout            android:layout_width="wrap_content"            android:layout_height="match_parent"            android:layout_marginLeft="10dp"            android:orientation="vertical">            <LinearLayout                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_marginTop="5dp">                <TextView                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:text="合计"                    android:textColor="#f30d66"                    android:textSize="13sp" />                <TextView                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:text="@string/PriceSymbol"                    android:textColor="#f30d66"                    android:textSize="10sp" />                <TextView                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:text="789"                    android:textColor="#f30d66"                    android:textSize="13sp"                    android:textStyle="bold" />            </LinearLayout>            <!--显示总额和满减-->            <LinearLayout                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_marginTop="5dp">                <TextView                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:text="总额"                    android:textColor="#f30d66"                    android:textSize="13sp" />                <TextView                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:text="@string/PriceSymbol"                    android:textColor="#f30d66"                    android:textSize="10sp" />                <TextView                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:text="999"                    android:textColor="#f30d66"                    android:textSize="13sp"                    android:textStyle="bold" />                <!--满减  立减 优惠-->                <TextView                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_marginLeft="10dp"                    android:text="优惠"                    android:textColor="#f30d66"                    android:textSize="13sp" />                <TextView                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:text="@string/PriceSymbol"                    android:textColor="#f30d66"                    android:textSize="10sp" />                <TextView                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:text="5"                    android:textColor="#f30d66"                    android:textSize="13sp"                    android:textStyle="bold" />            </LinearLayout>        </LinearLayout>        <!--显示结算和删除-->        <RelativeLayout            android:layout_width="match_parent"            android:layout_height="match_parent">            <TextView                android:layout_width="70dp"                android:layout_height="50dp"                android:layout_alignParentRight="true"                android:layout_centerVertical="true"                android:background="#f30d66"                android:gravity="center"                android:text="结算(80)"                android:textColor="#ffffff"                android:textSize="12sp"                android:textStyle="bold"                />        </RelativeLayout>    </LinearLayout></LinearLayout>