<?xml version="1.0" encoding="utf-8"?><!--可以展示一个背景虚弱的控件  包含标题介绍还有图片--><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:orientation="vertical">    <!--遮罩层-->    <LinearLayout        android:layout_width="match_parent"        android:layout_height="match_parent"        android:alpha="0.5"        android:background="#f30d88">    </LinearLayout>    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content">        <TextView            android:layout_width="match_parent"            android:layout_height="150dp"            android:text="给 爱 一 个 机 会"            android:textColor="#ffffff"            android:textSize="19dp"            android:textStyle="bold" />    </LinearLayout></RelativeLayout>