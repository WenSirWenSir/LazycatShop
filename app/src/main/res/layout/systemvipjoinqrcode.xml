<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"        xmlns:app="http://schemas.android.com/apk/res-auto"        android:layout_width="match_parent"        android:layout_height="match_parent"        android:background="@color/colorVip"        android:fitsSystemWindows="true"        android:orientation="vertical">    <ImageView            android:id="@+id/SystemvipjoinqrcodeBtnBack"            android:layout_width="20dp"            android:layout_height="20dp"            android:layout_alignParentLeft="true"            android:layout_alignParentTop="true"            android:layout_margin="15dp"            android:src="@drawable/ico_back2" />    <ImageView            android:layout_width="100dp"            android:layout_height="100dp"            android:layout_above="@id/SystemVipjoinQRcodeImg"            android:layout_centerHorizontal="true"            android:layout_marginBottom="70dp"            android:src="@drawable/ico_vipjoin" />    <shlm.lmcs.com.lazycat.LazyShopView.SystemTextView            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_above="@id/SystemVipjoinQRcodeImg"            android:layout_marginLeft="10dp"            android:layout_marginRight="10dp"            android:layout_marginBottom="10dp"            android:gravity="center"            android:text="请将该二维码展示给业务人员,为您开通加盟业务"            android:textColor="#ffffff"            android:textSize="13dp" />    <com.makeramen.roundedimageview.RoundedImageView            android:id="@+id/SystemVipjoinQRcodeImg"            android:layout_width="200dp"            android:layout_height="200dp"            android:layout_centerInParent="true"            app:riv_corner_radius="2dp"            app:riv_oval="false" />    <shlm.lmcs.com.lazycat.LazyShopView.SystemTextView            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_below="@id/SystemVipjoinQRcodeImg"            android:layout_marginLeft="10dp"            android:layout_marginTop="10dp"            android:layout_marginRight="10dp"            android:gravity="center"            android:id="@+id/SystemVipjoinQRcodePaymoney"            android:textColor="#ffffff"            android:textSize="13dp" />    <shlm.lmcs.com.lazycat.LazyShopView.SystemTextView            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_alignParentBottom="true"            android:layout_marginLeft="10dp"            android:layout_marginTop="10dp"            android:layout_marginRight="10dp"            android:layout_marginBottom="10dp"            android:gravity="center"            android:text="@string/SystemBottommsg"            android:textColor="#ffffff"            android:textSize="10dp" /></RelativeLayout>