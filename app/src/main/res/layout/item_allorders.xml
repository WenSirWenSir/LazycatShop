<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"        xmlns:app="http://schemas.android.com/apk/res-auto"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:background="#efefef"        android:orientation="vertical"        android:paddingTop="10dp"        android:paddingBottom="10dp">    <!--添加罩层  给清点做准备 其他时候不要用罩层  在无货的时候也要出现该罩层-->    <LinearLayout            android:id="@+id/item_allorderBody"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_marginLeft="10dp"            android:layout_marginRight="10dp"            android:orientation="vertical"            android:paddingTop="5dp"            android:paddingBottom="5dp">        <RelativeLayout                android:layout_width="match_parent"                android:layout_height="20dp">            <shlm.lmcs.com.lazycat.LazyShopView.SystemTextView                    android:id="@+id/item_allorderOrderNumbertitle"                    android:layout_width="wrap_content"                    android:layout_height="match_parent"                    android:layout_centerVertical="true"                    android:layout_marginLeft="5dp"                    android:gravity="center_vertical"                    android:text="发货单号:"                    android:textColor="#020433"                    android:textSize="10dp" />            <shlm.lmcs.com.lazycat.LazyShopView.SystemTextView                    android:id="@+id/item_allorderOrderNumber"                    android:layout_width="wrap_content"                    android:layout_height="match_parent"                    android:layout_centerVertical="true"                    android:layout_toRightOf="@id/item_allorderOrderNumbertitle"                    android:gravity="center_vertical"                    android:paddingBottom="1dp"                    android:textColor="#020433"                    android:textSize="10dp" />            <TextView                    android:id="@+id/item_sendsystemorderact_list_status"                    android:layout_width="100dp"                    android:layout_height="match_parent"                    android:layout_alignParentRight="true"                    android:layout_centerVertical="true"                    android:gravity="center"                    android:paddingLeft="10dp"                    android:textColor="@color/ThemeColor"                    android:textSize="9dp"                    android:visibility="gone" />        </RelativeLayout>        <LinearLayout                android:layout_width="match_parent"                android:layout_height="110dp">            <RelativeLayout                    android:layout_width="110dp"                    android:layout_height="110dp">                <LinearLayout                        android:layout_width="100dp"                        android:layout_height="100dp"                        android:layout_centerInParent="true">                    <com.makeramen.roundedimageview.RoundedImageView                            android:id="@+id/item_allorderImg"                            android:layout_width="match_parent"                            android:layout_height="match_parent"                            app:riv_corner_radius="5dp"                            app:riv_oval="false" />                </LinearLayout>            </RelativeLayout>            <RelativeLayout                    android:layout_width="match_parent"                    android:layout_height="match_parent">                <LinearLayout                        android:layout_width="match_parent"                        android:layout_height="match_parent"                        android:orientation="vertical">                    <LinearLayout                            android:layout_width="match_parent"                            android:layout_height="wrap_content"                            android:orientation="horizontal">                        <RelativeLayout                                android:layout_width="match_parent"                                android:layout_height="wrap_content"                                android:layout_weight="1">                            <shlm.lmcs.com.lazycat.LazyShopView.SystemTextView                                    android:id="@+id/item_allorderTitle"                                    android:layout_width="match_parent"                                    android:layout_height="wrap_content"                                    android:layout_marginTop="15dp"                                    android:layout_marginRight="10dp"                                    android:ellipsize="end"                                    android:maxLines="2"                                    android:paddingTop="2dp"                                    android:paddingBottom="2dp"                                    android:text="海天750味极鲜"                                    android:textColor="#020433"                                    android:textSize="12dp" />                        </RelativeLayout>                        <RelativeLayout                                android:layout_width="wrap_content"                                android:layout_height="50dp"                                android:layout_weight="1">                            <LinearLayout                                    android:layout_width="match_parent"                                    android:layout_height="wrap_content"                                    android:layout_marginTop="13dp"                                    android:orientation="horizontal">                                <shlm.lmcs.com.lazycat.LazyShopView.SystemTextView                                        android:layout_width="wrap_content"                                        android:layout_height="wrap_content"                                        android:text="@string/PriceSymbol"                                        android:textColor="#020433"                                        android:textSize="9dp" />                                <shlm.lmcs.com.lazycat.LazyShopView.PriceNumberView                                        android:id="@+id/item_allorderPaymoney"                                        android:layout_width="wrap_content"                                        android:layout_height="wrap_content"                                        android:layout_marginLeft="2dp"                                        android:text="123"                                        android:textColor="@color/ThemeColor"                                        android:textSize="15dp" />                                <shlm.lmcs.com.lazycat.LazyShopView.SystemTextView                                        android:id="@+id/item_sendSystemorderAct_topayhow"                                        android:layout_width="wrap_content"                                        android:layout_height="wrap_content"                                        android:layout_marginLeft="2dp"                                        android:textColor="#666666"                                        android:textSize="9dp" />                            </LinearLayout>                        </RelativeLayout>                    </LinearLayout>                    <shlm.lmcs.com.lazycat.LazyShopView.SystemTextView                            android:id="@+id/item_allorderSpec"                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:layout_marginTop="5dp"                            android:layout_marginRight="10dp"                            android:ellipsize="end"                            android:maxLines="1"                            android:text="商品规格:24瓶"                            android:textColor="#666666"                            android:textSize="10dp" />                    <shlm.lmcs.com.lazycat.LazyShopView.SystemTextView                            android:id="@+id/item_allorderExp"                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:layout_marginTop="5dp"                            android:layout_marginRight="10dp"                            android:ellipsize="end"                            android:maxLines="1"                            android:text="生产日期:2019-02-03"                            android:textColor="#666666"                            android:textSize="10dp" />                    <shlm.lmcs.com.lazycat.LazyShopView.SystemTextView                            android:id="@+id/item_allorderOrdertime"                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:layout_marginTop="5dp"                            android:layout_marginRight="10dp"                            android:ellipsize="end"                            android:maxLines="1"                            android:text="订单时间:2020-02-03"                            android:textColor="#666666"                            android:textSize="10dp" />                    <!--                                        <TextView                                            android:id="@+id/item_sendsystemorderact_list_sendTopay"                                            android:layout_width="wrap_content"                                            android:layout_height="wrap_content"                                            android:layout_marginTop="5dp"                                            android:layout_marginRight="10dp"                                            android:ellipsize="end"                                            android:maxLines="1"                                            android:textColor="#666666"                                            android:textSize="10sp" />                    -->                    <!--                                        <shlm.lmcs.com.lazycat.LazyShopView.PriceNumberView                                            android:id="@+id/item_sendsystemorderact_list_createTime"                                            android:layout_width="wrap_content"                                            android:layout_height="wrap_content"                                            android:layout_marginTop="5dp"                                            android:layout_marginRight="10dp"                                            android:ellipsize="end"                                            android:maxLines="1"                                            android:textColor="#666666"                                            android:textSize="10sp" />                    -->                </LinearLayout>            </RelativeLayout>        </LinearLayout>        <!--提示运费破损险-->        <RelativeLayout                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_marginTop="10dp">            <LinearLayout                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_marginLeft="15dp">                <shlm.lmcs.com.lazycat.LazyShopView.SystemTextView                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:text="售后服务"                        android:textColor="#020433"                        android:textSize="10dp" />                <shlm.lmcs.com.lazycat.LazyShopView.SystemTextView                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:layout_marginLeft="5dp"                        android:text="加盟商商品维护(退换货)"                        android:textColor="#666666"                        android:textSize="10dp" />            </LinearLayout>            <LinearLayout                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_alignParentRight="true"                    android:layout_marginRight="15dp">                <shlm.lmcs.com.lazycat.LazyShopView.SystemTextView                        android:id="@+id/item_allorderVipstatus"                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:layout_marginLeft="5dp"                        android:text="未生效"                        android:textColor="#666666"                        android:textSize="10dp" />            </LinearLayout>        </RelativeLayout>        <!--提示过期时间-->        <LinearLayout                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_marginTop="10dp"                android:orientation="vertical">            <shlm.lmcs.com.lazycat.LazyShopView.SystemTextView                    android:id="@+id/item_allorderPdcontext"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_marginLeft="15dp"                    android:text="剩余保质期:121(天)"                    android:textColor="@color/colorReserve"                    android:textSize="10dp" />            <shlm.lmcs.com.lazycat.LazyShopView.SystemTextView                    android:id="@+id/item_allorderPd"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_marginLeft="15dp"                    android:layout_marginTop="5dp"                    android:text="到期时间:2020-02-03"                    android:textColor="@color/colorReserve"                    android:textSize="10dp" />        </LinearLayout>        <!--积分是否生效-->        <RelativeLayout                android:id="@+id/item_sendsystemorderact_listIntegralBody"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_marginTop="10dp"                android:visibility="gone">            <LinearLayout                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_marginLeft="15dp">                <shlm.lmcs.com.lazycat.LazyShopView.SystemTextView                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:text="加盟积分"                        android:textColor="#020433"                        android:textSize="10dp" />                <shlm.lmcs.com.lazycat.LazyShopView.SystemTextView                        android:id="@+id/item_sendsystemorderact_listIntegral"                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:layout_marginLeft="5dp"                        android:text="120"                        android:textColor="@color/colorVip"                        android:textSize="10dp"                        android:textStyle="bold" />            </LinearLayout>        </RelativeLayout>        <!--几个按钮  查看订单详情,取消订单-->        <RelativeLayout                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_marginTop="5dp"                android:layout_marginBottom="10dp">            <shlm.lmcs.com.lazycat.LazyShopView.SystemTextView                    android:id="@+id/item_allorderBtntoSeeorder"                    android:layout_width="75dp"                    android:layout_height="20dp"                    android:layout_alignParentRight="true"                    android:layout_marginRight="10dp"                    android:gravity="center"                    android:text="查看详情"                    android:textColor="@color/ThemeColor"                    android:textSize="10dp" />            <shlm.lmcs.com.lazycat.LazyShopView.SystemTextView                    android:id="@+id/item_allorderCustomer"                    android:layout_width="75dp"                    android:layout_height="20dp"                    android:layout_alignParentRight="true"                    android:layout_marginRight="95dp"                    android:gravity="center"                    android:text="请求售后"                    android:textColor="@color/colorRed"                    android:textSize="10dp" />        </RelativeLayout>        <!--点击查看详情-->    </LinearLayout>    <RelativeLayout            android:id="@+id/item_sendSystemorderAct_coverlayer"            android:layout_width="match_parent"            android:layout_height="130dp"            android:visibility="gone">        <LinearLayout                android:id="@+id/item_sendSystemorderAct_coverBackground"                android:layout_width="match_parent"                android:layout_height="match_parent"                android:alpha="0.6"                android:background="@color/ThemeColor"                android:orientation="vertical">        </LinearLayout>        <TextView                android:id="@+id/item_sendSystemorderAct_coverTitle"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_centerInParent="true"                android:text="该商品您已标记点货完毕"                android:textColor="#666666"                android:textSize="25dp"                android:textStyle="bold" />    </RelativeLayout></RelativeLayout>