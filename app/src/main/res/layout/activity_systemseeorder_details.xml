<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:fitsSystemWindows="true"    android:orientation="vertical">    <include layout="@layout/assembly_act_head" />    <shlm.lmcs.com.lazycat.LazyCatProgramUnt.Views.RefreshScrollView        android:id="@+id/activity_systemseeorder_details_ScrollView"        android:layout_width="match_parent"        android:layout_height="match_parent"        android:scrollbars="none">        <LinearLayout            android:layout_width="match_parent"            android:layout_height="match_parent"            android:background="#efefef"            android:orientation="vertical">            <!--头部标签-->            <LinearLayout                android:id="@+id/activity_systemseeorder_details_refreshHead"                android:layout_width="match_parent"                android:layout_height="0dp"                android:background="#efefef"                android:orientation="vertical"                tools:ignore="Suspicious0dp">                <RelativeLayout                    android:layout_width="match_parent"                    android:layout_height="fill_parent">                    <ProgressBar                        android:id="@+id/activity_systemseeorder_details_refreshHeadProgressbar"                        android:layout_width="20dp"                        android:layout_height="20dp"                        android:layout_centerInParent="true" />                    <ImageView                        android:id="@+id/activity_systemseeorder_details_refreshHeadImg"                        android:layout_width="match_parent"                        android:layout_height="fill_parent"                        android:scaleType="fitXY" />                </RelativeLayout>            </LinearLayout>            <LinearLayout                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_marginTop="15dp"                android:layout_marginBottom="10dp">                <TextView                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_marginLeft="15dp"                    android:text="商品信息"                    android:textColor="#020433"                    android:textSize="25sp" />            </LinearLayout>            <LinearLayout                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_marginLeft="10dp"                android:layout_marginRight="10dp">                <include                    android:id="@+id/item_searchshoplist_body"                    layout="@layout/item_searchshoplist" />            </LinearLayout>            <LinearLayout                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_marginTop="25dp">                <TextView                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_marginLeft="15dp"                    android:text="发货单信息"                    android:textColor="#020433"                    android:textSize="25sp" />            </LinearLayout>            <LinearLayout                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_marginTop="15dp"                android:background="#efefef"                android:paddingTop="5dp"                android:paddingBottom="5dp">                <LinearLayout                    android:id="@+id/activity_systemseeorder_details_SendOrdmsgBody"                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_marginLeft="10dp"                    android:layout_marginRight="10dp"                    android:background="#ffffff"                    android:orientation="vertical"                    android:paddingTop="5dp"                    android:paddingBottom="5dp">                    <!--发货单数量-->                    <LinearLayout                        android:layout_width="match_parent"                        android:layout_height="wrap_content"                        android:layout_marginTop="5dp"                        android:orientation="horizontal">                        <TextView                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:layout_marginLeft="5dp"                            android:gravity="right"                            android:text="生产与保质期:"                            android:textColor="#020433"                            android:textSize="13sp" />                        <shlm.lmcs.com.lazycat.LazyShopView.PriceNumberView                            android:id="@+id/activity_systemseeorder_details_Expandpd"                            android:layout_width="match_parent"                            android:layout_height="wrap_content"                            android:textColor="#020433"                            android:textSize="13dp" />                    </LinearLayout>                    <!--发货单数量-->                    <LinearLayout                        android:layout_width="match_parent"                        android:layout_height="wrap_content"                        android:layout_marginTop="5dp"                        android:orientation="horizontal">                        <TextView                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:layout_marginLeft="5dp"                            android:gravity="right"                            android:text="通知发货数量:"                            android:textColor="#020433"                            android:textSize="13sp" />                        <shlm.lmcs.com.lazycat.LazyShopView.PriceNumberView                            android:id="@+id/activity_systemseeorder_details_toPayhow"                            android:layout_width="match_parent"                            android:layout_height="wrap_content"                            android:textColor="#020433"                            android:textSize="13sp" />                    </LinearLayout>                    <!--交易单号-->                    <LinearLayout                        android:layout_width="match_parent"                        android:layout_height="wrap_content"                        android:layout_marginTop="5dp"                        android:orientation="horizontal">                        <TextView                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:layout_marginLeft="5dp"                            android:gravity="right"                            android:text="交易订单号:"                            android:textColor="#020433"                            android:textSize="13sp" />                        <shlm.lmcs.com.lazycat.LazyShopView.PriceNumberView                            android:id="@+id/activity_systemseeorder_details_Ordernumbr"                            android:layout_width="match_parent"                            android:layout_height="wrap_content"                            android:textColor="#020433"                            android:textSize="13sp" />                    </LinearLayout>                    <!--创建订单的时间-->                    <LinearLayout                        android:layout_width="match_parent"                        android:layout_height="wrap_content"                        android:layout_marginTop="5dp"                        android:orientation="horizontal">                        <TextView                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:layout_marginLeft="5dp"                            android:gravity="right"                            android:text="订单提交时间:"                            android:textColor="#020433"                            android:textSize="13sp" />                        <shlm.lmcs.com.lazycat.LazyShopView.PriceNumberView                            android:id="@+id/activity_systemseeorder_details_sendOrderTime"                            android:layout_width="match_parent"                            android:layout_height="wrap_content"                            android:textColor="#020433"                            android:textSize="13sp" />                    </LinearLayout>                    <!--时间戳-->                    <LinearLayout                        android:layout_width="match_parent"                        android:layout_height="wrap_content"                        android:layout_marginTop="5dp"                        android:orientation="horizontal">                        <TextView                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:layout_marginLeft="5dp"                            android:gravity="right"                            android:text="时间戳:"                            android:textColor="#020433"                            android:textSize="13sp" />                        <shlm.lmcs.com.lazycat.LazyShopView.PriceNumberView                            android:id="@+id/activity_systemseeorder_details_timeStamp"                            android:layout_width="match_parent"                            android:layout_height="wrap_content"                            android:textColor="#020433"                            android:textSize="13sp" />                    </LinearLayout>                    <!--是否售后服务-->                    <LinearLayout                        android:layout_width="match_parent"                        android:layout_height="wrap_content"                        android:layout_marginTop="5dp"                        android:orientation="horizontal">                        <TextView                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:layout_marginLeft="5dp"                            android:gravity="right"                            android:text="售后服务:"                            android:textColor="#020433"                            android:textSize="13sp" />                        <TextView                            android:id="@+id/activity_systemseeorder_details_servicemsg"                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:paddingLeft="8dp"                            android:paddingTop="1dp"                            android:paddingRight="8dp"                            android:paddingBottom="1dp"                            android:textColor="#020433"                            android:textSize="13sp" />                    </LinearLayout>                    <!--选择支付方式-->                    <LinearLayout                        android:layout_width="match_parent"                        android:layout_height="wrap_content"                        android:layout_marginTop="5dp"                        android:orientation="horizontal">                        <TextView                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:layout_marginLeft="5dp"                            android:gravity="right"                            android:text="支付方式:"                            android:textColor="#020433"                            android:textSize="13sp" />                        <TextView                            android:layout_width="match_parent"                            android:layout_height="wrap_content"                            android:text="货到付款"                            android:textColor="#020433"                            android:textSize="13sp" />                    </LinearLayout>                </LinearLayout>            </LinearLayout>            <LinearLayout                android:layout_width="match_parent"                android:layout_height="wrap_content">            </LinearLayout>            <!--展示推荐的商品-->            <RelativeLayout                android:layout_width="match_parent"                android:layout_height="30dp"                android:background="#efefef">                <LinearLayout                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_centerInParent="true"                    android:gravity="center">                    <ImageView                        android:layout_width="20dp"                        android:layout_height="20dp"                        android:src="@drawable/ico_like" />                    <TextView                        android:layout_width="wrap_content"                        android:layout_height="25dp"                        android:gravity="center"                        android:paddingLeft="15dp"                        android:paddingRight="15dp"                        android:text="为您推荐"                        android:textColor="#020433"                        android:textSize="12sp" />                    <ImageView                        android:layout_width="20dp"                        android:layout_height="20dp"                        android:src="@drawable/ico_like" />                </LinearLayout>            </RelativeLayout>            <!--显示商品区域-->            <LinearLayout                android:id="@+id/activity_systemseeorder_details_ShowShopbody"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_marginLeft="5dp"                android:layout_marginRight="5dp"                android:orientation="vertical">            </LinearLayout>            <LinearLayout                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_marginTop="10dp"                android:orientation="vertical">            </LinearLayout>        </LinearLayout>    </shlm.lmcs.com.lazycat.LazyCatProgramUnt.Views.RefreshScrollView></LinearLayout>