<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:fitsSystemWindows="false"    android:orientation="vertical">    <include layout="@layout/assembly_act_head" />    <shlm.lmcs.com.lazycat.LazyCatProgramUnt.Views.RefreshScrollView        android:layout_width="match_parent"        android:layout_height="match_parent">        <LinearLayout            android:layout_width="match_parent"            android:layout_height="match_parent"            android:orientation="vertical">            <RelativeLayout                android:layout_width="match_parent"                android:layout_height="wrap_content">                <!--显示倒计时-->                <TextView                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_marginLeft="15dp"                    android:layout_marginTop="15dp"                    android:text="配送剩余时间(单位:秒)"                    android:textColor="#020433"                    android:textSize="12sp" />            </RelativeLayout>            <RelativeLayout                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_marginTop="15dp"                >                <shlm.lmcs.com.lazycat.LazyShopView.PriceNumberView                    android:id="@+id/activity_systemseeorder_detailsSurplusTime"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_centerInParent="true"                    android:text="86400"                    android:textColor="@color/ThemeColor"                    android:textSize="65sp" />                <TextView                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_toRightOf="@id/activity_systemseeorder_detailsSurplusTime"                    android:background="@color/colorVip"                    android:paddingLeft="5dp"                    android:id="@+id/activity_systemseeorder_details_VipMsg"                    android:paddingTop="1dp"                    android:paddingRight="5dp"                    android:paddingBottom="1dp"                    android:text="Vip超时赔付"                    android:textColor="#ffffff"                    android:textSize="10sp" />            </RelativeLayout>            <LinearLayout                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_marginTop="25dp">                <TextView                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_marginLeft="15dp"                    android:text="商品信息"                    android:textColor="#020433"                    android:textSize="25sp" />            </LinearLayout>            <!--分割线条-->            <View                android:layout_width="match_parent"                android:layout_height="2dp"                android:layout_marginTop="10dp"                android:background="@drawable/border_dotted_line"                android:layerType="software" />            <include layout="@layout/item_searchshoplist" />            <!--显示订单号-->            <LinearLayout                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_marginTop="15dp"                android:background="#efefef"                android:paddingTop="5dp"                android:paddingBottom="5dp">                <LinearLayout                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:background="#ffffff"                    android:orientation="vertical"                    android:paddingTop="5dp"                    android:paddingBottom="5dp">                    <!--交易单号-->                    <LinearLayout                        android:layout_width="match_parent"                        android:layout_height="wrap_content"                        android:orientation="horizontal">                        <TextView                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:layout_marginLeft="5dp"                            android:gravity="right"                            android:text="交易订单号:"                            android:textColor="#020433"                            android:textSize="13sp" />                        <shlm.lmcs.com.lazycat.LazyShopView.PriceNumberView                            android:layout_width="match_parent"                            android:layout_height="wrap_content"                            android:text="0823850004"                            android:textColor="#020433" />                    </LinearLayout>                    <!--创建订单的时间-->                    <LinearLayout                        android:layout_width="match_parent"                        android:layout_height="wrap_content"                        android:layout_marginTop="5dp"                        android:orientation="horizontal">                        <TextView                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:layout_marginLeft="5dp"                            android:gravity="right"                            android:text="订单提交时间:"                            android:textColor="#020433"                            android:textSize="13sp" />                        <shlm.lmcs.com.lazycat.LazyShopView.PriceNumberView                            android:layout_width="match_parent"                            android:layout_height="wrap_content"                            android:text="2017-08-09"                            android:textColor="#020433" />                    </LinearLayout>                    <!--时间戳-->                    <LinearLayout                        android:layout_width="match_parent"                        android:layout_height="wrap_content"                        android:layout_marginTop="5dp"                        android:orientation="horizontal">                        <TextView                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:layout_marginLeft="5dp"                            android:gravity="right"                            android:text="时间戳:"                            android:textColor="#020433"                            android:textSize="13sp" />                        <shlm.lmcs.com.lazycat.LazyShopView.PriceNumberView                            android:layout_width="match_parent"                            android:layout_height="wrap_content"                            android:text="198764758"                            android:textColor="#020433" />                    </LinearLayout>                    <!--是否售后服务-->                    <LinearLayout                        android:layout_width="match_parent"                        android:layout_height="wrap_content"                        android:layout_marginTop="5dp"                        android:orientation="horizontal">                        <TextView                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:layout_marginLeft="5dp"                            android:gravity="right"                            android:text="售后服务:"                            android:textColor="#020433"                            android:textSize="13sp" />                        <TextView                            android:layout_width="match_parent"                            android:layout_height="wrap_content"                            android:text="过期前退款,其他条件退款"                            android:textColor="#020433"                            android:textSize="13sp" />                    </LinearLayout>                    <!--选择支付方式-->                    <LinearLayout                        android:layout_width="match_parent"                        android:layout_height="wrap_content"                        android:layout_marginTop="5dp"                        android:orientation="horizontal">                        <TextView                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:layout_marginLeft="5dp"                            android:gravity="right"                            android:text="支付方式:"                            android:textColor="#020433"                            android:textSize="13sp" />                        <TextView                            android:layout_width="match_parent"                            android:layout_height="wrap_content"                            android:text="货到付款(商户选择支付方式)"                            android:textColor="#020433"                            android:textSize="13sp" />                    </LinearLayout>                </LinearLayout>            </LinearLayout>            <!--展示推荐的商品-->            <RelativeLayout                android:layout_width="match_parent"                android:layout_height="30dp"                android:background="#ffffff">                <LinearLayout                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_centerInParent="true"                    android:gravity="center">                    <ImageView                        android:layout_width="20dp"                        android:layout_height="20dp"                        android:src="@drawable/ico_like" />                    <TextView                        android:layout_width="wrap_content"                        android:layout_height="25dp"                        android:gravity="center"                        android:paddingLeft="15dp"                        android:paddingRight="15dp"                        android:text="为您推荐"                        android:textColor="#020433"                        android:textSize="12sp" />                    <ImageView                        android:layout_width="20dp"                        android:layout_height="20dp"                        android:src="@drawable/ico_like" />                </LinearLayout>            </RelativeLayout>            <!--显示商品区域-->            <LinearLayout                android:layout_width="match_parent"                android:layout_height="wrap_content">            </LinearLayout>        </LinearLayout>    </shlm.lmcs.com.lazycat.LazyCatProgramUnt.Views.RefreshScrollView></LinearLayout>