<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:fitsSystemWindows="false"    android:orientation="vertical">    <include layout="@layout/assembly_act_head" />    <shlm.lmcs.com.lazycat.LazyCatProgramUnt.Views.RefreshScrollView        android:layout_width="match_parent"        android:layout_height="match_parent">        <LinearLayout            android:layout_width="match_parent"            android:layout_height="match_parent"            android:orientation="vertical">            <RelativeLayout                android:layout_width="match_parent"                android:layout_height="wrap_content">                <!--显示倒计时-->                <TextView                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_marginLeft="15dp"                    android:layout_marginTop="15dp"                    android:text="配送剩余时间(单位:秒)"                    android:textColor="#020433"                    android:textSize="12sp" />            </RelativeLayout>            <RelativeLayout                android:layout_width="match_parent"                android:layout_height="wrap_content">                <shlm.lmcs.com.lazycat.LazyShopView.PriceNumberView                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_centerInParent="true"                    android:text="86400"                    android:textColor="@color/colorPrice"                    android:textSize="65sp" />            </RelativeLayout>            <LinearLayout                android:layout_width="match_parent"                android:layout_height="wrap_content">                <TextView                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:text="商品信息"                    />            </LinearLayout>        </LinearLayout>    </shlm.lmcs.com.lazycat.LazyCatProgramUnt.Views.RefreshScrollView></LinearLayout>