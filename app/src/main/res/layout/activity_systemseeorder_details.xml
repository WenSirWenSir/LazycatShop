<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:fitsSystemWindows="true"    android:orientation="vertical">    <include layout="@layout/assembly_act_head" />    <shlm.lmcs.com.lazycat.LazyCatProgramUnt.Views.RefreshScrollView        android:id="@+id/activity_systemseeorder_details_ScrollView"        android:layout_width="match_parent"        android:scrollbars="none"        android:layout_height="match_parent">        <LinearLayout            android:layout_width="match_parent"            android:layout_height="match_parent"            android:orientation="vertical">            <!--头部标签-->            <LinearLayout                android:id="@+id/activity_systemseeorder_details_refreshHead"                android:layout_width="match_parent"                android:layout_height="0dp"                android:background="#efefef"                android:orientation="vertical"                tools:ignore="Suspicious0dp">                <RelativeLayout                    android:layout_width="match_parent"                    android:layout_height="fill_parent">                    <ProgressBar                        android:id="@+id/activity_systemseeorder_details_refreshHeadProgressbar"                        android:layout_width="20dp"                        android:layout_height="20dp"                        android:layout_centerInParent="true" />                    <ImageView                        android:id="@+id/activity_systemseeorder_details_refreshHeadImg"                        android:layout_width="match_parent"                        android:layout_height="fill_parent"                        android:scaleType="fitXY" />                </RelativeLayout>            </LinearLayout>            <RelativeLayout                android:layout_width="match_parent"                android:layout_height="wrap_content">                <!--显示倒计时-->                <TextView                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_marginLeft="15dp"                    android:layout_marginTop="15dp"                    android:text="配送剩余时间(单位:秒)"                    android:textColor="#020433"                    android:textSize="12sp" />            </RelativeLayout>            <RelativeLayout                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_marginTop="15dp">                <shlm.lmcs.com.lazycat.LazyShopView.PriceNumberView                    android:id="@+id/activity_systemseeorder_detailsSurplusTime"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_centerInParent="true"                    android:textColor="@color/ThemeColor"                    android:textSize="65sp" />                <TextView                    android:id="@+id/activity_systemseeorder_details_VipMsg"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_marginLeft="15dp"                    android:layout_toRightOf="@id/activity_systemseeorder_detailsSurplusTime"                    android:background="@color/colorVip"                    android:paddingLeft="5dp"                    android:paddingTop="1dp"                    android:paddingRight="5dp"                    android:paddingBottom="1dp"                    android:text="Vip超时赔付"                    android:textColor="#ffffff"                    android:textSize="10sp" />            </RelativeLayout>            <LinearLayout                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_marginTop="25dp">                <TextView                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_marginLeft="15dp"                    android:text="商品信息"                    android:textColor="#020433"                    android:textSize="25sp" />            </LinearLayout>            <!--分割线条-->            <View                android:layout_width="match_parent"                android:layout_height="2dp"                android:layout_marginTop="10dp"                android:background="@drawable/border_dotted_line"                android:layerType="software" />            <include layout="@layout/item_searchshoplist"                android:id="@+id/item_searchshoplist_body"                />            <!--设置取消订单的按钮-->            <RelativeLayout                android:layout_width="match_parent"                android:layout_height="wrap_content">                <TextView                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_alignParentRight="true"                    android:layout_marginRight="5dp"                    android:background="@color/colorPrice"                    android:id="@+id/activity_systemseeorder_details_btnCancaleOrder"                    android:paddingLeft="5dp"                    android:paddingTop="2dp"                    android:paddingRight="5dp"                    android:paddingBottom="2dp"                    android:text="取消订单"                    android:textColor="#ffffff"                    android:textSize="11sp" />            </RelativeLayout>            <LinearLayout                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_marginTop="25dp">                <TextView                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_marginLeft="15dp"                    android:text="发货单信息"                    android:textColor="#020433"                    android:textSize="25sp" />            </LinearLayout>            <LinearLayout                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_marginTop="15dp"                android:background="#efefef"                android:paddingTop="5dp"                android:paddingBottom="5dp">                <LinearLayout                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:background="#ffffff"                    android:orientation="vertical"                    android:paddingTop="5dp"                    android:paddingBottom="5dp">                    <!--发货单数量-->                    <LinearLayout                        android:layout_width="match_parent"                        android:layout_height="wrap_content"                        android:layout_marginTop="5dp"                        android:orientation="horizontal">                        <TextView                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:layout_marginLeft="5dp"                            android:gravity="right"                            android:text="生产与保质期:"                            android:textColor="#020433"                            android:textSize="13sp" />                        <shlm.lmcs.com.lazycat.LazyShopView.PriceNumberView                            android:id="@+id/activity_systemseeorder_details_Expandpd"                            android:layout_width="match_parent"                            android:layout_height="wrap_content"                            android:textSize="13dp"                            android:textColor="#020433" />                    </LinearLayout>                    <!--发货单数量-->                    <LinearLayout                        android:layout_width="match_parent"                        android:layout_height="wrap_content"                        android:layout_marginTop="5dp"                        android:orientation="horizontal">                        <TextView                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:layout_marginLeft="5dp"                            android:gravity="right"                            android:text="通知发货数量:"                            android:textColor="#020433"                            android:textSize="13sp" />                        <shlm.lmcs.com.lazycat.LazyShopView.PriceNumberView                            android:id="@+id/activity_systemseeorder_details_toPayhow"                            android:layout_width="match_parent"                            android:layout_height="wrap_content"                            android:textSize="13sp"                            android:textColor="#020433" />                    </LinearLayout>                    <!--交易单号-->                    <LinearLayout                        android:layout_width="match_parent"                        android:layout_height="wrap_content"                        android:layout_marginTop="5dp"                        android:orientation="horizontal">                        <TextView                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:layout_marginLeft="5dp"                            android:gravity="right"                            android:text="交易订单号:"                            android:textColor="#020433"                            android:textSize="13sp" />                        <shlm.lmcs.com.lazycat.LazyShopView.PriceNumberView                            android:id="@+id/activity_systemseeorder_details_Ordernumbr"                            android:layout_width="match_parent"                            android:layout_height="wrap_content"                            android:textSize="13sp"                            android:textColor="#020433" />                    </LinearLayout>                    <!--创建订单的时间-->                    <LinearLayout                        android:layout_width="match_parent"                        android:layout_height="wrap_content"                        android:layout_marginTop="5dp"                        android:orientation="horizontal">                        <TextView                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:layout_marginLeft="5dp"                            android:gravity="right"                            android:text="订单提交时间:"                            android:textColor="#020433"                            android:textSize="13sp" />                        <shlm.lmcs.com.lazycat.LazyShopView.PriceNumberView                            android:layout_width="match_parent"                            android:layout_height="wrap_content"                            android:id="@+id/activity_systemseeorder_details_sendOrderTime"                            android:textSize="13sp"                            android:textColor="#020433" />                    </LinearLayout>                    <!--时间戳-->                    <LinearLayout                        android:layout_width="match_parent"                        android:layout_height="wrap_content"                        android:layout_marginTop="5dp"                        android:orientation="horizontal">                        <TextView                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:layout_marginLeft="5dp"                            android:gravity="right"                            android:text="时间戳:"                            android:textColor="#020433"                            android:textSize="13sp" />                        <shlm.lmcs.com.lazycat.LazyShopView.PriceNumberView                            android:layout_width="match_parent"                            android:id="@+id/activity_systemseeorder_details_timeStamp"                            android:layout_height="wrap_content"                            android:textSize="13sp"                            android:textColor="#020433" />                    </LinearLayout>                    <!--是否售后服务-->                    <LinearLayout                        android:layout_width="match_parent"                        android:layout_height="wrap_content"                        android:layout_marginTop="5dp"                        android:orientation="horizontal">                        <TextView                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:layout_marginLeft="5dp"                            android:gravity="right"                            android:text="售后服务:"                            android:textColor="#020433"                            android:textSize="13sp" />                        <TextView                            android:layout_width="match_parent"                            android:layout_height="wrap_content"                            android:id="@+id/activity_systemseeorder_details_servicemsg"                            android:textColor="#020433"                            android:textSize="13sp" />                    </LinearLayout>                    <!--选择支付方式-->                    <LinearLayout                        android:layout_width="match_parent"                        android:layout_height="wrap_content"                        android:layout_marginTop="5dp"                        android:orientation="horizontal">                        <TextView                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:layout_marginLeft="5dp"                            android:gravity="right"                            android:text="支付方式:"                            android:textColor="#020433"                            android:textSize="13sp" />                        <TextView                            android:layout_width="match_parent"                            android:layout_height="wrap_content"                            android:text="货到付款(商户选择支付方式)"                            android:textColor="#020433"                            android:textSize="13sp" />                    </LinearLayout>                </LinearLayout>            </LinearLayout>            <LinearLayout                android:layout_width="match_parent"                android:layout_height="wrap_content">            </LinearLayout>            <!--展示推荐的商品-->            <RelativeLayout                android:layout_width="match_parent"                android:layout_height="30dp"                android:background="#ffffff">                <LinearLayout                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_centerInParent="true"                    android:gravity="center">                    <ImageView                        android:layout_width="20dp"                        android:layout_height="20dp"                        android:src="@drawable/ico_like" />                    <TextView                        android:layout_width="wrap_content"                        android:layout_height="25dp"                        android:gravity="center"                        android:paddingLeft="15dp"                        android:paddingRight="15dp"                        android:text="为您推荐"                        android:textColor="#020433"                        android:textSize="12sp" />                    <ImageView                        android:layout_width="20dp"                        android:layout_height="20dp"                        android:src="@drawable/ico_like" />                </LinearLayout>            </RelativeLayout>            <!--显示商品区域-->            <LinearLayout                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:orientation="vertical">                <include layout="@layout/item_verticalshowshop" />            </LinearLayout>            <LinearLayout                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_marginTop="10dp"                android:orientation="vertical">                <include layout="@layout/item_verticalshowshop" />            </LinearLayout>        </LinearLayout>    </shlm.lmcs.com.lazycat.LazyCatProgramUnt.Views.RefreshScrollView></LinearLayout>