<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:fitsSystemWindows="true"    android:orientation="vertical">    <!--头部文件-->    <include layout="@layout/assembly_act_head" />    <!--引入布局 -->    <include layout="@layout/item_sendsystemorderact_list" />    <LinearLayout        android:layout_width="match_parent"        android:layout_height="30dp"        android:layout_marginTop="15dp"        android:orientation="horizontal">        <RelativeLayout            android:layout_width="wrap_content"            android:layout_height="30dp">            <TextView                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_centerVertical="true"                android:text="请你选择退货的原因:"                android:textColor="@color/colorText"                android:textSize="15sp" />        </RelativeLayout>        <LinearLayout            android:layout_width="0dp"            android:layout_height="wrap_content"            android:layout_weight="1">            <Spinner                android:id="@+id/activity_systemrefuseshop_spinner"                android:layout_width="match_parent"                android:layout_height="30dp">            </Spinner>        </LinearLayout>    </LinearLayout>    <RelativeLayout        android:layout_width="match_parent"        android:layout_height="match_parent">        <LinearLayout            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_alignParentTop="true"            android:orientation="vertical">            <TextView                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_marginLeft="10dp"                android:layout_marginTop="25dp"                android:text="温馨提示"                android:textColor="#020433"                android:textSize="15sp"                android:textStyle="bold" />            <TextView                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_marginLeft="10dp"                android:layout_marginTop="10dp"                android:text="@string/toRefuseMsg"                android:textColor="#020433"                android:textSize="13sp"                android:textStyle="bold" />        </LinearLayout>        <TextView            android:id="@+id/activity_systemrefuseshop_btnRefuse"            android:layout_width="150dp"            android:layout_height="35dp"            android:layout_alignParentBottom="true"            android:layout_centerHorizontal="true"            android:layout_marginBottom="15dp"            android:gravity="center"            android:text="我已确定退货"            android:textSize="13sp" />    </RelativeLayout></LinearLayout>