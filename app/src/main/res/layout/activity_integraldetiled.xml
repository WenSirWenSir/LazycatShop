<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:fitsSystemWindows="true"    android:orientation="vertical">    <include layout="@layout/assembly_act_head" />    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:orientation="vertical"        android:paddingTop="5dp"        android:paddingBottom="5dp"        >        <!--显示选择日期-->        <Spinner            android:id="@+id/activity_integraldetiledDate"            android:layout_width="150dp"            android:layout_height="30dp"            android:layout_marginLeft="10dp"            android:layout_marginTop="5dp"            android:gravity="center|left"            android:inputType="number"            android:textSize="13sp" />        <TextView            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_marginLeft="10dp"            android:layout_marginTop="5dp"            android:text="获取积分:80000,提现积分:200"            android:textColor="#000000"            android:textSize="10sp"            android:textStyle="bold" />    </LinearLayout>    <ListView        android:id="@+id/activity_integraldetiledListview"        android:layout_width="match_parent"        android:layout_height="match_parent"        android:divider="#00000000"        android:dividerHeight="0dp"        android:listSelector="@color/transparent"        android:scrollbars="none">    </ListView></LinearLayout>