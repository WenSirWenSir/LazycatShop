<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"        android:layout_width="match_parent"        android:layout_height="match_parent"        android:background="#efefef"        android:fitsSystemWindows="true"        android:orientation="vertical">    <include layout="@layout/assembly_act_head" />    <ListView            android:id="@+id/activity_integraldetiledListview"            android:layout_width="match_parent"            android:layout_height="match_parent"            android:layout_weight="1"            android:divider="@null"            android:dividerHeight="0dp"            android:listSelector="@color/transparent"            android:scrollbars="none">    </ListView>    <LinearLayout            android:layout_width="match_parent"            android:layout_height="180dp"            android:layout_weight="1"            android:background="#efefef"            android:orientation="vertical"            android:paddingTop="5dp">        <LinearLayout                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:orientation="horizontal">            <shlm.lmcs.com.lazycat.LazyShopView.SystemTextView                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_marginLeft="10dp"                    android:layout_marginTop="5dp"                    android:layout_marginBottom="5dp"                    android:text="本月总积分:"                    android:textColor="#000000"                    android:textSize="13dp"                    android:textStyle="bold" />            <shlm.lmcs.com.lazycat.LazyShopView.SystemTextView                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_marginLeft="3dp"                    android:layout_marginTop="5dp"                    android:layout_marginBottom="5dp"                    android:text="8000"                    android:textColor="@color/ThemeColor"                    android:textSize="13dp"                    android:textStyle="bold" />            <shlm.lmcs.com.lazycat.LazyShopView.SystemTextView                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_marginLeft="10dp"                    android:layout_marginTop="5dp"                    android:layout_marginBottom="5dp"                    android:text="本月使用积分:"                    android:textColor="#000000"                    android:textSize="13dp"                    android:textStyle="bold" />            <shlm.lmcs.com.lazycat.LazyShopView.SystemTextView                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_marginLeft="3dp"                    android:layout_marginTop="5dp"                    android:layout_marginBottom="5dp"                    android:text="8000"                    android:textColor="@color/colorPrice"                    android:textSize="13dp"                    android:textStyle="bold" />        </LinearLayout>        <RelativeLayout                android:layout_width="match_parent"                android:layout_height="wrap_content">            <!--显示选择日期-->            <shlm.lmcs.com.lazycat.LazyShopView.SystemTextView                    android:id="@+id/activity_integraldetiledBtnSelectDate"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_centerInParent="true"                    android:paddingLeft="35dp"                    android:paddingTop="7dp"                    android:paddingRight="35dp"                    android:paddingBottom="7dp"                    android:text="选择日期"                    android:textSize="13dp" />        </RelativeLayout>    </LinearLayout></LinearLayout>