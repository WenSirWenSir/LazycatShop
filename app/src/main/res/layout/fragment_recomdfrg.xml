<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"        android:layout_width="match_parent"        android:layout_height="match_parent"        android:orientation="vertical">    <include layout="@layout/assembly_act_head" />    <RelativeLayout            android:layout_width="match_parent"            android:layout_height="match_parent">        <ListView                android:id="@+id/fragment_recomdfrgListview"                android:layout_width="match_parent"                android:layout_height="match_parent"                android:layout_marginBottom="45dp"                android:background="#efefef"                android:divider="@null"                android:overScrollMode="never"                android:scrollbars="none">        </ListView>        <RelativeLayout                android:layout_width="match_parent"                android:layout_height="45dp"                android:layout_alignParentBottom="true">            <LinearLayout                    android:id="@+id/fragment_recomdfrgOrderMsg"                    android:layout_width="match_parent"                    android:layout_height="match_parent"                    android:orientation="vertical">            </LinearLayout>            <LinearLayout                    android:layout_width="match_parent"                    android:layout_height="20dp"                    android:layout_alignParentBottom="true"                    android:background="#efefef">            </LinearLayout>        </RelativeLayout>    </RelativeLayout></LinearLayout>