<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:orientation="horizontal"    android:background="#efefef"    >    <LinearLayout        android:layout_width="0dp"        android:layout_height="wrap_content"        android:layout_weight="1"        android:layout_marginRight="1dp"        android:layout_marginLeft="2dp"        android:layout_marginTop="2dp"        android:id="@+id/item_verticalshowshop_leftShopbody"        android:layout_marginBottom="2dp"        android:background="#ffffff"        android:orientation="vertical"        android:paddingBottom="10dp"        >        <RelativeLayout            android:layout_width="match_parent"            android:layout_height="210dp">            <ImageView                android:layout_width="200dp"                android:layout_height="200dp"                android:id="@+id/item_verticalshowShop_leftimg"                android:layout_centerInParent="true"                />        </RelativeLayout>        <LinearLayout            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_marginLeft="5dp"            android:layout_marginTop="5dp"            android:gravity="center_vertical">            <TextView                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:background="@color/ThemeColor"                android:paddingLeft="3dp"                android:paddingTop="1dp"                android:paddingRight="3dp"                android:visibility="gone"                android:id="@+id/item_verticalshowShop_leftstatus"                android:paddingBottom="1dp"                android:textSize="10sp" />            <TextView                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:id="@+id/item_verticalshowShop_lefttitle"                android:layout_marginRight="5dp"                android:ellipsize="end"                android:maxLines="1"                android:paddingLeft="5dp"                android:textColor="#000000"                android:textSize="12sp"                android:textStyle="bold" />        </LinearLayout>        <!--价格-->        <LinearLayout            android:layout_width="match_parent"            android:layout_height="30dp"            android:layout_marginLeft="5dp"            android:layout_marginTop="10dp"            android:orientation="horizontal">            <shlm.lmcs.com.lazycat.LazyShopView.PriceNumberView                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:text="@string/PriceSymbol"                android:textColor="#020433"                android:textSize="10sp"                android:textStyle="bold" />            <shlm.lmcs.com.lazycat.LazyShopView.PriceNumberView                android:layout_width="wrap_content"                android:layout_height="match_parent"                android:layout_marginLeft="2dp"                android:id="@+id/item_verticalshowShop_lefttp"                android:textSize="17sp" />            <shlm.lmcs.com.lazycat.LazyShopView.PriceNumberView                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_marginLeft="2dp"                android:id="@+id/item_verticalshowShop_leftcompany"                android:textColor="#020433"                android:textSize="10sp"                android:textStyle="bold" />            <shlm.lmcs.com.lazycat.LazyShopView.PriceNumberView                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_marginLeft="2dp"                android:id="@+id/item_verticalshowShop_leftdp"                android:textColor="#666666"                android:textSize="10sp"                android:visibility="gone" />        </LinearLayout>        <!--商家地址-->    </LinearLayout>    <LinearLayout        android:layout_width="0dp"        android:layout_height="wrap_content"        android:layout_weight="1"        android:layout_marginTop="2dp"        android:id="@+id/item_verticalshowshop_rightShopbody"        android:layout_marginBottom="2dp"        android:orientation="vertical"        android:layout_marginLeft="1dp"        android:background="#ffffff"        android:paddingBottom="10dp"        >        <RelativeLayout            android:layout_width="match_parent"            android:layout_height="210dp">            <ImageView                android:layout_width="200dp"                android:layout_height="200dp"                android:id="@+id/item_verticalshowShop_rightimg"                android:layout_centerInParent="true"                />        </RelativeLayout>        <LinearLayout            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_marginLeft="5dp"            android:layout_marginTop="5dp"            android:gravity="center_vertical">            <TextView                android:id="@+id/item_verticalshowShop_rightstatus"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:background="@color/ThemeColor"                android:paddingLeft="3dp"                android:paddingTop="1dp"                android:paddingRight="3dp"                android:paddingBottom="1dp"                android:visibility="gone"                android:textSize="10sp" />            <TextView                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:id="@+id/item_verticalshowShop_righttitle"                android:layout_marginRight="5dp"                android:ellipsize="end"                android:maxLines="1"                android:paddingLeft="5dp"                android:textColor="#000000"                android:textSize="12sp"                android:textStyle="bold" />        </LinearLayout>        <!--价格-->        <LinearLayout            android:layout_width="match_parent"            android:layout_height="30dp"            android:layout_marginLeft="5dp"            android:layout_marginTop="10dp"            android:orientation="horizontal">            <shlm.lmcs.com.lazycat.LazyShopView.PriceNumberView                android:id="@+id/item_searchshoplist_priceSymbol"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:text="@string/PriceSymbol"                android:textColor="#020433"                android:textSize="10sp"                android:textStyle="bold" />            <shlm.lmcs.com.lazycat.LazyShopView.PriceNumberView                android:id="@+id/item_verticalshowShop_righttp"                android:layout_width="wrap_content"                android:layout_height="match_parent"                android:layout_marginLeft="2dp"                android:textSize="17sp" />            <shlm.lmcs.com.lazycat.LazyShopView.PriceNumberView                android:id="@+id/item_verticalshowShop_rightcompany"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_marginLeft="2dp"                android:textColor="#020433"                android:textSize="10sp"                android:textStyle="bold" />            <shlm.lmcs.com.lazycat.LazyShopView.PriceNumberView                android:id="@+id/item_verticalshowShop_rightdp"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_marginLeft="2dp"                android:textColor="#666666"                android:textSize="10sp"                android:visibility="gone" />        </LinearLayout>        <!--商家地址-->    </LinearLayout></LinearLayout>