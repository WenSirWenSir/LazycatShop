<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:orientation="horizontal"    >    <LinearLayout        android:layout_width="0dp"        android:layout_height="wrap_content"        android:layout_weight="1"        android:orientation="vertical"        android:paddingBottom="10dp"        >        <RelativeLayout            android:layout_width="match_parent"            android:layout_height="210dp">            <ImageView                android:layout_width="200dp"                android:layout_height="200dp"                android:layout_centerInParent="true"                />        </RelativeLayout>        <LinearLayout            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_marginLeft="5dp"            android:layout_marginTop="5dp"            android:gravity="center_vertical">            <TextView                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:background="@color/ThemeColor"                android:paddingLeft="3dp"                android:paddingTop="1dp"                android:paddingRight="3dp"                android:paddingBottom="1dp"                android:text="促销"                android:textSize="10sp" />            <TextView                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_marginRight="5dp"                android:ellipsize="end"                android:maxLines="1"                android:paddingLeft="5dp"                android:text="海天750味极鲜"                android:textColor="#000000"                android:textSize="12sp"                android:textStyle="bold" />        </LinearLayout>        <!--价格-->        <LinearLayout            android:layout_width="match_parent"            android:layout_height="30dp"            android:layout_marginLeft="5dp"            android:layout_marginTop="10dp"            android:orientation="horizontal">            <shlm.lmcs.com.lazycat.LazyShopView.PriceNumberView                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:text="@string/PriceSymbol"                android:textColor="#020433"                android:textSize="10sp"                android:textStyle="bold" />            <shlm.lmcs.com.lazycat.LazyShopView.PriceNumberView                android:layout_width="wrap_content"                android:layout_height="match_parent"                android:layout_marginLeft="2dp"                android:text="1999.0"                android:textSize="17sp" />            <shlm.lmcs.com.lazycat.LazyShopView.PriceNumberView                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_marginLeft="2dp"                android:text="/箱"                android:textColor="#020433"                android:textSize="10sp"                android:textStyle="bold" />            <shlm.lmcs.com.lazycat.LazyShopView.PriceNumberView                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_marginLeft="2dp"                android:text="￥80"                android:textColor="#666666"                android:textSize="10sp"                android:visibility="visible" />        </LinearLayout>        <!--商家地址-->        <RelativeLayout            android:layout_width="match_parent"            android:layout_height="17dp"            android:layout_marginTop="5dp">            <ImageView                android:layout_width="17dp"                android:layout_height="17dp"                android:layout_marginLeft="5dp"                android:src="@drawable/ico_businessis" />            <TextView                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_centerVertical="true"                android:layout_marginLeft="25dp"                android:text="上杭左边远景软件公司"                android:textColor="#020433"                android:textSize="10sp" />        </RelativeLayout>    </LinearLayout>    <LinearLayout        android:layout_width="0dp"        android:layout_height="wrap_content"        android:layout_weight="1"        android:orientation="vertical"        android:paddingBottom="10dp"        >        <RelativeLayout            android:layout_width="match_parent"            android:layout_height="210dp">            <ImageView                android:layout_width="200dp"                android:layout_height="200dp"                android:layout_centerInParent="true"                />        </RelativeLayout>        <LinearLayout            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_marginLeft="5dp"            android:layout_marginTop="5dp"            android:gravity="center_vertical">            <TextView                android:id="@+id/item_searchshoplist_titleStatic"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:background="@color/ThemeColor"                android:paddingLeft="3dp"                android:paddingTop="1dp"                android:paddingRight="3dp"                android:paddingBottom="1dp"                android:text="促销"                android:textSize="10sp" />            <TextView                android:id="@+id/item_searchshoplist_title"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_marginRight="5dp"                android:ellipsize="end"                android:maxLines="1"                android:paddingLeft="5dp"                android:text="海天750味极鲜"                android:textColor="#000000"                android:textSize="12sp"                android:textStyle="bold" />        </LinearLayout>        <!--价格-->        <LinearLayout            android:layout_width="match_parent"            android:layout_height="30dp"            android:layout_marginLeft="5dp"            android:layout_marginTop="10dp"            android:orientation="horizontal">            <shlm.lmcs.com.lazycat.LazyShopView.PriceNumberView                android:id="@+id/item_searchshoplist_priceSymbol"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:text="@string/PriceSymbol"                android:textColor="#020433"                android:textSize="10sp"                android:textStyle="bold" />            <shlm.lmcs.com.lazycat.LazyShopView.PriceNumberView                android:id="@+id/item_searchshoplist_price"                android:layout_width="wrap_content"                android:layout_height="match_parent"                android:layout_marginLeft="2dp"                android:text="1999.0"                android:textSize="17sp" />            <shlm.lmcs.com.lazycat.LazyShopView.PriceNumberView                android:id="@+id/item_searchshoplist_company"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_marginLeft="2dp"                android:text="/箱"                android:textColor="#020433"                android:textSize="10sp"                android:textStyle="bold" />            <shlm.lmcs.com.lazycat.LazyShopView.PriceNumberView                android:id="@+id/item_searchshoplist_dottedlinePrice"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_marginLeft="2dp"                android:text="￥80"                android:textColor="#666666"                android:textSize="10sp"                android:visibility="visible" />        </LinearLayout>        <!--商家地址-->        <RelativeLayout            android:layout_width="match_parent"            android:layout_height="20dp"            android:layout_marginTop="5dp">            <ImageView                android:layout_width="20dp"                android:layout_height="20dp"                android:layout_marginLeft="5dp"                android:src="@drawable/ico_businessis" />            <TextView                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_centerVertical="true"                android:layout_marginLeft="25dp"                android:text="上杭左边远景软件公司"                android:textColor="#020433"                android:textSize="10sp" />        </RelativeLayout>    </LinearLayout></LinearLayout>