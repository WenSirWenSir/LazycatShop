<?xml version="1.0" encoding="utf-8"?><!--  ~ 我会用双手书写我来到这个世界的意义  --><!--主页推荐--><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:background="#efefef"    android:orientation="vertical">    <RelativeLayout        android:id="@+id/item_main_recomdBody"        android:layout_width="match_parent"        android:layout_height="160dp"        android:layout_margin="10dp"        android:background="#ffffff"        android:orientation="vertical"        android:padding="5dp">        <LinearLayout            android:layout_width="match_parent"            android:layout_height="150dp"            android:background="#ffffff">            <ImageView                android:id="@+id/item_main_recomdImg"                android:layout_width="match_parent"                android:layout_height="match_parent"                android:scaleType="fitXY" />        </LinearLayout>        <!--文字-->        <RelativeLayout            android:layout_width="match_parent"            android:layout_height="30dp"            android:layout_alignParentBottom="true">            <LinearLayout                android:layout_width="match_parent"                android:layout_height="match_parent"                android:alpha="0.2"                android:background="#000000">            </LinearLayout>            <shlm.lmcs.com.lazycat.LazyShopView.SystemTextView                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:id="@+id/item_main_recomdMsg"                android:layout_centerVertical="true"                android:layout_marginLeft="5dp"                android:layout_marginRight="5dp"                android:text="海天750毫升味极鲜"                android:textColor="@color/colorText"                android:textSize="13dp" />        </RelativeLayout>    </RelativeLayout></LinearLayout>