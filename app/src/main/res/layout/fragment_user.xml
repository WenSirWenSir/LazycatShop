<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:background="#efefef"    android:fitsSystemWindows="true"    android:orientation="vertical">    <!--头部显示个人的信息-->    <RelativeLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:background="#efefef"        android:paddingBottom="10dp">        <LinearLayout            android:id="@+id/fragmen_user_balance_body"            android:layout_width="match_parent"            android:layout_height="190dp"            android:background="@drawable/gradual_change_background">            <RelativeLayout                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_marginTop="40dp">                <LinearLayout                    android:id="@+id/fragmen_user_balance_title"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:orientation="vertical">                    <TextView                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:layout_marginTop="10dp"                        android:paddingLeft="15dp"                        android:text="账户余额(元/RMB)"                        android:textColor="#ffffff"                        android:textSize="10sp"                        android:textStyle="bold" />                </LinearLayout>                <TextView                    android:id="@+id/fragmen_user_btnRecharge"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_alignParentRight="true"                    android:layout_marginTop="10dp"                    android:background="#00a1d6"                    android:gravity="center"                    android:paddingLeft="20dp"                    android:paddingTop="3dp"                    android:paddingRight="20dp"                    android:paddingBottom="3dp"                    android:text="充值"                    android:textColor="#ffffff"                    android:textSize="10sp" />                <RelativeLayout                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_below="@id/fragmen_user_balance_title"                    android:layout_marginTop="20dp">                    <LinearLayout                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:layout_marginLeft="15dp"                        android:orientation="horizontal">                        <TextView                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:text="@string/PriceSymbol"                            android:textColor="#efefef"                            android:textSize="13sp" />                        <shlm.lmcs.com.lazycat.LazyCatProgramUnt.Views.Numberincrease                            android:id="@+id/fragmen_user_balance"                            android:layout_width="wrap_content"                            android:layout_height="70dp"                            android:layout_marginLeft="5dp"                            android:text="00.00"                            android:textColor="#ffffff"                            android:textSize="60sp"                            android:textStyle="bold" />                    </LinearLayout>                </RelativeLayout>            </RelativeLayout>        </LinearLayout>        <ImageView            android:layout_width="20dp"            android:layout_height="20dp"            android:layout_marginLeft="10dp"            android:layout_marginTop="10dp"            android:scaleType="fitXY"            android:src="@drawable/ico_system" />        <ImageView            android:layout_width="20dp"            android:layout_height="20dp"            android:layout_alignParentRight="true"            android:layout_marginTop="10dp"            android:layout_marginRight="10dp"            android:scaleType="fitXY"            android:src="@drawable/ico_bell" />        <LinearLayout            android:id="@+id/usercenterfrg_userValuesBody"            android:layout_width="match_parent"            android:layout_height="130dp"            android:layout_marginLeft="10dp"            android:layout_marginTop="170dp"            android:layout_marginRight="10dp"            android:background="#ffffff"            android:orientation="vertical">            <RelativeLayout                android:layout_width="match_parent"                android:layout_height="80dp">                <TextView                    android:id="@+id/fragmen_user_btnAddVip"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_alignParentRight="true"                    android:layout_marginTop="5dp"                    android:layout_marginRight="5dp"                    android:background="#f30d88"                    android:paddingLeft="5dp"                    android:paddingTop="2dp"                    android:paddingRight="5dp"                    android:paddingBottom="2dp"                    android:text="加入VIP"                    android:textColor="#ffffff"                    android:textSize="10sp" />                <shlm.lmcs.com.lazycat.LazyCatProgramUnt.Views.CircleImageView                    android:layout_width="60dp"                    android:layout_height="60dp"                    android:layout_centerVertical="true"                    android:layout_marginLeft="15dp"                    android:src="@drawable/a2343434" />                <RelativeLayout                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_centerVertical="true"                    android:layout_marginLeft="80dp"                    android:orientation="horizontal">                    <TextView                        android:id="@+id/fragmen_user_business_name"                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:text="未认证用户ID"                        android:textColor="#000000"                        android:textSize="15sp"                        android:textStyle="bold" />                    <TextView                        android:id="@+id/fragment_user_vip"                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:layout_marginLeft="10dp"                        android:layout_toRightOf="@id/fragmen_user_business_name"                        android:paddingLeft="10dp"                        android:paddingTop="2dp"                        android:paddingRight="10dp"                        android:paddingBottom="2dp"                        android:text="VIP"                        android:textColor="#666666"                        android:textSize="10sp"                        android:textStyle="bold" />                </RelativeLayout>            </RelativeLayout>            <LinearLayout                android:layout_width="match_parent"                android:layout_height="50dp"                android:layout_alignParentBottom="true"                android:orientation="horizontal">                <RelativeLayout                    android:layout_width="0dp"                    android:layout_height="match_parent"                    android:layout_weight="1"                    android:orientation="vertical">                    <TextView                        android:layout_width="match_parent"                        android:layout_height="wrap_content"                        android:gravity="center"                        android:text="优惠卷"                        android:textSize="10sp" />                    <LinearLayout                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:layout_centerInParent="true"                        android:orientation="horizontal">                        <shlm.lmcs.com.lazycat.LazyShopView.PriceNumberView                            android:id="@+id/fragmen_user_coupon"                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:text="0"                            android:textColor="#000000"                            android:textSize="15sp" />                        <TextView                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:text="/张"                            android:textColor="#000000"                            android:textSize="8sp" />                    </LinearLayout>                </RelativeLayout>                <RelativeLayout                    android:layout_width="0dp"                    android:layout_height="match_parent"                    android:layout_weight="1"                    android:orientation="vertical">                    <shlm.lmcs.com.lazycat.LazyShopView.PriceNumberView                        android:layout_width="match_parent"                        android:layout_height="wrap_content"                        android:gravity="center"                        android:text="积分"                        android:textSize="10sp" />                    <shlm.lmcs.com.lazycat.LazyShopView.PriceNumberView                        android:id="@+id/fragmen_user_integral"                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:layout_centerInParent="true"                        android:text="0"                        android:textColor="#000000"                        android:textSize="15sp" />                </RelativeLayout>                <RelativeLayout                    android:layout_width="0dp"                    android:layout_height="match_parent"                    android:layout_weight="1">                    <TextView                        android:layout_width="match_parent"                        android:layout_height="wrap_content"                        android:gravity="center"                        android:text="充值记录"                        android:textSize="10sp" />                    <shlm.lmcs.com.lazycat.LazyShopView.PriceNumberView                        android:id="@+id/fragmen_user_rechargerecord"                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:layout_centerInParent="true"                        android:text="0"                        android:textColor="#000000"                        android:textSize="15sp" />                </RelativeLayout>            </LinearLayout>        </LinearLayout>    </RelativeLayout>    <ScrollView        android:layout_width="match_parent"        android:layout_height="match_parent"        android:scrollbars="none">        <LinearLayout            android:layout_width="match_parent"            android:layout_height="match_parent"            android:orientation="vertical">            <!--显示余额-->            <!--显示ITEM-->            <LinearLayout                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:orientation="vertical">            </LinearLayout>        </LinearLayout>    </ScrollView>    <!--功能维权-->    <LinearLayout        android:id="@+id/usercenterfrg_cardBody"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:orientation="vertical">    </LinearLayout></LinearLayout>