<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent">    <RelativeLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_centerInParent="true"        >        <LinearLayout            android:id="@+id/uploadapp_message"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_marginLeft="30dp"            android:layout_marginRight="30dp"            android:background="#bfbfbf"            android:orientation="vertical">            <ImageView                android:layout_width="match_parent"                android:layout_height="100dp"                android:scaleType="fitXY"                android:src="@drawable/as766" />            <TextView                android:layout_width="match_parent"                android:layout_height="30dp"                android:gravity="center"                android:text="新版本更新提示"                android:textColor="#000000"                android:textSize="15sp"                android:textStyle="bold" />            <TextView                android:layout_width="match_parent"                android:layout_height="30dp"                android:layout_marginTop="20dp"                android:gravity="center|left"                android:paddingLeft="20dp"                android:text="最新版本号:2.10.3"                android:textColor="#666666"                android:textSize="12sp" />            <TextView                android:layout_width="match_parent"                android:layout_height="30dp"                android:gravity="center|left"                android:paddingLeft="20dp"                android:text="更新版本大小:1.87MB"                android:textColor="#666666"                android:textSize="12sp" />            <TextView                android:layout_width="match_parent"                android:layout_height="30dp"                android:layout_marginTop="5dp"                android:gravity="center|left"                android:paddingLeft="20dp"                android:text="新版本特性:"                android:textColor="#000000"                android:textSize="15sp"                android:textStyle="bold" />            <TextView                android:layout_width="match_parent"                android:layout_height="30dp"                android:gravity="center|left"                android:paddingLeft="20dp"                android:text="[1]部分BUG的修复"                android:textColor="#666666"                android:textSize="12sp" />            <TextView                android:layout_width="match_parent"                android:layout_height="30dp"                android:gravity="center|left"                android:paddingLeft="20dp"                android:text="[2]更新用户之后第一次的下单30减10"                android:textColor="#666666"                android:textSize="12sp" />            <TextView                android:layout_width="match_parent"                android:layout_height="30dp"                android:gravity="center|left"                android:paddingLeft="20dp"                android:text="[3]用户支付的BUG"                android:textColor="#666666"                android:textSize="12sp" />            <LinearLayout                android:layout_width="match_parent"                android:layout_height="30dp"                android:gravity="center"                android:layout_marginBottom="10dp"                >                <TextView                    android:layout_width="wrap_content"                    android:layout_height="25dp"                    android:gravity="center|left"                    android:paddingLeft="30dp"                    android:paddingRight="30dp"                    android:id="@+id/uploadapp_btnupload"                    android:text="马上更新"                    android:textColor="#ffffff"                    android:background="@color/ThemeColor"                    android:textSize="10sp" />            </LinearLayout>        </LinearLayout>        <ImageView            android:id="@+id/uploadapp_logo"            android:layout_width="100dp"            android:layout_height="100dp"            android:layout_marginLeft="20dp"            android:src="@drawable/ico_logo" />    </RelativeLayout></RelativeLayout>