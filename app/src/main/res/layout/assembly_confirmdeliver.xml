<?xml version="1.0" encoding="utf-8"?><!--确认发送订单--><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="275dp"    android:layout_height="300dp"    android:orientation="vertical">    <!--头部-->    <RelativeLayout        android:layout_width="match_parent"        android:layout_height="25dp">        <TextView            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_centerInParent="true"            android:text="确认订单"            android:textColor="#08c299"            android:textSize="11sp"            android:textStyle="bold" />    </RelativeLayout>    <!--分割线-->    <ImageView        android:layout_width="match_parent"        android:layout_height="2dp"        android:layout_marginLeft="5dp"        android:layout_marginRight="5dp"        android:background="@drawable/border_dotted_line"        android:layerType="software" />    <!--订购信息-->    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginLeft="5dp"        android:gravity="center_vertical"        android:orientation="horizontal">        <ImageView            android:layout_width="70dp"            android:layout_height="70dp"            android:src="@drawable/adb77" />        <LinearLayout            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:orientation="vertical">            <TextView                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_marginLeft="5dp"                android:layout_marginTop="5dp"                android:layout_marginRight="5dp"                android:ellipsize="end"                android:maxLines="1"                android:text="海天750毫升味极鲜酱油海天750毫升味极鲜酱油"                android:textColor="#000000"                android:textSize="10sp" />            <TextView                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_marginLeft="5dp"                android:layout_marginTop="5dp"                android:layout_marginRight="5dp"                android:ellipsize="end"                android:maxLines="1"                android:text="规格:箱装X24瓶"                android:textColor="#08c299"                android:textSize="10sp" />            <TextView                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_marginLeft="5dp"                android:layout_marginTop="5dp"                android:layout_marginRight="5dp"                android:ellipsize="end"                android:maxLines="1"                android:text="订购数量:19件"                android:textColor="#000000"                android:textSize="10sp" />            <TextView                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_marginLeft="5dp"                android:layout_marginTop="5dp"                android:layout_marginRight="5dp"                android:ellipsize="end"                android:maxLines="1"                android:text="生产日期:2019年6月份·保质期:365天"                android:textColor="#000000"                android:textSize="10sp" />        </LinearLayout>    </LinearLayout>    <!--分割线-->    <ImageView        android:layout_width="match_parent"        android:layout_height="2dp"        android:layout_marginLeft="5dp"        android:layout_marginTop="5dp"        android:layout_marginRight="5dp"        android:background="@drawable/border_dotted_line"        android:layerType="software" />    <!--显示小计的价格-->    <RelativeLayout        android:layout_width="match_parent"        android:layout_height="25dp"        android:layout_marginLeft="5dp"        android:layout_marginRight="5dp">        <TextView            android:layout_width="10dp"            android:layout_height="15dp"            android:layout_alignParentBottom="true"            android:gravity="center"            android:text="@string/PriceSymbol"            android:textSize="8sp" />        <shlm.lmcs.com.lazycat.LazyShopView.PriceNumberView            android:id="@+id/assembly_confirmedliverPrice"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_alignParentBottom="true"            android:layout_marginLeft="10dp"            android:layout_marginTop="5dp"            android:ellipsize="end"            android:maxLines="1"            android:text="800"            android:textColor="#f30d65"            android:textSize="15sp" />        <TextView            android:id="@+id/assembly_confirmedliverPriceSymbol"            android:layout_width="10dp"            android:layout_height="13dp"            android:layout_alignParentBottom="true"            android:layout_toRightOf="@id/assembly_confirmedliverPrice"            android:gravity="center"            android:text="@string/PriceSymbol"            android:textSize="8sp" />        <shlm.lmcs.com.lazycat.LazyShopView.PriceNumberView            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_alignParentBottom="true"            android:layout_marginTop="5dp"            android:layout_marginRight="5dp"            android:layout_toRightOf="@id/assembly_confirmedliverPriceSymbol"            android:ellipsize="end"            android:maxLines="1"            android:text="800"            android:textColor="#666666"            android:textSize="13sp" />    </RelativeLayout>    <!--支付方式-->    <RelativeLayout        android:layout_width="match_parent"        android:layout_height="20dp"        android:layout_marginLeft="5dp"        android:layout_marginTop="5dp"        android:layout_marginRight="5dp">        <ImageView            android:layout_width="20dp"            android:layout_height="20dp"            android:src="@drawable/ico_equity" />        <TextView            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_alignParentBottom="true"            android:layout_marginLeft="20dp"            android:layout_marginBottom="2dp"            android:background="#a9a9a9"            android:ellipsize="end"            android:maxLines="1"            android:paddingLeft="3dp"            android:paddingTop="1dp"            android:paddingRight="3dp"            android:paddingBottom="1dp"            android:text="未取得VIP服务,您的权益将无法被保障.请您知晓!"            android:textColor="#ffffff"            android:textSize="8sp" />    </RelativeLayout></LinearLayout>