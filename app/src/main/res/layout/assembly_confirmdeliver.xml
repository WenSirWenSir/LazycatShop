<?xml version="1.0" encoding="utf-8"?><!--确认发送订单--><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    android:layout_width="300dp"    android:layout_height="wrap_content"    android:orientation="vertical"    >    <!--头部-->    <RelativeLayout        android:layout_width="match_parent"        android:layout_height="35dp">        <com.lid.lib.LabelTextView            android:layout_width="match_parent"            android:layout_height="35dp"            android:layout_centerInParent="true"            android:gravity="center"            android:text="确认发货单"            android:textColor="#08c299"            android:textSize="13sp"            android:textStyle="bold"            app:label_backgroundColor="#08c299"            app:label_distance="30dp"            app:label_orientation="RIGHT_TOP"            app:label_text="CangKu"            app:label_textSize="8sp"            app:label_textStyle="BOLD" />    </RelativeLayout>    <!--分割线-->    <ImageView        android:layout_width="match_parent"        android:layout_height="2dp"        android:layout_marginTop="2dp"        android:background="@drawable/border_dotted_line"        android:layerType="software" />    <!--订购信息-->    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginLeft="5dp"        android:gravity="center_vertical"        android:orientation="horizontal">        <ImageView            android:id="@+id/assembly_confirmdeliverShopimg"            android:layout_width="70dp"            android:layout_height="70dp" />        <LinearLayout            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:orientation="vertical">            <TextView                android:id="@+id/assembly_confirmdeliverShopname"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_marginLeft="5dp"                android:layout_marginTop="5dp"                android:layout_marginRight="5dp"                android:ellipsize="end"                android:maxLines="1"                android:text="海天750毫升味极鲜酱油海天750毫升味极鲜酱油"                android:textColor="#000000"                android:textSize="10sp" />            <TextView                android:id="@+id/assembly_confirmdeliverShopTp"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_marginLeft="5dp"                android:layout_marginTop="5dp"                android:layout_marginRight="5dp"                android:ellipsize="end"                android:maxLines="1"                android:textColor="#08c299"                android:textSize="10sp" />            <TextView                android:id="@+id/assembly_confirmdeliverShopSpec"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_marginLeft="5dp"                android:layout_marginTop="5dp"                android:layout_marginRight="5dp"                android:ellipsize="end"                android:maxLines="1"                android:textColor="#08c299"                android:textSize="10sp" />            <TextView                android:id="@+id/assembly_confirmdeliverShopNumber"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_marginLeft="5dp"                android:layout_marginTop="5dp"                android:layout_marginRight="5dp"                android:ellipsize="end"                android:maxLines="1"                android:textColor="#000000"                android:textSize="10sp" />            <TextView                android:id="@+id/assembly_confirmdeliverShopPd_Exp"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_marginLeft="5dp"                android:layout_marginTop="5dp"                android:layout_marginRight="5dp"                android:ellipsize="end"                android:maxLines="1"                android:textColor="#000000"                android:textSize="10sp" />        </LinearLayout>    </LinearLayout>    <!--显示小计的价格-->    <RelativeLayout        android:layout_width="match_parent"        android:layout_height="28dp"        android:layout_marginLeft="5dp"        android:layout_marginRight="5dp">        <TextView            android:layout_width="10dp"            android:layout_height="15dp"            android:layout_alignParentBottom="true"            android:gravity="center"            android:id="@+id/assembly_confirmdeliver_TotalSymbol"            android:text="@string/PriceSymbol"            android:textSize="8sp" />        <shlm.lmcs.com.lazycat.LazyShopView.PriceNumberView            android:id="@+id/assembly_confirmedliverTotal"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_alignParentBottom="true"            android:layout_marginLeft="10dp"            android:layout_marginBottom="2dp"            android:layout_marginTop="5dp"            android:ellipsize="end"            android:maxLines="1"            android:textSize="15sp" />        <TextView            android:id="@+id/assembly_confirmedliverDottedPriceSymbol"            android:layout_width="10dp"            android:layout_height="13dp"            android:layout_alignParentBottom="true"            android:layout_toRightOf="@id/assembly_confirmedliverTotal"            android:gravity="center"            android:text="@string/PriceSymbol"            android:visibility="gone"            android:textSize="8sp" />        <shlm.lmcs.com.lazycat.LazyShopView.PriceNumberView            android:id="@+id/assembly_confirmedliverDottedPrice"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_alignParentBottom="true"            android:layout_marginTop="5dp"            android:layout_marginRight="5dp"            android:layout_toRightOf="@id/assembly_confirmedliverDottedPriceSymbol"            android:ellipsize="end"            android:maxLines="1"            android:visibility="gone"            android:textColor="#666666"            android:textSize="13sp" /><!--        <TextView            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_alignParentBottom="true"            android:layout_toRightOf="@id/assembly_confirmedliverDottedPrice"            android:text="(包含运费30元)"            android:textColor="#000000"            android:textSize="10sp" />-->    </RelativeLayout>    <!--支付方式-->    <RelativeLayout        android:layout_width="match_parent"        android:layout_height="20dp"        android:layout_marginLeft="5dp"        android:layout_marginTop="5dp"        android:layout_marginRight="5dp">        <ImageView            android:id="@+id/assembly_confirmdeliverShopEquity"            android:layout_width="20dp"            android:layout_height="20dp"            android:src="@drawable/ico_equity" />        <TextView            android:id="@+id/assembly_confirmdeliverShopVipMsg"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_alignParentBottom="true"            android:layout_marginLeft="20dp"            android:layout_marginBottom="2dp"            android:background="#a9a9a9"            android:ellipsize="end"            android:maxLines="1"            android:paddingLeft="3dp"            android:paddingTop="1dp"            android:paddingRight="3dp"            android:paddingBottom="1dp"            android:textColor="#ffffff"            android:textSize="8sp" />    </RelativeLayout>    <!--会员权益 如果是会员就点亮-->    <TextView        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginLeft="5dp"        android:text="@string/Equity"        android:textColor="#666666"        android:textSize="8sp"        android:textStyle="bold" />    <!--分割线-->    <ImageView        android:layout_width="match_parent"        android:layout_height="2dp"        android:layout_marginLeft="5dp"        android:layout_marginTop="5dp"        android:layout_marginRight="5dp"        android:background="@drawable/border_dotted_line"        android:layerType="software" />    <!--收件信息-->    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:orientation="vertical">        <TextView            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_marginLeft="10dp"            android:layout_marginTop="10dp"            android:text="收货信息"            android:textColor="#000000"            android:textSize="12sp"            android:textStyle="bold" />        <!--店家的名称-->        <RelativeLayout            android:layout_width="match_parent"            android:layout_height="wrap_content">            <TextView                android:id="@+id/assembly_confirmdeliverUsername"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_centerInParent="true"                android:textColor="#08c299"                android:textSize="13sp"                android:textStyle="bold" />            <TextView                android:id="@+id/assembly_confirmdeliverIcoVip"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_marginLeft="5dp"                android:layout_toRightOf="@id/assembly_confirmdeliverUsername"                android:background="@color/colorVip"                android:paddingLeft="4dp"                android:paddingTop="1dp"                android:paddingRight="4dp"                android:paddingBottom="1dp"                android:textColor="#ffffff"                android:textSize="6dp" />        </RelativeLayout>        <LinearLayout            android:layout_width="match_parent"            android:layout_height="25dp"            android:orientation="horizontal">            <RelativeLayout                android:layout_width="0dp"                android:layout_height="match_parent"                android:layout_weight="1">                <TextView                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_alignParentLeft="true"                    android:layout_centerVertical="true"                    android:layout_marginLeft="10dp"                    android:text="店铺负责人"                    android:textColor="#666666"                    android:textSize="11sp"                    android:textStyle="bold" />                <TextView                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_alignParentRight="true"                    android:layout_centerVertical="true"                    android:id="@+id/assembly_confirmdeliver_shopusePeople"                    android:layout_marginRight="10dp"                    android:textColor="#000000"                    android:textSize="11sp" />            </RelativeLayout>            <RelativeLayout                android:layout_width="0dp"                android:layout_height="match_parent"                android:layout_weight="1">                <TextView                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_alignParentLeft="true"                    android:layout_centerVertical="true"                    android:layout_marginLeft="10dp"                    android:text="电话/手机"                    android:textColor="#666666"                    android:textSize="11sp"                    android:textStyle="bold" />                <shlm.lmcs.com.lazycat.LazyShopView.PriceNumberView                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_alignParentRight="true"                    android:layout_centerVertical="true"                    android:id="@+id/assembly_confirmdeliver_Shoptel"                    android:layout_marginRight="10dp"                    android:textColor="#000000"                    android:text="15206036936"                    android:textSize="11sp"                    android:textStyle="bold" />            </RelativeLayout>        </LinearLayout>        <!--收件地址-->        <RelativeLayout            android:layout_width="match_parent"            android:layout_height="25dp">            <TextView                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_alignParentLeft="true"                android:layout_centerVertical="true"                android:layout_marginLeft="10dp"                android:text="收件地址"                android:textColor="#666666"                android:textSize="11sp"                android:textStyle="bold" />            <TextView                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_alignParentRight="true"                android:layout_centerVertical="true"                android:id="@+id/assembly_confirmdeliver_Shopaddr"                android:layout_marginRight="10dp"                android:textColor="#000000"                android:textSize="11sp" />        </RelativeLayout>        <!--城市--><!--        <LinearLayout            android:layout_width="match_parent"            android:layout_height="25dp"            android:orientation="horizontal">            <RelativeLayout                android:layout_width="0dp"                android:layout_height="match_parent"                android:layout_weight="1">                <TextView                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_alignParentLeft="true"                    android:layout_centerVertical="true"                    android:layout_marginLeft="10dp"                    android:text="城市"                    android:textColor="#666666"                    android:textSize="11sp"                    android:textStyle="bold" />                <TextView                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_alignParentRight="true"                    android:layout_centerVertical="true"                    android:layout_marginRight="10dp"                    android:text="福建省"                    android:textColor="#000000"                    android:textSize="11sp" />            </RelativeLayout>            <RelativeLayout                android:layout_width="0dp"                android:layout_height="match_parent"                android:layout_weight="1">                <TextView                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_alignParentLeft="true"                    android:layout_centerVertical="true"                    android:layout_marginLeft="10dp"                    android:text="市/县区"                    android:textColor="#666666"                    android:textSize="11sp"                    android:textStyle="bold" />                <TextView                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_alignParentRight="true"                    android:layout_centerVertical="true"                    android:layout_marginRight="10dp"                    android:text="龙岩"                    android:textColor="#000000"                    android:textSize="11sp" />            </RelativeLayout>        </LinearLayout>-->    </LinearLayout>    <!--按钮通知发货-->    <RelativeLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginTop="15dp"        android:layout_marginBottom="15dp">        <TextView            android:id="@+id/assembly_confirmdeliver_BtnSendorder"            android:layout_width="150dp"            android:layout_height="28dp"            android:layout_centerInParent="true"            android:background="#08c299"            android:gravity="center"            android:text="确定提交发货单"            android:textColor="#ffffff"            android:textSize="10sp" />    </RelativeLayout></LinearLayout>