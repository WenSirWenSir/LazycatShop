<?xml version="1.0" encoding="utf-8"?><!--确认发送订单--><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    android:layout_width="300dp"    android:layout_height="wrap_content"    android:orientation="vertical"    >    <!--头部-->    <RelativeLayout        android:layout_width="match_parent"        android:layout_height="35dp">        <com.lid.lib.LabelTextView            android:layout_width="match_parent"            android:layout_height="35dp"            android:layout_centerInParent="true"            android:gravity="center"            android:text="确认订单"            android:textColor="#08c299"            android:textSize="11sp"            android:textStyle="bold"            app:label_backgroundColor="#08c299"            app:label_distance="30dp"            app:label_orientation="RIGHT_TOP"            app:label_text="CangKu"            app:label_textSize="8sp"            app:label_textStyle="BOLD" />    </RelativeLayout>    <!--分割线-->    <ImageView        android:layout_width="match_parent"        android:layout_height="2dp"        android:layout_marginTop="2dp"        android:background="@drawable/border_dotted_line"        android:layerType="software" />    <!--订购信息-->    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginLeft="5dp"        android:gravity="center_vertical"        android:orientation="horizontal">        <ImageView            android:layout_width="70dp"            android:layout_height="70dp"            android:id="@+id/assembly_confirmdeliverShopimg"            android:src="@drawable/adb77" />        <LinearLayout            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:orientation="vertical">            <TextView                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_marginLeft="5dp"                android:layout_marginTop="5dp"                android:id="@+id/assembly_confirmdeliverShopname"                android:layout_marginRight="5dp"                android:ellipsize="end"                android:maxLines="1"                android:text="海天750毫升味极鲜酱油海天750毫升味极鲜酱油"                android:textColor="#000000"                android:textSize="10sp" />            <TextView                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_marginLeft="5dp"                android:layout_marginTop="5dp"                android:layout_marginRight="5dp"                android:ellipsize="end"                android:maxLines="1"                android:text="商品单价:80/件"                android:textColor="#08c299"                android:textSize="10sp" />            <TextView                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_marginLeft="5dp"                android:layout_marginTop="5dp"                android:layout_marginRight="5dp"                android:ellipsize="end"                android:maxLines="1"                android:text="规格:箱装X24瓶"                android:textColor="#08c299"                android:textSize="10sp" />            <TextView                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_marginLeft="5dp"                android:layout_marginTop="5dp"                android:layout_marginRight="5dp"                android:ellipsize="end"                android:maxLines="1"                android:text="订购数量:19件"                android:textColor="#000000"                android:textSize="10sp" />            <TextView                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_marginLeft="5dp"                android:layout_marginTop="5dp"                android:layout_marginRight="5dp"                android:ellipsize="end"                android:maxLines="1"                android:text="生产日期:2019年6月份·保质期:365天"                android:textColor="#000000"                android:textSize="10sp" />        </LinearLayout>    </LinearLayout>    <!--显示小计的价格-->    <RelativeLayout        android:layout_width="match_parent"        android:layout_height="25dp"        android:layout_marginLeft="5dp"        android:layout_marginRight="5dp">        <TextView            android:layout_width="10dp"            android:layout_height="15dp"            android:layout_alignParentBottom="true"            android:gravity="center"            android:text="@string/PriceSymbol"            android:textSize="8sp" />        <shlm.lmcs.com.lazycat.LazyShopView.PriceNumberView            android:id="@+id/assembly_confirmedliverPrice"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_alignParentBottom="true"            android:layout_marginLeft="10dp"            android:layout_marginTop="5dp"            android:ellipsize="end"            android:maxLines="1"            android:text="830"            android:textColor="#f30d65"            android:textSize="15sp" />        <TextView            android:id="@+id/assembly_confirmedliverPriceSymbol"            android:layout_width="10dp"            android:layout_height="13dp"            android:layout_alignParentBottom="true"            android:layout_toRightOf="@id/assembly_confirmedliverPrice"            android:gravity="center"            android:text="@string/PriceSymbol"            android:textSize="8sp" />        <shlm.lmcs.com.lazycat.LazyShopView.PriceNumberView            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_alignParentBottom="true"            android:layout_marginTop="5dp"            android:layout_marginRight="5dp"            android:id="@+id/assembly_confirmedliverDottedPrice"            android:layout_toRightOf="@id/assembly_confirmedliverPriceSymbol"            android:ellipsize="end"            android:maxLines="1"            android:text="800"            android:textColor="#666666"            android:textSize="13sp" />                <TextView            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:textSize="10sp"            android:textColor="#000000"            android:text="(包含运费30元)"            android:layout_alignParentBottom="true"            android:layout_toRightOf="@id/assembly_confirmedliverDottedPrice"            />    </RelativeLayout>    <!--支付方式-->    <RelativeLayout        android:layout_width="match_parent"        android:layout_height="20dp"        android:layout_marginLeft="5dp"        android:layout_marginTop="5dp"        android:layout_marginRight="5dp">        <ImageView            android:layout_width="20dp"            android:layout_height="20dp"            android:src="@drawable/ico_equity" />        <TextView            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_alignParentBottom="true"            android:layout_marginLeft="20dp"            android:layout_marginBottom="2dp"            android:background="#a9a9a9"            android:ellipsize="end"            android:maxLines="1"            android:paddingLeft="3dp"            android:paddingTop="1dp"            android:paddingRight="3dp"            android:paddingBottom="1dp"            android:text="未取得VIP服务,您的权益将无法被保障.请您知晓!"            android:textColor="#ffffff"            android:textSize="8sp" />    </RelativeLayout>    <!--会员权益 如果是会员就点亮-->    <TextView        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginLeft="5dp"        android:text="@string/Equity"        android:textColor="#666666"        android:textSize="8sp"        android:textStyle="bold" />    <!--分割线-->    <ImageView        android:layout_width="match_parent"        android:layout_height="2dp"        android:layout_marginLeft="5dp"        android:layout_marginTop="5dp"        android:layout_marginRight="5dp"        android:background="@drawable/border_dotted_line"        android:layerType="software" />    <!--收件信息-->    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:orientation="vertical">        <TextView            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_marginLeft="10dp"            android:layout_marginTop="10dp"            android:text="收货信息"            android:textColor="#000000"            android:textSize="12sp"            android:textStyle="bold" />        <!--收件电话-->        <RelativeLayout            android:layout_width="match_parent"            android:layout_height="25dp"            android:layout_marginTop="15dp">            <TextView                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_alignParentLeft="true"                android:layout_centerVertical="true"                android:layout_marginLeft="10dp"                android:text="电话号码"                android:textColor="#666666"                android:textSize="11sp"                android:textStyle="bold" />            <shlm.lmcs.com.lazycat.LazyShopView.PriceNumberView                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_alignParentRight="true"                android:layout_centerVertical="true"                android:layout_marginRight="10dp"                android:text="15206036936"                android:textColor="#000000"                android:textSize="11sp"                android:textStyle="bold" />        </RelativeLayout>        <!--收件地址-->        <RelativeLayout            android:layout_width="match_parent"            android:layout_height="25dp">            <TextView                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_alignParentLeft="true"                android:layout_centerVertical="true"                android:layout_marginLeft="10dp"                android:text="收件地址"                android:textColor="#666666"                android:textSize="11sp"                android:textStyle="bold" />            <TextView                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_alignParentRight="true"                android:layout_centerVertical="true"                android:layout_marginRight="10dp"                android:text="上杭县临城镇北园路园一巷21号"                android:textColor="#000000"                android:textSize="11sp" />        </RelativeLayout>        <!--城市-->        <LinearLayout            android:layout_width="match_parent"            android:layout_height="25dp"            android:orientation="horizontal">            <RelativeLayout                android:layout_width="0dp"                android:layout_height="match_parent"                android:layout_weight="1">                <TextView                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_alignParentLeft="true"                    android:layout_centerVertical="true"                    android:layout_marginLeft="10dp"                    android:text="城市"                    android:textColor="#666666"                    android:textSize="11sp"                    android:textStyle="bold" />                <TextView                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_alignParentRight="true"                    android:layout_centerVertical="true"                    android:layout_marginRight="10dp"                    android:text="福建省"                    android:textColor="#000000"                    android:textSize="11sp" />            </RelativeLayout>            <RelativeLayout                android:layout_width="0dp"                android:layout_height="match_parent"                android:layout_weight="1">                <TextView                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_alignParentLeft="true"                    android:layout_centerVertical="true"                    android:layout_marginLeft="10dp"                    android:text="市/县区"                    android:textColor="#666666"                    android:textSize="11sp"                    android:textStyle="bold" />                <TextView                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_alignParentRight="true"                    android:layout_centerVertical="true"                    android:layout_marginRight="10dp"                    android:text="龙岩"                    android:textColor="#000000"                    android:textSize="11sp" />            </RelativeLayout>        </LinearLayout>    </LinearLayout>    <!--按钮通知发货-->    <RelativeLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginTop="10dp"        android:layout_marginBottom="15dp">        <TextView            android:layout_width="150dp"            android:layout_height="28dp"            android:layout_centerInParent="true"            android:background="#08c299"            android:gravity="center"            android:text="确定通知仓库发货"            android:textColor="#ffffff"            android:textSize="10sp" />    </RelativeLayout></LinearLayout>