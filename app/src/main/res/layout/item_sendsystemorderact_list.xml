<?xml version="1.0" encoding="utf-8"?><!--展示用户提交的发货单--><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:orientation="vertical">    <RelativeLayout        android:layout_width="match_parent"        android:layout_height="20dp">        <TextView            android:id="@+id/item_sendsystemOrderact_list_orderNumberTitle"            android:layout_width="wrap_content"            android:layout_height="match_parent"            android:layout_centerVertical="true"            android:layout_marginLeft="5dp"            android:gravity="center_vertical"            android:text="发货单号:"            android:textColor="#020433"            android:textSize="9sp" />        <shlm.lmcs.com.lazycat.LazyShopView.PriceNumberView            android:id="@+id/item_sendsystemorderact_list_orderNumber"            android:layout_width="wrap_content"            android:layout_height="match_parent"            android:layout_centerVertical="true"            android:layout_toRightOf="@id/item_sendsystemOrderact_list_orderNumberTitle"            android:gravity="center_vertical"            android:paddingBottom="1dp"            android:text="089385938"            android:textColor="#020433"            android:textSize="10sp" />        <TextView            android:id="@+id/item_sendsystemorderact_list_status"            android:layout_width="100dp"            android:layout_height="match_parent"            android:layout_alignParentRight="true"            android:layout_centerVertical="true"            android:background="@color/ThemeColor"            android:gravity="center"            android:paddingLeft="10dp"            android:text="发货单已提交"            android:textColor="#ffffff"            android:textSize="9sp" />    </RelativeLayout>    <LinearLayout        android:layout_width="match_parent"        android:layout_height="110dp">        <RelativeLayout            android:layout_width="110dp"            android:layout_height="110dp">            <LinearLayout                android:layout_width="100dp"                android:layout_height="100dp"                android:layout_centerInParent="true">                <ImageView                    android:id="@+id/item_sendsystemorderact_list_img"                    android:layout_width="match_parent"                    android:layout_height="match_parent" />            </LinearLayout>        </RelativeLayout>        <RelativeLayout            android:layout_width="match_parent"            android:layout_height="match_parent">            <LinearLayout                android:layout_width="match_parent"                android:layout_height="match_parent"                android:orientation="vertical">                <LinearLayout                    android:layout_width="match_parent"                    android:layout_height="wrap_content">                    <TextView                        android:id="@+id/item_sendsystemorderact_list_Shopstatus"                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:paddingLeft="3dp"                        android:paddingTop="1dp"                        android:textSize="10sp"                        android:paddingRight="3dp"                        android:paddingBottom="1dp" />                    <TextView                        android:id="@+id/item_sendsystemorderact_list_shoptitle"                        android:layout_width="match_parent"                        android:layout_height="wrap_content"                        android:layout_marginTop="5dp"                        android:layout_marginRight="10dp"                        android:ellipsize="end"                        android:maxLines="1"                        android:textColor="#020433"                        android:textSize="12sp" />                </LinearLayout>                <TextView                    android:id="@+id/item_sendsystemorderact_list_spec"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_marginTop="5dp"                    android:layout_marginRight="10dp"                    android:ellipsize="end"                    android:maxLines="1"                    android:textColor="#333333"                    android:textSize="10sp" />                <TextView                    android:id="@+id/item_sendsystemorderact_list_expandpd"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_marginTop="5dp"                    android:layout_marginRight="10dp"                    android:ellipsize="end"                    android:maxLines="1"                    android:textColor="#333333"                    android:textSize="10sp" />                <TextView                    android:id="@+id/item_sendsystemorderact_list_sendTopay"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_marginTop="5dp"                    android:layout_marginRight="10dp"                    android:ellipsize="end"                    android:maxLines="1"                    android:textColor="#333333"                    android:textSize="10sp" />                <shlm.lmcs.com.lazycat.LazyShopView.PriceNumberView                    android:id="@+id/item_sendsystemorderact_list_createTime"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_marginTop="5dp"                    android:layout_marginRight="10dp"                    android:ellipsize="end"                    android:maxLines="1"                    android:text="订货单创建日期:2019-08-10"                    android:textColor="#333333"                    android:textSize="10sp" />            </LinearLayout>            <!--等待支付的价格-->            <LinearLayout                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_alignParentRight="true"                android:layout_alignParentBottom="true"                android:gravity="right"                android:paddingRight="20dp">                <TextView                    android:id="@+id/item_sendsystemorderact_list_priceTitle"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:text="等待支付"                    android:textColor="#020433"                    android:textSize="9sp" />                <TextView                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:text="@string/PriceSymbol"                    android:textColor="#020433"                    android:textSize="9sp" />                <shlm.lmcs.com.lazycat.LazyShopView.PriceNumberView                    android:id="@+id/item_sendsystemorderact_list_tp"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:textColor="@color/colorPrice"                    android:textSize="20sp" />            </LinearLayout>        </RelativeLayout>    </LinearLayout>    <!--无货 通知用户-->    <!--点击通知取消-->    <RelativeLayout        android:layout_width="100dp"        android:layout_height="20dp"        android:layout_gravity="right">        <TextView            android:id="@+id/item_sendsystemorderact_list_userknow"            android:layout_width="80dp"            android:layout_height="20dp"            android:layout_centerInParent="true"            android:layout_gravity="right"            android:background="@color/ThemeColor"            android:gravity="center"            android:textColor="#ffffff"            android:textSize="9sp"            android:visibility="gone" />    </RelativeLayout>    <View        android:layout_width="match_parent"        android:layout_height="2dp"        android:layout_marginTop="5dp"        android:layout_marginRight="100dp"        android:background="@drawable/border_dotted_line"        android:layerType="software" /></LinearLayout>