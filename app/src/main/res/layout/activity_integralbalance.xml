<?xml version="1.0" encoding="utf-8"?><!--积分余额界面--><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"        android:layout_width="match_parent"        android:layout_height="match_parent"        android:background="#efefef"        android:fitsSystemWindows="true"        android:orientation="vertical">    <!--头部控件-->    <RelativeLayout            android:layout_width="match_parent"            android:layout_height="35dp">        <ImageView                android:id="@+id/activity_integralbalanceBtnback"                android:layout_width="20dp"                android:layout_height="20dp"                android:layout_centerVertical="true"                android:layout_marginLeft="10dp"                android:src="@drawable/ico_back" />        <shlm.lmcs.com.lazycat.LazyShopView.SystemTextView                android:id="@+id/activity_integralbalanceBtnaboutIntegral"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_alignParentRight="true"                android:layout_centerVertical="true"                android:layout_marginRight="10dp"                android:text="积分明细"                android:textColor="#000000"                android:textSize="12dp" />    </RelativeLayout>    <!--显示积分-->    <LinearLayout            android:layout_width="match_parent"            android:layout_height="match_parent"            android:layout_weight="1"            android:orientation="vertical">        <RelativeLayout                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_weight="1"                android:orientation="vertical">            <RelativeLayout                    android:id="@+id/activity_integrlbalanceIcoBody"                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_centerVertical="true">                <ImageView                        android:layout_width="35dp"                        android:layout_height="35dp"                        android:layout_centerHorizontal="true"                        android:src="@drawable/ico_integral" />            </RelativeLayout>            <RelativeLayout                    android:id="@+id/activity_integralbalanceTitleBody"                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_below="@id/activity_integrlbalanceIcoBody"                    android:layout_marginTop="5dp">                <shlm.lmcs.com.lazycat.LazyShopView.SystemTextView                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:layout_centerHorizontal="true"                        android:text="我的积分"                        android:textColor="#000000"                        android:textSize="13dp" />            </RelativeLayout>            <!--显示被冻结的积分-->            <RelativeLayout                    android:id="@+id/activity_integralbalanceFrozenIntegralBody"                    android:layout_width="match_parent"                    android:layout_height="25dp"                    android:layout_below="@id/activity_integralbalanceTitleBody"                    android:layout_centerVertical="true"                    android:layout_marginTop="10dp"                    android:visibility="gone">                <shlm.lmcs.com.lazycat.LazyShopView.SystemTextView                        android:id="@+id/activity_integralbalanceFrozenIntegral"                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:layout_centerInParent="true"                        android:textColor="@color/colorFrozen"                        android:textSize="12dp"                        android:visibility="gone" />                <ImageView                        android:layout_width="17dp"                        android:layout_height="17dp"                        android:layout_centerVertical="true"                        android:layout_marginLeft="5dp"                        android:id="@+id/activity_integralbalanceBtnAsk"                        android:layout_toRightOf="@id/activity_integralbalanceFrozenIntegral"                        android:src="@drawable/ico_ask" />            </RelativeLayout>            <RelativeLayout                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_below="@id/activity_integralbalanceFrozenIntegralBody"                    android:layout_marginTop="25dp">                <shlm.lmcs.com.lazycat.LazyShopView.SystemTextView                        android:id="@+id/activity_integralbalanceIntegral"                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:layout_centerHorizontal="true"                        android:textColor="#000000"                        android:textSize="35dp" />            </RelativeLayout>        </RelativeLayout>        <RelativeLayout                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_weight="1">            <LinearLayout                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_centerHorizontal="true"                    android:orientation="vertical">                <shlm.lmcs.com.lazycat.LazyShopView.SystemTextView                        android:id="@+id/activity_integralbalanceBtnRecharge"                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:background="@color/ThemeColor"                        android:visibility="gone"                        android:paddingLeft="45dp"                        android:paddingTop="7dp"                        android:paddingRight="45dp"                        android:paddingBottom="7dp"                        android:text="充值"                        android:textColor="#ffffff"                        android:textSize="12dp" />                <shlm.lmcs.com.lazycat.LazyShopView.SystemTextView                        android:id="@+id/activity_integralbalanceBtnDeposit"                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:layout_marginTop="10dp"                        android:background="#e9e9e9"                        android:paddingLeft="45dp"                        android:paddingTop="7dp"                        android:paddingRight="45dp"                        android:paddingBottom="7dp"                        android:text="提现"                        android:textColor="@color/ThemeColor"                        android:textSize="12dp" />            </LinearLayout>        </RelativeLayout>    </LinearLayout>    <RelativeLayout            android:layout_width="match_parent"            android:layout_height="125dp"            android:layout_weight="1"            android:orientation="vertical">        <shlm.lmcs.com.lazycat.LazyShopView.SystemTextView                android:id="@+id/activity_integralbalanceBtnhelp"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_centerHorizontal="true"                android:gravity="center"                android:text="常见问题"                android:textColor="@color/ThemeColor"                android:textSize="10dp" />        <shlm.lmcs.com.lazycat.LazyShopView.SystemTextView                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_below="@id/activity_integralbalanceBtnhelp"                android:layout_centerHorizontal="true"                android:layout_marginTop="5dp"                android:text="@string/SystemBottommsg"                android:textColor="#a9a9a9"                android:textSize="11dp" />    </RelativeLayout></LinearLayout>