<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"        android:layout_width="match_parent"        android:layout_height="match_parent"        android:orientation="vertical">    <shlm.lmcs.com.lazycat.LazyCatProgramUnt.Views.ScrollViewBiggerPhoto            android:id="@+id/activity_showshopoffice_scrollview"            android:layout_width="match_parent"            android:layout_height="match_parent"            android:layout_marginBottom="50dp"            android:scrollbars="none">        <RelativeLayout                android:layout_width="match_parent"                android:layout_height="match_parent"                android:background="#ffffff"                android:orientation="vertical">            <LinearLayout                    android:layout_width="match_parent"                    android:layout_height="match_parent"                    android:background="#ffffff"                    android:orientation="vertical">                <!--图片显示-->                <RelativeLayout                        android:id="@+id/activity_showshopoffice_photoBody"                        android:layout_width="match_parent"                        android:layout_height="wrap_content"                        android:background="#ffffff">                    <ImageView                            android:id="@+id/activity_showshopoffice_photo"                            android:layout_width="match_parent"                            android:layout_height="300dp"                            android:layout_alignParentEnd="true"                            android:layout_alignParentRight="true"                            android:layout_marginEnd="0dp"                            android:layout_marginRight="0dp"                            android:scaleType="fitXY" />                </RelativeLayout>                <!--显示详细信息-->                <LinearLayout                        android:layout_width="match_parent"                        android:layout_height="match_parent"                        android:layout_marginTop="10dp"                        android:background="#ffffff"                        android:orientation="vertical">                    <!--标题品牌规格还有其他一些信息  在标题上就体现出来-->                    <LinearLayout                            android:layout_width="match_parent"                            android:layout_height="wrap_content"                            android:orientation="vertical">                        <LinearLayout                                android:layout_width="match_parent"                                android:layout_height="wrap_content"                                android:gravity="center_vertical"                                android:orientation="horizontal">                            <shlm.lmcs.com.lazycat.LazyShopView.SystemTextView                                    android:layout_width="wrap_content"                                    android:layout_height="wrap_content"                                    android:layout_marginLeft="10dp"                                    android:background="@android:color/holo_blue_light"                                    android:paddingLeft="5dp"                                    android:paddingTop="2dp"                                    android:paddingRight="5dp"                                    android:paddingBottom="2dp"                                    android:text="品牌"                                    android:textColor="#ffffff"                                    android:textSize="10sp" />                            <shlm.lmcs.com.lazycat.LazyShopView.SystemTextView                                    android:id="@+id/activity_showshopoffice_showbrand"                                    android:layout_width="wrap_content"                                    android:layout_height="wrap_content"                                    android:layout_marginLeft="5dp"                                    android:maxLines="2"                                    android:paddingRight="15dp"                                    android:textColor="#020433"                                    android:textSize="17dp"                                    android:textStyle="bold" />                        </LinearLayout>                        <shlm.lmcs.com.lazycat.LazyShopView.SystemTextView                                android:id="@+id/activity_showshopoffice_shoptitle"                                android:layout_width="match_parent"                                android:layout_height="wrap_content"                                android:layout_marginTop="10dp"                                android:maxLines="2"                                android:paddingLeft="10dp"                                android:paddingRight="15dp"                                android:textColor="#020433"                                android:textSize="15sp"                                android:textStyle="bold" />                    </LinearLayout>                    <LinearLayout                            android:layout_width="match_parent"                            android:layout_height="wrap_content"                            android:layout_marginTop="15dp"                            android:orientation="horizontal">                        <RelativeLayout                                android:layout_width="match_parent"                                android:layout_height="wrap_content"                                android:layout_weight="1">                            <LinearLayout                                    android:layout_width="wrap_content"                                    android:layout_height="wrap_content"                                    android:orientation="horizontal">                                <TextView                                        android:id="@+id/activity_showshopoffice_tpSymbol"                                        android:layout_width="wrap_content"                                        android:layout_height="wrap_content"                                        android:paddingLeft="15dp"                                        android:text="@string/PriceSymbol"                                        android:textColor="@color/ThemeColor"                                        android:textStyle="bold" />                                <shlm.lmcs.com.lazycat.LazyShopView.PriceNumberView                                        android:id="@+id/activity_showshopoffice_tp"                                        android:layout_width="wrap_content"                                        android:layout_height="wrap_content"                                        android:textColor="@color/ThemeColor"                                        android:textSize="30dp"                                        android:textStyle="bold" />                                <TextView                                        android:id="@+id/activity_showshopoffice_dlpSymbol"                                        android:layout_width="wrap_content"                                        android:layout_height="wrap_content"                                        android:paddingLeft="5dp"                                        android:text="@string/PriceSymbol"                                        android:textColor="@color/colorPrice"                                        android:textSize="10sp"                                        android:textStyle="bold"                                        android:visibility="gone" />                                <shlm.lmcs.com.lazycat.LazyShopView.PriceNumberView                                        android:id="@+id/activity_showshopoffice_dlp"                                        android:layout_width="wrap_content"                                        android:layout_height="wrap_content"                                        android:textColor="@color/colorPrice"                                        android:textSize="17sp"                                        android:textStyle="bold" />                            </LinearLayout>                        </RelativeLayout>                        <!--订购的标签-->                        <RelativeLayout                                android:layout_width="wrap_content"                                android:layout_height="30dp"                                android:layout_alignParentRight="true"                                android:layout_alignParentBottom="true"                                android:layout_marginTop="5dp"                                android:layout_weight="1">                            <LinearLayout                                    android:id="@+id/activity_showshopoffice_SeletNumberBody"                                    android:layout_width="wrap_content"                                    android:layout_height="30dp"                                    android:layout_alignParentRight="true"                                    android:layout_marginRight="15dp"                                    android:background="#ffffff"                                    android:visibility="visible">                                <TextView                                        android:id="@+id/activity_showshopoffice_SeletNumberBtndel"                                        android:layout_width="25dp"                                        android:layout_height="25dp"                                        android:layout_marginRight="5dp"                                        android:background="@drawable/btn_del_border"                                        android:gravity="center"                                        android:text="-"                                        android:textColor="#ffffff"                                        android:textSize="15dp"                                        android:textStyle="bold" />                                <shlm.lmcs.com.lazycat.LazyShopView.PriceNumberView                                        android:id="@+id/activity_showshopoffice_SeletNumber"                                        android:layout_width="20dp"                                        android:layout_height="20dp"                                        android:gravity="center"                                        android:text="1"                                        android:textColor="#000000"                                        android:textSize="15dp"                                        android:textStyle="bold" />                                <TextView                                        android:id="@+id/activity_showshopoffice_SeletNumberBtnadd"                                        android:layout_width="25dp"                                        android:layout_height="25dp"                                        android:layout_marginLeft="5dp"                                        android:background="@drawable/btn_add_border"                                        android:gravity="center"                                        android:text="+"                                        android:textColor="#ffffff"                                        android:textSize="15dp"                                        android:textStyle="bold" />                            </LinearLayout>                        </RelativeLayout>                    </LinearLayout>                    <!--显示起订和其他的参数信息-->                    <LinearLayout                            android:id="@+id/activity_showshopoffice_otherMessagebody"                            android:layout_width="match_parent"                            android:layout_height="wrap_content"                            android:layout_marginTop="10dp"                            android:orientation="horizontal"                            android:paddingLeft="10dp"                            android:paddingTop="5dp"                            android:paddingBottom="5dp">                    </LinearLayout>                    <!--显示积分-->                    <View                            android:layout_width="match_parent"                            android:layout_height="10dp"                            android:background="@drawable/border_dotted_line"                            android:layerType="software" />                    <!--仓库提供的服务-->                    <LinearLayout                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:layout_marginLeft="5dp"                            android:layout_marginTop="10dp">                        <shlm.lmcs.com.lazycat.LazyShopView.SystemTextView                                android:layout_width="wrap_content"                                android:layout_height="wrap_content"                                android:text="@string/Equity"                                android:textColor="#020433"                                android:textSize="12dp"                                android:textStyle="bold" />                    </LinearLayout>                    <!--倒计时显示广告-->                    <LinearLayout                            android:layout_width="match_parent"                            android:layout_height="wrap_content"                            android:layout_marginTop="10dp"                            android:background="#ffffff"                            android:orientation="vertical">                        <ImageView                                android:id="@+id/activity_showshopoffice_countDownadavert"                                android:layout_width="match_parent"                                android:layout_height="10dp" />                    </LinearLayout>                    <!--显示商品的赠品信息 如果商品没有赠品就不要显示了-->                    <LinearLayout                            android:id="@+id/activity_showshopoffice_reserveBody"                            android:layout_width="match_parent"                            android:layout_height="wrap_content"                            android:orientation="vertical">                    </LinearLayout>                    <!--显示品牌信息-->                    <LinearLayout                            android:id="@+id/activity_showshopoffice_valuesBody"                            android:layout_width="match_parent"                            android:layout_height="wrap_content"                            android:layout_marginLeft="10dp"                            android:layout_marginTop="10dp"                            android:layout_marginRight="25dp"                            android:background="#ffffff"                            android:orientation="vertical"                            android:paddingTop="10dp"                            android:paddingBottom="10dp">                        <shlm.lmcs.com.lazycat.LazyShopView.SystemTextView                                android:layout_width="wrap_content"                                android:layout_height="wrap_content"                                android:layout_marginLeft="10dp"                                android:layout_marginTop="5dp"                                android:text="商品信息"                                android:textColor="#08c299"                                android:textSize="13dp"                                android:textStyle="bold" />                        <ImageView                                android:id="@+id/activity_showshopoffice_imgBarcode"                                android:layout_width="150dp"                                android:layout_height="30dp"                                android:layout_marginLeft="10dp"                                android:layout_marginTop="5dp"                                android:scaleType="fitXY" />                        <LinearLayout                                android:layout_width="wrap_content"                                android:layout_height="wrap_content"                                android:layout_marginTop="10dp"                                android:orientation="horizontal">                            <RelativeLayout                                    android:layout_width="0dp"                                    android:layout_height="wrap_content"                                    android:layout_weight="1">                                <RelativeLayout                                        android:layout_width="match_parent"                                        android:layout_height="match_parent"                                        android:layout_marginLeft="10dp"                                        android:orientation="horizontal">                                    <shlm.lmcs.com.lazycat.LazyShopView.SystemTextView                                            android:id="@+id/activity_showshopoffice_pd"                                            android:layout_width="wrap_content"                                            android:layout_height="wrap_content"                                            android:layout_centerInParent="true"                                            android:textColor="#020433"                                            android:textSize="12dp" />                                </RelativeLayout>                            </RelativeLayout>                            <RelativeLayout                                    android:layout_width="0dp"                                    android:layout_height="wrap_content"                                    android:layout_weight="1">                                <RelativeLayout                                        android:layout_width="match_parent"                                        android:layout_height="match_parent"                                        android:layout_marginLeft="10dp"                                        android:orientation="horizontal">                                    <shlm.lmcs.com.lazycat.LazyShopView.SystemTextView                                            android:id="@+id/activity_showshopoffice_exp"                                            android:layout_width="wrap_content"                                            android:layout_height="wrap_content"                                            android:layout_centerInParent="true"                                            android:textColor="#020433"                                            android:textSize="12dp" />                                </RelativeLayout>                            </RelativeLayout>                        </LinearLayout>                        <LinearLayout                                android:layout_width="wrap_content"                                android:layout_height="wrap_content"                                android:layout_marginTop="10dp"                                android:orientation="horizontal">                            <RelativeLayout                                    android:layout_width="0dp"                                    android:layout_height="wrap_content"                                    android:layout_weight="1">                                <RelativeLayout                                        android:layout_width="match_parent"                                        android:layout_height="match_parent"                                        android:layout_marginLeft="10dp"                                        android:orientation="horizontal">                                    <shlm.lmcs.com.lazycat.LazyShopView.SystemTextView                                            android:id="@+id/activity_showshopoffice_spec"                                            android:layout_width="wrap_content"                                            android:layout_height="wrap_content"                                            android:layout_centerInParent="true"                                            android:textColor="#020433"                                            android:textSize="12dp" />                                </RelativeLayout>                            </RelativeLayout>                            <RelativeLayout                                    android:layout_width="0dp"                                    android:layout_height="wrap_content"                                    android:layout_weight="1">                                <RelativeLayout                                        android:layout_width="match_parent"                                        android:layout_height="match_parent"                                        android:layout_marginLeft="10dp"                                        android:orientation="horizontal">                                    <shlm.lmcs.com.lazycat.LazyShopView.SystemTextView                                            android:id="@+id/activity_showshopoffice_grade"                                            android:layout_width="wrap_content"                                            android:layout_height="wrap_content"                                            android:layout_centerInParent="true"                                            android:textColor="#020433"                                            android:textSize="12dp" />                                    <ImageView                                            android:id="@+id/activity_showshopoffice_btnGradeAsk"                                            android:layout_width="20dp"                                            android:layout_height="20dp"                                            android:layout_marginLeft="10dp"                                            android:layout_toRightOf="@id/activity_showshopoffice_grade"                                            android:src="@drawable/ico_ask" />                                </RelativeLayout>                            </RelativeLayout>                        </LinearLayout>                        <LinearLayout                                android:layout_width="wrap_content"                                android:layout_height="wrap_content"                                android:layout_marginTop="10dp"                                android:orientation="horizontal">                            <RelativeLayout                                    android:layout_width="0dp"                                    android:layout_height="wrap_content"                                    android:layout_weight="1">                                <RelativeLayout                                        android:layout_width="match_parent"                                        android:layout_height="match_parent"                                        android:layout_marginLeft="10dp"                                        android:orientation="horizontal">                                    <shlm.lmcs.com.lazycat.LazyShopView.SystemTextView                                            android:id="@+id/activity_showshopoffice_weight"                                            android:layout_width="wrap_content"                                            android:layout_height="wrap_content"                                            android:layout_centerInParent="true"                                            android:textColor="#020433"                                            android:textSize="12dp" />                                </RelativeLayout>                            </RelativeLayout>                            <RelativeLayout                                    android:layout_width="0dp"                                    android:layout_height="wrap_content"                                    android:layout_weight="1">                                <RelativeLayout                                        android:layout_width="match_parent"                                        android:layout_height="match_parent"                                        android:layout_marginLeft="10dp"                                        android:orientation="horizontal">                                    <shlm.lmcs.com.lazycat.LazyShopView.SystemTextView                                            android:id="@+id/activity_showshopoffice_retail"                                            android:layout_width="wrap_content"                                            android:layout_height="wrap_content"                                            android:layout_centerInParent="true"                                            android:textColor="#020433"                                            android:textSize="12dp" />                                </RelativeLayout>                            </RelativeLayout>                        </LinearLayout>                    </LinearLayout>                    <!--提示信息-->                    <LinearLayout                            android:layout_width="match_parent"                            android:layout_height="wrap_content"                            android:layout_marginTop="15dp"                            android:background="#ffffff"                            android:orientation="vertical">                        <shlm.lmcs.com.lazycat.LazyShopView.SystemTextView                                android:layout_width="match_parent"                                android:layout_height="wrap_content"                                android:layout_marginLeft="10dp"                                android:text="价格说明"                                android:textColor="#020433"                                android:textSize="15dp" />                        <LinearLayout                                android:layout_width="match_parent"                                android:layout_height="wrap_content"                                android:layout_marginTop="15dp"                                android:orientation="horizontal">                            <shlm.lmcs.com.lazycat.LazyShopView.SystemTextView                                    android:layout_width="wrap_content"                                    android:layout_height="wrap_content"                                    android:layout_marginLeft="10dp"                                    android:text="起送价格:"                                    android:textColor="#020433"                                    android:textSize="12dp" />                            <shlm.lmcs.com.lazycat.LazyShopView.SystemTextView                                    android:layout_width="wrap_content"                                    android:layout_height="wrap_content"                                    android:layout_marginRight="10dp"                                    android:text="所有商品均可以一件配送"                                    android:textColor="#a9a9a9"                                    android:textSize="12dp" />                        </LinearLayout>                        <LinearLayout                                android:layout_width="match_parent"                                android:layout_height="wrap_content"                                android:layout_marginTop="5dp"                                android:orientation="horizontal">                            <shlm.lmcs.com.lazycat.LazyShopView.SystemTextView                                    android:layout_width="wrap_content"                                    android:layout_height="wrap_content"                                    android:layout_marginLeft="10dp"                                    android:text="划线价格:"                                    android:textColor="#020433"                                    android:textSize="12dp" />                            <shlm.lmcs.com.lazycat.LazyShopView.SystemTextView                                    android:layout_width="wrap_content"                                    android:layout_height="wrap_content"                                    android:layout_marginRight="10dp"                                    android:text="可能是商品的零售价，起送价，或者是曾经使用的销售价格。并非原价，仅供您参考。"                                    android:textColor="#a9a9a9"                                    android:textSize="12dp" />                        </LinearLayout>                        <LinearLayout                                android:layout_width="match_parent"                                android:layout_height="wrap_content"                                android:layout_marginTop="5dp"                                android:orientation="horizontal">                            <shlm.lmcs.com.lazycat.LazyShopView.SystemTextView                                    android:layout_width="wrap_content"                                    android:layout_height="wrap_content"                                    android:layout_marginLeft="10dp"                                    android:text="温馨提示:"                                    android:textColor="#020433"                                    android:textSize="12dp" />                            <shlm.lmcs.com.lazycat.LazyShopView.SystemTextView                                    android:layout_width="wrap_content"                                    android:layout_height="wrap_content"                                    android:layout_marginRight="10dp"                                    android:text="实际的成交价格可能因您使用优惠卷发生改变,最终以订单的结算价格为准。"                                    android:textColor="#a9a9a9"                                    android:textSize="12dp" />                        </LinearLayout>                    </LinearLayout>                </LinearLayout>            </LinearLayout>            <ImageView                    android:id="@+id/activity_showshopoffice_btnBack"                    android:layout_width="20dp"                    android:layout_height="20dp"                    android:layout_marginLeft="15dp"                    android:layout_marginTop="35dp"                    android:src="@drawable/ico_back" />        </RelativeLayout>    </shlm.lmcs.com.lazycat.LazyCatProgramUnt.Views.ScrollViewBiggerPhoto>    <!--显示购物车的遮物布局-->    <LinearLayout            android:id="@+id/activity_showshopoffice_hideShopBody"            android:layout_width="match_parent"            android:layout_height="match_parent"            android:alpha="0.2"            android:background="#000000"            android:orientation="vertical"            android:visibility="gone">    </LinearLayout>    <!--背景布局-->    <RelativeLayout            android:layout_width="match_parent"            android:layout_height="50dp"            android:layout_alignParentBottom="true"            android:background="#efefef"            android:visibility="visible">        <!--这个是底部导航-->        <LinearLayout                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_alignParentBottom="true"                android:background="#ffffff"                android:orientation="vertical">            <RelativeLayout                    android:id="@+id/activity_showshopoffice_carpage"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content">                <shlm.lmcs.com.lazycat.LazyShopView.SystemTextView                        android:id="@+id/activity_showshopoffice_btnAccount"                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:layout_alignParentRight="true"                        android:layout_centerVertical="true"                        android:layout_marginRight="10dp"                        android:paddingLeft="30dp"                        android:paddingTop="10dp"                        android:paddingRight="30dp"                        android:paddingBottom="10dp"                        android:textSize="12dp" />                <RelativeLayout                        android:id="@+id/activity_showshopoffice_btnCollection"                        android:layout_width="120dp"                        android:layout_height="wrap_content"                        android:layout_toLeftOf="@id/activity_showshopoffice_btnAccount"                        android:background="#d81e06"                        >                    <shlm.lmcs.com.lazycat.LazyShopView.SystemTextView                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:layout_alignParentRight="true"                            android:layout_centerVertical="true"                            android:layout_marginRight="10dp"                            android:paddingLeft="30dp"                            android:paddingTop="10dp"                            android:paddingRight="30dp"                            android:paddingBottom="10dp"                            android:text="加入收藏"                            android:textColor="#ffffff"                            android:textSize="12dp" />                    <ImageView                            android:layout_width="18dp"                            android:layout_height="18dp"                            android:layout_centerVertical="true"                            android:layout_marginLeft="10dp"                            android:src="@drawable/ico_nocollection" />                </RelativeLayout>            </RelativeLayout>        </LinearLayout>    </RelativeLayout>    <!--显示购物车的商品-->    <LinearLayout            android:id="@+id/activity_showshopoffice_showshoplistBody"            android:layout_width="match_parent"            android:layout_height="0dp"            android:layout_alignParentBottom="true"            android:layout_marginBottom="50dp"            android:background="#ffffff"            android:orientation="vertical">        <!--头部提示-->    </LinearLayout>    <!--购物车控件--></RelativeLayout>