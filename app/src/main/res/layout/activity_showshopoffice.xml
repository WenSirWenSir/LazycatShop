<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:orientation="vertical">    <shlm.lmcs.com.lazycat.LazyCatProgramUnt.Views.ScrollViewBiggerPhoto        android:id="@+id/activity_showshopoffice_scrollview"        android:layout_width="match_parent"        android:layout_height="match_parent"        android:layout_marginBottom="50dp"        android:scrollbars="none">        <LinearLayout            android:layout_width="match_parent"            android:layout_height="match_parent"            android:background="#ffffff"            android:orientation="vertical">            <!--图片显示-->            <RelativeLayout                android:id="@+id/activity_showshopoffice_photoBody"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:background="#ffffff">                <ImageView                    android:layout_width="35dp"                    android:layout_height="35dp"                    android:src="@drawable/ico_btn_back"                    android:layout_marginLeft="10dp"                    android:alpha="0.5"                    android:layout_marginTop="25dp"                    />                <ImageView                    android:layout_width="35dp"                    android:layout_height="35dp"                    android:src="@drawable/ico_btn_more"                    android:layout_marginLeft="10dp"                    android:scaleType="center"                    android:alpha="0.5"                    android:layout_alignParentRight="true"                    android:layout_marginRight="10dp"                    android:layout_marginTop="25dp"                    />                <ImageView                    android:id="@+id/activity_showshopoffice_photo"                    android:layout_width="250dp"                    android:layout_height="250dp"                    android:layout_centerInParent="true"                    android:src="@drawable/heiren" />            </RelativeLayout>            <!--显示详细信息-->            <LinearLayout                android:layout_width="match_parent"                android:layout_height="match_parent"                android:background="#ffffff"                android:orientation="vertical">                <!--标题品牌规格还有其他一些信息  在标题上就体现出来-->                <LinearLayout                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:orientation="vertical"                    >                    <TextView                        android:layout_width="match_parent"                        android:layout_height="wrap_content"                        android:maxLines="2"                        android:paddingLeft="15dp"                        android:paddingRight="15dp"                        android:text="黑人(Darlie)"                        android:textColor="#000000"                        android:textSize="17dp"                        android:textStyle="bold" />                    <TextView                        android:layout_width="match_parent"                        android:layout_height="wrap_content"                        android:maxLines="2"                        android:paddingLeft="15dp"                        android:paddingRight="15dp"                        android:layout_marginTop="10dp"                        android:text="双重薄荷225g清新去口气防蛀牙膏"                        android:textColor="#000000"                        android:textSize="15sp"                        android:textStyle="bold" />                </LinearLayout>                <RelativeLayout                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_marginTop="15dp"                    android:orientation="vertical">                    <shlm.lmcs.com.lazycat.LazyShopView.PriceNumberView                        android:id="@+id/activity_showshopoffice_historicalPrice"                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:paddingLeft="15dp"                        android:text="17.57"                        android:textSize="12sp" />                    <RelativeLayout                        android:layout_width="match_parent"                        android:layout_height="wrap_content"                        android:layout_marginTop="5dp"                        >                        <LinearLayout                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:orientation="horizontal"                            android:layout_marginTop="10dp"                            >                            <TextView                                android:layout_width="wrap_content"                                android:layout_height="wrap_content"                                android:paddingLeft="15dp"                                android:textStyle="bold"                                android:text="@string/PriceSymbol"                                android:textColor="@color/colorPrice" />                            <shlm.lmcs.com.lazycat.LazyShopView.PriceNumberView                                android:layout_width="wrap_content"                                android:layout_height="wrap_content"                                android:text="17.57"                                android:textColor="@color/colorPrice"                                android:textSize="30sp"                                android:textStyle="bold" />                            <RelativeLayout                                android:layout_width="wrap_content"                                android:layout_height="wrap_content"                                android:layout_marginLeft="15dp"                                >                                <TextView                                    android:layout_width="wrap_content"                                    android:layout_height="wrap_content"                                    android:background="#f30d88"                                    android:paddingLeft="5dp"                                    android:paddingTop="2dp"                                    android:paddingRight="5dp"                                    android:paddingBottom="2dp"                                    android:text="促销"                                    android:textColor="#ffffff"                                    android:textSize="7sp" />                            </RelativeLayout>                            <RelativeLayout                                android:layout_width="wrap_content"                                android:layout_height="wrap_content"                                android:layout_marginLeft="15dp">                                <TextView                                    android:layout_width="wrap_content"                                    android:layout_height="wrap_content"                                    android:background="@android:color/holo_blue_bright"                                    android:paddingLeft="5dp"                                    android:paddingTop="2dp"                                    android:paddingRight="5dp"                                    android:paddingBottom="2dp"                                    android:text="懒猫专送"                                    android:textColor="#ffffff"                                    android:textSize="7sp" />                            </RelativeLayout>                        </LinearLayout>                        <!--加入购物车的按钮-->                        <RelativeLayout                            android:layout_width="wrap_content"                            android:layout_height="30dp"                            android:layout_alignParentRight="true"                            android:layout_marginTop="5dp">                            <!--加入购物车-->                            <LinearLayout                                android:id="@+id/activity_showshopoffice_btnAddshopcartBody"                                android:layout_width="wrap_content"                                android:layout_height="30dp"                                android:layout_alignParentRight="true"                                android:layout_marginRight="15dp"                                android:background="#f30d88"                                android:visibility="visible">                                <TextView                                    android:id="@+id/activity_showshopoffice_btnAddshopcart"                                    android:layout_width="wrap_content"                                    android:layout_height="wrap_content"                                    android:layout_gravity="center"                                    android:layout_marginTop="2dp"                                    android:layout_marginBottom="2dp"                                    android:gravity="center"                                    android:paddingLeft="25dp"                                    android:paddingTop="2dp"                                    android:paddingRight="25dp"                                    android:paddingBottom="2dp"                                    android:text="加入购物车"                                    android:textColor="#ffffff"                                    android:textSize="10dp" />                            </LinearLayout>                            <!--加入购物车之后显示的-->                            <LinearLayout                                android:id="@+id/activity_showshopoffice_SeletNumberBody"                                android:layout_width="wrap_content"                                android:layout_height="30dp"                                android:layout_alignParentRight="true"                                android:layout_marginRight="15dp"                                android:background="#ffffff"                                android:visibility="gone">                                <TextView                                    android:id="@+id/activity_showshopoffice_SeletNumberBtndel"                                    android:layout_width="25dp"                                    android:layout_height="25dp"                                    android:layout_marginRight="5dp"                                    android:background="@drawable/btn_del_border"                                    android:gravity="center"                                    android:text="-"                                    android:textColor="#ffffff"                                    android:textSize="15sp"                                    android:textStyle="bold" />                                <TextView                                    android:id="@+id/activity_showshopoffice_SeletNumber"                                    android:layout_width="20dp"                                    android:layout_height="20dp"                                    android:gravity="center"                                    android:text="17"                                    android:textColor="#000000"                                    android:textSize="15dp" />                                <TextView                                    android:id="@+id/activity_showshopoffice_SeletNumberBtnadd"                                    android:layout_width="25dp"                                    android:layout_height="25dp"                                    android:layout_marginLeft="5dp"                                    android:background="@drawable/btn_add_border"                                    android:gravity="center"                                    android:text="+"                                    android:textColor="#ffffff"                                    android:textSize="15sp"                                    android:textStyle="bold" />                            </LinearLayout>                        </RelativeLayout>                    </RelativeLayout>                </RelativeLayout>                <!--显示促销的信息-->                <LinearLayout                    android:id="@+id/activity_showshopoffice_promotion_body"                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:orientation="vertical">                    <ImageView                        android:layout_width="20dp"                        android:layout_height="20dp"                        android:layout_marginLeft="15dp"                        android:layout_marginTop="5dp"                        android:src="@drawable/ico_promotion" />                    <TextView                        android:id="@+id/activity_showshopoffice_progrm_title"                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:layout_marginLeft="15dp"                        android:layout_marginTop="5dp"                        android:background="@color/ThemeColor"                        android:paddingLeft="5dp"                        android:paddingTop="2dp"                        android:paddingRight="5dp"                        android:paddingBottom="2dp"                        android:text="满200立减30元;满1000立减50元"                        android:textColor="#ffffff"                        android:textSize="10dp" />                </LinearLayout>                <!--倒计时显示广告-->                <LinearLayout                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_marginTop="10dp"                    android:background="#ffffff"                    android:orientation="vertical">                    <ImageView                        android:id="@+id/activity_showshopoffice_countDownadavert"                        android:layout_width="match_parent"                        android:layout_height="10dp"                        android:src="@drawable/aaaa" />                </LinearLayout>                <!--显示品牌信息-->                <LinearLayout                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_marginTop="10dp"                    android:background="#ffffff"                    android:orientation="vertical"                    android:paddingTop="10dp"                    android:paddingBottom="5dp">                    <View                        android:layout_width="match_parent"                        android:layout_height="1dp"                        android:background="#a9a9a9" />                    <TextView                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:layout_marginLeft="15dp"                        android:layout_marginTop="5dp"                        android:text="商品信息"                        android:textColor="#a9a9a9"                        android:textSize="13sp" />                    <TextView                        android:layout_width="match_parent"                        android:layout_height="wrap_content"                        android:layout_marginLeft="15dp"                        android:layout_marginTop="5dp"                        android:paddingRight="15dp"                        android:text="困了就睡登,1034ab录福建省地方发大水口附近都是离开房间施蒂利克荆防颗粒圣诞节疯狂了圣诞节疯狂了的数据法律会计师的考虑福建省代理客服就是"                        android:textColor="#666666"                        android:textSize="12dp" />                </LinearLayout>                <LinearLayout                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:background="#ffffff"                    android:orientation="vertical"                    android:paddingTop="5dp"                    android:paddingBottom="5dp">                    <View                        android:layout_width="match_parent"                        android:layout_height="1dp"                        android:layout_gravity="center"                        android:layout_marginLeft="15dp"                        android:layout_marginTop="5dp"                        android:layout_marginRight="15dp"                        android:background="#a9a9a9" />                    <TextView                        android:layout_width="match_parent"                        android:layout_height="wrap_content"                        android:layout_marginTop="5dp"                        android:gravity="center"                        android:text="品牌与公司地址"                        android:textColor="#666666"                        android:textSize="13sp" />                </LinearLayout>                <!--显示商品备注/商品信息-->                <LinearLayout                    android:layout_width="match_parent"                    android:layout_height="150dp"                    android:orientation="horizontal">                    <ImageView                        android:layout_width="150dp"                        android:layout_height="150dp"                        android:src="@drawable/piaorou" />                    <RelativeLayout                        android:layout_width="match_parent"                        android:layout_height="match_parent"                        android:layout_marginLeft="10dp">                        <LinearLayout                            android:layout_width="match_parent"                            android:layout_height="wrap_content"                            android:layout_centerInParent="true"                            android:orientation="vertical">                            <TextView                                android:layout_width="match_parent"                                android:layout_height="wrap_content"                                android:layout_marginTop="10dp"                                android:paddingLeft="5dp"                                android:text="飘柔(宝洁旗下品牌)"                                android:textColor="#000000"                                android:textSize="13sp"                                android:textStyle="bold" />                            <LinearLayout                                android:layout_width="match_parent"                                android:layout_height="wrap_content"                                android:layout_marginTop="10dp"                                android:orientation="horizontal">                                <ImageView                                    android:layout_width="20dp"                                    android:layout_height="20dp"                                    android:src="@drawable/ico_addr" />                                <TextView                                    android:layout_width="match_parent"                                    android:layout_height="20dp"                                    android:gravity="center|left"                                    android:maxLines="2"                                    android:paddingLeft="5dp"                                    android:text="广州宝洁有限公司"                                    android:textColor="#666666"                                    android:textSize="10sp" />                            </LinearLayout>                        </LinearLayout>                    </RelativeLayout>                </LinearLayout>            </LinearLayout>        </LinearLayout>    </shlm.lmcs.com.lazycat.LazyCatProgramUnt.Views.ScrollViewBiggerPhoto>    <!--显示购物车的遮物布局-->    <LinearLayout        android:layout_width="match_parent"        android:layout_height="match_parent"        android:alpha="0.2"        android:visibility="gone"        android:background="#000000"        android:orientation="vertical"        android:id="@+id/activity_showshopoffice_hideShopBody"        >    </LinearLayout>    <!--背景布局-->    <RelativeLayout        android:layout_width="match_parent"        android:layout_height="50dp"        android:layout_alignParentBottom="true"        android:visibility="visible"        android:background="#efefef">        <!--这个是底部导航-->        <LinearLayout            android:layout_width="match_parent"            android:layout_alignParentBottom="true"            android:background="#ffffff"            android:layout_height="wrap_content"            android:orientation="vertical"            >            <RelativeLayout                android:layout_width="match_parent"                android:layout_height="50dp">                <TextView                    android:layout_width="wrap_content"                    android:layout_height="30dp"                    android:layout_marginLeft="55dp"                    android:textSize="12sp"                    android:textStyle="bold"                    android:paddingTop="10dp"                    android:id="@+id/activity_showshopoffice_pricesymbol"                    android:textColor="@color/colorPrice"                    android:text="@string/PriceSymbol"                    android:layout_marginTop="10dp"                    android:layout_alignBottom="@id/activity_showshopoffice_price"                    />                <shlm.lmcs.com.lazycat.LazyShopView.PriceNumberView                    android:layout_width="wrap_content"                    android:layout_height="30dp"                    android:layout_alignParentBottom="true"                    android:layout_toRightOf="@id/activity_showshopoffice_pricesymbol"                    android:textSize="17sp"                    android:paddingTop="4dp"                    android:layout_marginBottom="10dp"                    android:id="@+id/activity_showshopoffice_price"                    android:textStyle="bold"                    android:textColor="@color/colorPrice"                    android:text="128"                    android:layout_marginTop="10dp"                    />                <TextView                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:paddingTop="10dp"                    android:layout_alignParentBottom="true"                    android:paddingBottom="10dp"                    android:layout_marginBottom="10dp"                    android:id="@+id/activity_showshopoffice_btnAccount"                    android:paddingLeft="30dp"                    android:paddingRight="30dp"                    android:text="￥18元起送"                    android:layout_centerVertical="true"                    android:textSize="12dp"                    android:layout_marginRight="10dp"                    android:layout_alignParentRight="true"                    />            </RelativeLayout>        </LinearLayout>    </RelativeLayout>    <!--显示还需要多少价格开始起送-->    <TextView        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:paddingLeft="30dp"        android:paddingTop="5dp"        android:paddingBottom="5dp"        android:id="@+id/activity_showshopoffice_Repayprice"        android:textSize="10dp"        android:layout_marginTop="8dp"        android:layout_alignParentBottom="true"        android:layout_marginBottom="50dp"        android:paddingRight="10dp"        android:gravity="center"        android:textColor="#ffffff"        android:text="还需要88开始配送,赶紧去添加商品吧!"        android:background="@color/colorBack"        />    <!--显示购物车的商品-->    <LinearLayout        android:layout_width="match_parent"        android:id="@+id/activity_showshopoffice_showshoplistBody"        android:layout_height="0dp"        android:background="#ffffff"        android:orientation="vertical"        android:layout_alignParentBottom="true"        android:layout_marginBottom="50dp"        >        <!--头部提示-->        <RelativeLayout            android:layout_width="match_parent"            android:layout_height="wrap_content">            <TextView                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:textSize="10dp"                android:layout_marginTop="10dp"                android:text="购物车"                android:layout_centerInParent="true"                />        </RelativeLayout>        <!--下划线-->        <View            android:layout_width="match_parent"            android:layout_height="1dp"            android:background="#f30d88"            android:layout_marginLeft="15dp"            android:layout_marginRight="15dp"            />        <ListView            android:layout_width="match_parent"            android:scrollbars="none"            android:id="@+id/activity_showshopoffice_shopcartList"            android:layout_height="match_parent">        </ListView>    </LinearLayout><!--购物车控件-->    <RelativeLayout        android:layout_width="45dp"        android:layout_height="45dp"        android:layout_alignParentBottom="true"        android:layout_centerVertical="true"        android:id="@+id/activity_showshopoffice_btnShopcart"        android:layout_marginLeft="3dp"        android:layout_marginBottom="20dp"        android:orientation="vertical">        <LinearLayout            android:layout_width="40dp"            android:layout_height="40dp"            android:layout_centerInParent="true"            android:background="@drawable/shop_cart_border">        </LinearLayout>        <ImageView            android:id="@+id/activity_showshopoffice_btnReport"            android:layout_width="20dp"            android:layout_height="20dp"            android:layout_centerInParent="true"            android:layout_centerHorizontal="true"            android:src="@drawable/ico_shopcart" />        <RelativeLayout            android:id="@+id/activity_showshopoffice_shopCartnumberBody"            android:layout_width="20dp"            android:layout_height="20dp"            android:layout_alignParentRight="true"            android:background="@drawable/shop_cart_bordera">            <shlm.lmcs.com.lazycat.LazyShopView.PriceNumberView                android:id="@+id/activity_showshopoffice_shopCartnumber"                android:layout_width="18dp"                android:layout_height="18dp"                android:layout_centerInParent="true"                android:background="@drawable/btn_del_border"                android:gravity="center"                android:text="99+"                android:textColor="#ffffff"                android:textSize="10dp"                android:textStyle="bold" />        </RelativeLayout>    </RelativeLayout></RelativeLayout>