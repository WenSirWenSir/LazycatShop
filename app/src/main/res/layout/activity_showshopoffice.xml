<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:orientation="vertical">    <shlm.lmcs.com.lazycat.LazyCatProgramUnt.Views.ScrollViewBiggerPhoto        android:id="@+id/activity_showshopoffice_scrollview"        android:layout_width="match_parent"        android:layout_height="match_parent"        android:layout_marginBottom="50dp"        android:scrollbars="none">        <LinearLayout            android:layout_width="match_parent"            android:layout_height="match_parent"            android:background="#ffffff"            android:orientation="vertical">            <!--图片显示-->            <RelativeLayout                android:id="@+id/activity_showshopoffice_photoBody"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:background="#ffffff">                <ImageView                    android:id="@+id/activity_showshopoffice_photo"                    android:layout_width="250dp"                    android:layout_height="250dp"                    android:layout_centerInParent="true"                    android:src="@drawable/heiren" />            </RelativeLayout>            <!--显示详细信息-->            <LinearLayout                android:layout_width="match_parent"                android:layout_height="match_parent"                android:background="#ffffff"                android:orientation="vertical">                <TextView                    android:layout_width="match_parent"                    android:layout_height="45dp"                    android:maxLines="2"                    android:paddingLeft="15dp"                    android:paddingRight="15dp"                    android:text="海飞丝洗发露怡神冰凉薄荷型400毫升海飞丝洗发露怡神冰凉薄荷型400毫升"                    android:textColor="#000000"                    android:textSize="17dp"                    android:textStyle="bold" />                <LinearLayout                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_marginTop="15dp"                    android:orientation="vertical">                    <shlm.lmcs.com.lazycat.LazyShopView.PriceNumberView                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:paddingLeft="15dp"                        android:text="17.57"                        android:textSize="12sp" />                    <RelativeLayout                        android:layout_width="match_parent"                        android:layout_height="wrap_content"                        android:layout_marginTop="5dp"                        >                        <LinearLayout                            android:layout_width="match_parent"                            android:layout_height="wrap_content"                            android:orientation="horizontal">                            <TextView                                android:layout_width="wrap_content"                                android:layout_height="wrap_content"                                android:paddingLeft="15dp"                                android:text="@string/PriceSymbol"                                android:textColor="#000000" />                            <shlm.lmcs.com.lazycat.LazyShopView.PriceNumberView                                android:layout_width="wrap_content"                                android:layout_height="wrap_content"                                android:text="17.57"                                android:textColor="@color/ThemeColor"                                android:textSize="30sp"                                android:textStyle="bold" />                            <RelativeLayout                                android:layout_width="wrap_content"                                android:layout_height="match_parent"                                android:layout_marginLeft="15dp"                                >                                <TextView                                    android:layout_width="wrap_content"                                    android:layout_height="wrap_content"                                    android:background="#f30d88"                                    android:paddingLeft="5dp"                                    android:paddingTop="2dp"                                    android:paddingRight="5dp"                                    android:paddingBottom="2dp"                                    android:text="促销"                                    android:textColor="#ffffff"                                    android:textSize="7sp" />                            </RelativeLayout>                            <RelativeLayout                                android:layout_width="wrap_content"                                android:layout_height="match_parent"                                android:layout_marginLeft="15dp"                                >                                <TextView                                    android:layout_width="wrap_content"                                    android:layout_height="wrap_content"                                    android:background="@android:color/holo_blue_bright"                                    android:paddingLeft="5dp"                                    android:paddingTop="2dp"                                    android:paddingRight="5dp"                                    android:paddingBottom="2dp"                                    android:text="懒猫专送"                                    android:textColor="#ffffff"                                    android:textSize="7sp" />                            </RelativeLayout>                        </LinearLayout>                        <!--加入购物车-->                        <LinearLayout                            android:id="@+id/activity_showshopoffice_btnAddshopcartBody"                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:layout_alignParentRight="true"                            android:layout_marginRight="10dp"                            android:background="#f30d88"                            android:visibility="visible">                            <TextView                                android:id="@+id/activity_showshopoffice_btnAddshopcart"                                android:layout_width="100dp"                                android:layout_height="match_parent"                                android:layout_marginTop="2dp"                                android:layout_marginBottom="2dp"                                android:gravity="center"                                android:text="加入购物车"                                android:textColor="#ffffff"                                android:textSize="15dp" />                        </LinearLayout>                        <!--加入购物车之后显示的-->                        <LinearLayout                            android:id="@+id/activity_showshopoffice_SeletNumberBody"                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:layout_alignParentRight="true"                            android:visibility="gone"                            android:layout_marginRight="10dp"                            android:background="#ffffff">                            <TextView                                android:id="@+id/activity_showshopoffice_SeletNumberBtndel"                                android:layout_width="15dp"                                android:layout_height="15dp"                                android:background="@drawable/btn_del_border"                                android:gravity="center"                                android:text="-"                                android:textStyle="bold"                                android:textColor="#ffffff"                                android:textSize="10dp" />                            <TextView                                android:id="@+id/activity_showshopoffice_SeletNumber"                                android:layout_width="20dp"                                android:layout_height="20dp"                                android:gravity="center"                                android:text="17"                                android:textColor="#000000"                                android:textSize="10dp" />                            <TextView                                android:id="@+id/activity_showshopoffice_SeletNumberBtnadd"                                android:layout_width="15dp"                                android:layout_height="15dp"                                android:background="@drawable/btn_add_border"                                android:gravity="center"                                android:text="+"                                android:textStyle="bold"                                android:textColor="#ffffff"                                android:textSize="10dp" />                        </LinearLayout>                    </RelativeLayout>                </LinearLayout>                <!--显示促销的信息-->                <LinearLayout                    android:id="@+id/activity_showshopoffice_promotion_body"                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:orientation="vertical">                    <ImageView                        android:layout_width="20dp"                        android:layout_height="20dp"                        android:layout_marginLeft="15dp"                        android:layout_marginTop="5dp"                        android:src="@drawable/ico_promotion" />                    <TextView                        android:id="@+id/activity_showshopoffice_progrm_title"                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:layout_marginLeft="15dp"                        android:layout_marginTop="5dp"                        android:background="@color/ThemeColor"                        android:paddingLeft="5dp"                        android:paddingTop="2dp"                        android:paddingRight="5dp"                        android:paddingBottom="2dp"                        android:text="满200立减30元;满1000立减50元"                        android:textColor="#ffffff"                        android:textSize="10dp" />                </LinearLayout>                <!--显示品牌信息-->                <LinearLayout                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_marginTop="10dp"                    android:background="#ffffff"                    android:orientation="vertical"                    android:paddingTop="10dp"                    android:paddingBottom="5dp">                    <View                        android:layout_width="match_parent"                        android:layout_height="1dp"                        android:background="#a9a9a9" />                    <TextView                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:layout_marginLeft="15dp"                        android:layout_marginTop="5dp"                        android:text="商品信息"                        android:textColor="#a9a9a9"                        android:textSize="13sp" />                    <TextView                        android:layout_width="match_parent"                        android:layout_height="wrap_content"                        android:layout_marginLeft="15dp"                        android:layout_marginTop="5dp"                        android:paddingRight="15dp"                        android:text="困了就睡登,1034ab录福建省地方发大水口附近都是离开房间施蒂利克荆防颗粒圣诞节疯狂了圣诞节疯狂了的数据法律会计师的考虑福建省代理客服就是"                        android:textColor="#666666"                        android:textSize="12dp" />                </LinearLayout>                <LinearLayout                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:background="#ffffff"                    android:orientation="vertical"                    android:paddingTop="5dp"                    android:paddingBottom="5dp">                    <View                        android:layout_width="match_parent"                        android:layout_height="1dp"                        android:layout_gravity="center"                        android:layout_marginLeft="15dp"                        android:layout_marginTop="5dp"                        android:layout_marginRight="15dp"                        android:background="#a9a9a9" />                    <TextView                        android:layout_width="match_parent"                        android:layout_height="wrap_content"                        android:layout_marginTop="5dp"                        android:gravity="center"                        android:text="品牌与公司地址"                        android:textColor="#666666"                        android:textSize="13sp" />                </LinearLayout>                <!--显示商品备注/商品信息-->                <LinearLayout                    android:layout_width="match_parent"                    android:layout_height="150dp"                    android:orientation="horizontal">                    <ImageView                        android:layout_width="150dp"                        android:layout_height="150dp"                        android:src="@drawable/piaorou" />                    <RelativeLayout                        android:layout_width="match_parent"                        android:layout_height="match_parent"                        android:layout_marginLeft="10dp">                        <LinearLayout                            android:layout_width="match_parent"                            android:layout_height="wrap_content"                            android:layout_centerInParent="true"                            android:orientation="vertical">                            <TextView                                android:layout_width="match_parent"                                android:layout_height="wrap_content"                                android:layout_marginTop="10dp"                                android:paddingLeft="5dp"                                android:text="飘柔(宝洁旗下品牌)"                                android:textColor="#000000"                                android:textSize="13sp"                                android:textStyle="bold" />                            <LinearLayout                                android:layout_width="match_parent"                                android:layout_height="wrap_content"                                android:layout_marginTop="10dp"                                android:orientation="horizontal">                                <ImageView                                    android:layout_width="20dp"                                    android:layout_height="20dp"                                    android:src="@drawable/ico_addr" />                                <TextView                                    android:layout_width="match_parent"                                    android:layout_height="20dp"                                    android:gravity="center|left"                                    android:maxLines="2"                                    android:paddingLeft="5dp"                                    android:text="广州宝洁有限公司"                                    android:textColor="#666666"                                    android:textSize="10sp" />                            </LinearLayout>                        </LinearLayout>                    </RelativeLayout>                </LinearLayout>            </LinearLayout>        </LinearLayout>    </shlm.lmcs.com.lazycat.LazyCatProgramUnt.Views.ScrollViewBiggerPhoto>    <RelativeLayout        android:layout_width="match_parent"        android:layout_height="50dp"        android:layout_alignParentBottom="true"        android:layout_weight="0"        android:background="#e9e9e9">        <RelativeLayout            android:layout_width="match_parent"            android:layout_height="match_parent">            <RelativeLayout                android:layout_width="45dp"                android:layout_height="40dp"                android:layout_centerVertical="true"                android:orientation="vertical">                <ImageView                    android:id="@+id/activity_showshopoffice_btnReport"                    android:layout_width="30dp"                    android:layout_height="30dp"                    android:layout_centerHorizontal="true"                    android:src="@drawable/ico_report" />                <TextView                    android:id="@+id/activity_showshopoffice_btnReportTitle"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_below="@id/activity_showshopoffice_btnReport"                    android:layout_centerInParent="true"                    android:text="价格举报"                    android:textSize="8sp" />            </RelativeLayout>        </RelativeLayout>    </RelativeLayout></RelativeLayout>