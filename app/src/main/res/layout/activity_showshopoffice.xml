<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:fitsSystemWindows="true"    android:orientation="vertical">    <shlm.lmcs.com.lazycat.LazyCatProgramUnt.Views.RefreshScrollView        android:id="@+id/activity_showshopoffice_scrollview"        android:layout_width="match_parent"        android:layout_height="match_parent"        android:layout_weight="1">        <LinearLayout            android:layout_width="match_parent"            android:layout_height="match_parent"            android:background="#ffffff"            android:id="@+id/activity_showshopoffice_scrollviewHead"            android:orientation="vertical">            <include layout="@layout/assembly_act_offsethead" />            <!--图片显示-->            <RelativeLayout                android:layout_width="match_parent"                android:layout_height="300dp">                <LinearLayout                    android:id="@+id/activity_showshopoffice_title_body"                    android:layout_width="match_parent"                    android:layout_height="50dp"                    android:background="@color/ThemeColor"                    android:orientation="vertical">                    <TextView                        android:layout_width="match_parent"                        android:layout_height="wrap_content"                        android:paddingLeft="15dp"                        android:paddingTop="10dp"                        android:text="商品详情"                        android:textColor="#000000"                        android:textSize="15dp"                        android:textStyle="bold" />                </LinearLayout>                <RelativeLayout                    android:layout_width="match_parent"                    android:layout_height="250dp"                    android:layout_below="@id/activity_showshopoffice_title_body"                    android:background="#f30d88">                    <LinearLayout                        android:layout_width="match_parent"                        android:layout_height="100dp"                        android:layout_alignParentBottom="true"                        android:background="#ffffff">                    </LinearLayout>                    <ImageView                        android:layout_width="50dp"                        android:layout_height="50dp"                        android:layout_alignParentRight="true"                        android:layout_marginTop="149dp"                        android:src="@drawable/ico_not_like" />                    <LinearLayout                        android:id="@+id/activity_showshopoffice_photo_body"                        android:layout_width="300dp"                        android:layout_height="300dp"                        android:background="#ffffff">                        <ImageView                            android:layout_width="match_parent"                            android:layout_height="match_parent"                            android:src="@drawable/ico_delivery" />                    </LinearLayout>                    <RelativeLayout                        android:layout_width="match_parent"                        android:layout_height="wrap_content">                    </RelativeLayout>                </RelativeLayout>            </RelativeLayout>            <!--显示详细信息-->            <LinearLayout                android:layout_width="match_parent"                android:layout_height="match_parent"                android:layout_marginTop="5dp"                android:orientation="vertical">                <TextView                    android:layout_width="match_parent"                    android:layout_height="45dp"                    android:maxLines="2"                    android:paddingLeft="15dp"                    android:paddingRight="15dp"                    android:text="海飞丝洗发露怡神冰凉薄荷型400毫升海飞丝洗发露怡神冰凉薄荷型400毫升"                    android:textColor="#000000"                    android:textSize="17dp"                    android:textStyle="bold" />                <LinearLayout                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_marginTop="15dp"                    android:orientation="vertical">                    <shlm.lmcs.com.lazycat.LazyShopView.PriceNumberView                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:paddingLeft="15dp"                        android:text="17.57"                        android:textSize="12sp" />                    <LinearLayout                        android:layout_width="match_parent"                        android:layout_height="wrap_content"                        android:layout_marginTop="5dp"                        android:orientation="horizontal">                        <TextView                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:paddingLeft="15dp"                            android:text="@string/PriceSymbol"                            android:textColor="#000000" />                        <shlm.lmcs.com.lazycat.LazyShopView.PriceNumberView                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:text="17.57"                            android:textColor="@color/ThemeColor"                            android:textSize="30sp"                            android:textStyle="bold" />                        <RelativeLayout                            android:layout_width="wrap_content"                            android:layout_height="match_parent"                            android:layout_marginLeft="15dp"                            >                            <TextView                                android:layout_width="wrap_content"                                android:layout_height="wrap_content"                                android:background="#f30d88"                                android:paddingLeft="5dp"                                android:paddingTop="2dp"                                android:paddingRight="5dp"                                android:paddingBottom="2dp"                                android:text="促销"                                android:textColor="#ffffff"                                android:textSize="7sp" />                        </RelativeLayout>                        <RelativeLayout                            android:layout_width="wrap_content"                            android:layout_height="match_parent"                            android:layout_marginLeft="15dp"                            >                            <TextView                                android:layout_width="wrap_content"                                android:layout_height="wrap_content"                                android:background="@android:color/holo_blue_bright"                                android:paddingLeft="5dp"                                android:paddingTop="2dp"                                android:paddingRight="5dp"                                android:paddingBottom="2dp"                                android:text="懒猫专送"                                android:textColor="#ffffff"                                android:textSize="7sp" />                        </RelativeLayout>                    </LinearLayout>                </LinearLayout>                <!--显示促销的信息-->                <LinearLayout                    android:id="@+id/activity_showshopoffice_promotion_body"                    android:layout_width="match_parent"                    android:layout_height="wrap_content">                    <ImageView                        android:layout_width="20dp"                        android:layout_height="20dp"                        android:layout_marginLeft="15dp"                        android:layout_marginTop="5dp"                        android:src="@drawable/ico_promotion" />                    <TextView                        android:id="@+id/activity_showshopoffice_progrm_title"                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:layout_marginLeft="15dp"                        android:layout_marginTop="5dp"                        android:background="@color/ThemeColor"                        android:paddingLeft="5dp"                        android:paddingTop="2dp"                        android:paddingRight="5dp"                        android:paddingBottom="2dp"                        android:text="满200立减30元;满1000立减50元"                        android:textColor="#ffffff"                        android:textSize="10dp" />                </LinearLayout>                <LinearLayout                    android:layout_width="match_parent"                    android:layout_height="50dp"                    android:layout_marginTop="15dp"                    android:background="#e9e9e9"                    android:orientation="vertical">                    <TextView                        android:layout_width="match_parent"                        android:layout_height="wrap_content"                        android:layout_marginTop="10dp"                        android:gravity="center"                        android:text="品牌与公司地址"                        android:textColor="#666666"                        android:textSize="13sp" />                    <View                        android:layout_width="100dp"                        android:layout_height="1dp"                        android:layout_gravity="center"                        android:layout_marginTop="10dp"                        android:background="#666666" />                </LinearLayout>                <!--显示品牌信息-->                <LinearLayout                    android:layout_width="match_parent"                    android:layout_height="150dp"                    android:orientation="horizontal">                    <ImageView                        android:layout_width="150dp"                        android:layout_height="150dp"                        android:src="@drawable/piaorou" />                    <RelativeLayout                        android:layout_width="match_parent"                        android:layout_height="match_parent">                        <LinearLayout                            android:layout_width="match_parent"                            android:layout_height="wrap_content"                            android:layout_centerInParent="true"                            android:orientation="vertical">                            <TextView                                android:layout_width="match_parent"                                android:layout_height="wrap_content"                                android:layout_marginTop="10dp"                                android:paddingLeft="5dp"                                android:text="品牌名称:飘柔(宝洁旗下品牌)"                                android:textSize="13sp" />                            <TextView                                android:layout_width="match_parent"                                android:layout_height="wrap_content"                                android:layout_marginTop="10dp"                                android:maxLines="2"                                android:paddingLeft="5dp"                                android:text="公司地址:广州宝洁有限公司"                                android:textSize="10sp" />                        </LinearLayout>                    </RelativeLayout>                </LinearLayout>            </LinearLayout>        </LinearLayout>    </shlm.lmcs.com.lazycat.LazyCatProgramUnt.Views.RefreshScrollView>    <RelativeLayout        android:layout_width="match_parent"        android:layout_height="50dp"        android:layout_weight="0"        android:background="#e9e9e9">        <RelativeLayout            android:layout_width="match_parent"            android:layout_height="match_parent">            <RelativeLayout                android:layout_width="45dp"                android:layout_height="40dp"                android:layout_centerVertical="true"                android:orientation="vertical">                <ImageView                    android:id="@+id/activity_showshopoffice_btnReport"                    android:layout_width="30dp"                    android:layout_height="30dp"                    android:layout_centerHorizontal="true"                    android:src="@drawable/ico_report" />                <TextView                    android:id="@+id/activity_showshopoffice_btnReportTitle"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_below="@id/activity_showshopoffice_btnReport"                    android:layout_centerInParent="true"                    android:text="价格举报"                    android:textSize="8sp" />            </RelativeLayout>        </RelativeLayout>        <TextView            android:layout_width="wrap_content"            android:layout_height="match_parent"            android:layout_alignParentRight="true"            android:background="@color/ThemeColor"            android:gravity="center"            android:paddingLeft="15dp"            android:paddingTop="10dp"            android:paddingRight="15dp"            android:paddingBottom="10dp"            android:text="加入购物车(10)"            android:textColor="#ffffff"            android:textSize="15dp"            />    </RelativeLayout></LinearLayout>