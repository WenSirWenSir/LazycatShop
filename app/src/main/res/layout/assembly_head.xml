<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="45dp"    android:background="@color/ThemeColor"    android:focusable="true"    android:focusableInTouchMode="true"    >    <EditText        android:layout_width="match_parent"        android:layout_height="35dp"        android:maxLines="1"        android:background="#ffffff"        android:textSize="15sp"        android:textColor="#666666"        android:layout_centerInParent="true"        android:layout_marginLeft="10dp"        android:layout_alignParentLeft="true"        android:layout_marginRight="10dp"        android:singleLine="true"        android:paddingLeft="40dp"        android:id="@+id/assembly_head_input"        />    <ImageView        android:layout_width="25dp"        android:layout_height="25dp"        android:layout_centerVertical="true"        android:src="@drawable/ico_search"        android:layout_marginLeft="15dp"        android:layout_alignParentLeft="true"        android:layout_marginRight="15dp"        />    <shlm.lmcs.com.lazycat.LazyShopView.PriceNumberView        android:layout_width="wrap_content"        android:layout_height="35dp"        android:layout_alignParentRight="true"        android:layout_marginRight="5dp"        android:gravity="center"        android:paddingLeft="10dp"        android:paddingRight="10dp"        android:textSize="15sp"        android:id="@+id/assembly_head_searchTitle"        android:textStyle="bold"        android:visibility="gone"        android:background="@color/ThemeColor"        android:textColor="#ffffff"        android:layout_centerVertical="true"        android:text="搜索"        /></RelativeLayout>