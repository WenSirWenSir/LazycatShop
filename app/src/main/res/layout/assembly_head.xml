<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="45dp"    android:background="#ffffff"    android:focusable="true"    android:focusableInTouchMode="true">    <EditText        android:id="@+id/assembly_head_input"        android:layout_width="match_parent"        android:layout_height="35dp"        android:layout_alignParentLeft="true"        android:layout_centerInParent="true"        android:layout_marginLeft="10dp"        android:layout_marginRight="45dp"        android:background="#666666"        android:alpha="0.8"        android:maxLines="1"        android:paddingLeft="40dp"        android:singleLine="true"        android:textColor="#666666"        android:textSize="15sp" />    <ImageView        android:layout_width="20dp"        android:layout_height="20dp"        android:layout_alignParentRight="true"        android:layout_centerVertical="true"        android:layout_marginRight="55dp"        android:src="@drawable/ico_search" />    <shlm.lmcs.com.lazycat.LazyShopView.PriceNumberView        android:id="@+id/assembly_head_searchTitle"        android:layout_width="wrap_content"        android:layout_height="35dp"        android:layout_alignParentRight="true"        android:layout_centerVertical="true"        android:layout_marginRight="5dp"        android:background="@color/ThemeColor"        android:gravity="center"        android:paddingLeft="10dp"        android:paddingRight="10dp"        android:text="搜索"        android:textColor="#ffffff"        android:textSize="15sp"        android:textStyle="bold"        android:visibility="gone" />    <RelativeLayout        android:layout_width="30dp"        android:layout_height="match_parent"        android:layout_alignParentRight="true"        android:layout_marginRight="10dp"        >        <ImageView            android:layout_width="25dp"            android:layout_height="25dp"            android:layout_centerInParent="true"            android:layout_centerVertical="true"            android:src="@drawable/ico_bell" />        <shlm.lmcs.com.lazycat.LazyShopView.ProgramTitle            android:layout_width="15dp"            android:layout_marginTop="5dp"            android:layout_height="15dp"            android:layout_alignParentRight="true"            android:id="@+id/assembly_head_howmessageNumber"            android:text="9"            android:textColor="#000000"            android:gravity="center"            android:textSize="10dp"            />    </RelativeLayout></RelativeLayout>