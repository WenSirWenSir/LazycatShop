<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:fitsSystemWindows="true"    android:orientation="vertical">    <include layout="@layout/assembly_act_head" />    <TextView        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_marginLeft="10dp"        android:layout_marginTop="15dp"        android:text="支付金额:"        android:textColor="#020433"        android:textSize="15sp" />    <!--设置支付金额-->    <RelativeLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginTop="15dp">        <LinearLayout            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_centerHorizontal="true">            <shlm.lmcs.com.lazycat.LazyShopView.PriceNumberView                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:text="@string/PriceSymbol"                android:textSize="15sp" />            <shlm.lmcs.com.lazycat.LazyShopView.PriceNumberView                android:id="@+id/activity_systemcashierPaymoney"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:text="329.38"                android:textColor="@color/colorPrice"                android:textSize="52sp" />        </LinearLayout>    </RelativeLayout>    <!--让用户选择优惠卷-->    <LinearLayout        android:id="@+id/activity_systemcashier_spinnerBody"        android:layout_width="match_parent"        android:layout_height="30dp"        android:layout_marginTop="15dp"        android:orientation="horizontal">        <RelativeLayout            android:layout_width="wrap_content"            android:layout_height="30dp">            <TextView                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_centerVertical="true"                android:layout_marginLeft="10dp"                android:text="您的账户存在优惠卷:"                android:textColor="@color/colorText"                android:textSize="15sp" />        </RelativeLayout>        <LinearLayout            android:layout_width="0dp"            android:layout_height="wrap_content"            android:layout_weight="1">            <Spinner                android:id="@+id/activity_systemcashier_spinner"                android:layout_width="match_parent"                android:layout_height="30dp">            </Spinner>        </LinearLayout>    </LinearLayout>    <!--重新计算-->    <LinearLayout        android:id="@+id/activity_systemcashier_CouponBody"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:orientation="vertical">        <shlm.lmcs.com.lazycat.LazyShopView.PriceNumberView            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:gravity="right"            android:paddingRight="10dp"            android:text="优惠:-9"            android:textColor="#999999"            android:textSize="13sp" />        <shlm.lmcs.com.lazycat.LazyShopView.PriceNumberView            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_marginTop="5dp"            android:gravity="right"            android:paddingRight="10dp"            android:text="手续费:+3"            android:textColor="#999999"            android:textSize="13sp" />    </LinearLayout>    <!--分割线条-->    <View        android:layout_width="match_parent"        android:layout_height="2dp"        android:layout_marginTop="10dp"        android:background="@drawable/border_dotted_line"        android:layerType="software" />    <!--总计支付金额-->    <LinearLayout        android:id="@+id/activity_systemcashier_toPaytotalBody"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:orientation="vertical">        <shlm.lmcs.com.lazycat.LazyShopView.PriceNumberView            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_marginTop="5dp"            android:gravity="right"            android:paddingRight="10dp"            android:text="合计应支付:89"            android:textColor="@color/ThemeColor"            android:textSize="13sp" />    </LinearLayout>    <TextView        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_marginLeft="10dp"        android:layout_marginTop="10dp"        android:text="请选择您的支付方式:"        android:textColor="#020433"        android:textSize="15sp" />    <!--设置支付方式-->    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:orientation="vertical">        <LinearLayout            android:layout_width="match_parent"            android:layout_height="40dp"            android:layout_marginTop="20dp">            <ImageView                android:layout_width="20dp"                android:layout_height="40dp"                android:layout_marginLeft="10dp"                android:src="@drawable/ico_noselect" />            <ImageView                android:layout_width="40dp"                android:layout_height="40dp"                android:layout_marginLeft="15dp"                android:src="@drawable/ico_weixin" />            <LinearLayout                android:layout_width="match_parent"                android:layout_height="60dp"                android:orientation="horizontal">                <TextView                    android:id="@+id/activity_systemcashierBtnPaytoWeixin"                    android:layout_width="wrap_content"                    android:layout_height="40dp"                    android:gravity="center_vertical"                    android:paddingLeft="10dp"                    android:text="微信零钱支付"                    android:textColor="#020433"                    android:textSize="17sp" />                <RelativeLayout                    android:layout_width="wrap_content"                    android:layout_height="match_parent"                    android:layout_marginLeft="10dp">                    <TextView                        android:id="@+id/activity_systemcashierWxPayTitle"                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:layout_alignParentTop="true"                        android:layout_marginTop="5dp"                        android:background="@color/ThemeColor"                        android:paddingLeft="5dp"                        android:paddingTop="2dp"                        android:paddingRight="5dp"                        android:paddingBottom="2dp"                        android:text="满138元免手续费"                        android:textColor="#ffffff"                        android:textSize="13sp" />                </RelativeLayout>            </LinearLayout>        </LinearLayout>        <!--云仓库余额支付-->        <LinearLayout            android:layout_width="match_parent"            android:layout_height="40dp"            android:layout_marginTop="5dp">            <ImageView                android:layout_width="20dp"                android:layout_height="40dp"                android:layout_marginLeft="10dp"                android:src="@drawable/ico_select" />            <TextView                android:id="@+id/activity_systemcashierYunCanku"                android:layout_width="40dp"                android:layout_height="40dp"                android:layout_marginLeft="15dp"                android:gravity="center"                android:text="仓"                android:textColor="#08c299"                android:textSize="30dp" />            <LinearLayout                android:layout_width="match_parent"                android:layout_height="60dp"                android:orientation="horizontal">                <TextView                    android:id="@+id/activity_systemcashierBtnPaytoCangku"                    android:layout_width="wrap_content"                    android:layout_height="40dp"                    android:gravity="center_vertical"                    android:paddingLeft="10dp"                    android:text="云仓库余额支付"                    android:textColor="#020433"                    android:textSize="17sp" />                <RelativeLayout                    android:layout_width="wrap_content"                    android:layout_height="match_parent"                    android:layout_marginLeft="10dp">                    <TextView                        android:id="@+id/activity_systemcashierCankuPayTitle"                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:layout_alignParentTop="true"                        android:layout_marginTop="5dp"                        android:background="@color/colorPrice"                        android:paddingLeft="5dp"                        android:paddingTop="2dp"                        android:paddingRight="5dp"                        android:paddingBottom="2dp"                        android:text="满200立减10元,免手续费"                        android:textColor="#ffffff"                        android:textSize="13sp" />                </RelativeLayout>            </LinearLayout>        </LinearLayout>        <!--提示余额还有多少-->        <RelativeLayout            android:layout_width="match_parent"            android:layout_height="30dp">            <shlm.lmcs.com.lazycat.LazyShopView.PriceNumberView                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_centerVertical="true"                android:layout_toLeftOf="@id/activity_systemCashierBtntoRecharge"                android:text="余额:179"                android:textColor="#020433"                android:textSize="13sp" />            <shlm.lmcs.com.lazycat.LazyShopView.PriceNumberView                android:id="@+id/activity_systemCashierBtntoRecharge"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_alignParentRight="true"                android:layout_centerVertical="true"                android:layout_marginRight="10dp"                android:text="(余额充足,无需充值)"                android:textColor="@color/colorPrice"                android:textSize="13sp" />        </RelativeLayout>        <!--现金支付-->        <LinearLayout            android:layout_width="match_parent"            android:layout_height="40dp">            <ImageView                android:layout_width="20dp"                android:layout_height="40dp"                android:layout_marginLeft="10dp"                android:src="@drawable/ico_noselect" />            <ImageView                android:layout_width="40dp"                android:layout_height="40dp"                android:layout_marginLeft="15dp"                android:src="@drawable/ico_paytocash" />            <LinearLayout                android:layout_width="match_parent"                android:layout_height="40dp">                <TextView                    android:id="@+id/activity_systemcashierBtnPaytoCashier"                    android:layout_width="wrap_content"                    android:layout_height="40dp"                    android:gravity="center_vertical"                    android:paddingLeft="10dp"                    android:text="现金支付"                    android:textColor="#020433"                    android:textSize="17sp" />                <RelativeLayout                    android:layout_width="wrap_content"                    android:layout_height="match_parent"                    android:layout_marginLeft="10dp">                    <TextView                        android:id="@+id/activity_systemcashierCashpayTitle"                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:layout_alignParentTop="true"                        android:layout_marginTop="5dp"                        android:background="@color/ThemeColor"                        android:paddingLeft="5dp"                        android:paddingTop="2dp"                        android:paddingRight="5dp"                        android:paddingBottom="2dp"                        android:text="满138元免手续费"                        android:textColor="#ffffff"                        android:textSize="13sp" />                </RelativeLayout>            </LinearLayout>        </LinearLayout>    </LinearLayout>    <!--确定支付-->    <RelativeLayout        android:layout_width="match_parent"        android:layout_height="match_parent">        <TextView            android:layout_width="160dp"            android:layout_height="35dp"            android:layout_alignParentBottom="true"            android:layout_centerHorizontal="true"            android:layout_marginBottom="15dp"            android:background="@color/ThemeColor"            android:gravity="center"            android:text="确定支付"            android:textColor="#ffffff"            android:textSize="15sp" />    </RelativeLayout></LinearLayout>