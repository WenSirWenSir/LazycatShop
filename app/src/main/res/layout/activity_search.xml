<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:orientation="vertical">    <LinearLayout        android:layout_width="match_parent"        android:layout_height="30dp"        android:background="#f30d88"></LinearLayout>    <!--头部文件-->    <include layout="@layout/assembly_head" />    <shlm.lmcs.com.lazycat.LazyCatProgramUnt.Views.RefreshScrollView        android:layout_width="match_parent"        android:layout_height="match_parent">        <LinearLayout            android:layout_width="match_parent"            android:layout_height="match_parent"            android:background="#ffffff"            android:orientation="vertical">            <!--标题-->            <TextView                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_marginLeft="15dp"                android:layout_marginTop="10dp"                android:text="大家都在搜"                android:textColor="#666666"                android:textSize="13sp"                android:textStyle="bold"                />            <View                android:layout_width="match_parent"                android:layout_height="1dp"                android:layout_marginTop="10dp"                android:background="#e9e9e9" />            <!--自动换行控件-->            <shlm.lmcs.com.lazycat.LazyCatProgramUnt.Views.AutoLineLayout                android:id="@+id/activity_everyone_searchBody"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_marginTop="15dp"                android:background="#ffffff"                android:orientation="horizontal"                >            </shlm.lmcs.com.lazycat.LazyCatProgramUnt.Views.AutoLineLayout>            <!--展示广告-->            <LinearLayout                android:layout_width="match_parent"                android:layout_height="150dp"                android:layout_marginTop="15dp"                android:background="#e9e9e9">                <ImageView                    android:layout_width="match_parent"                    android:layout_height="match_parent"                    android:layout_margin="10dp"                    android:src="@drawable/aaaa" />            </LinearLayout>            <!--标题-->            <TextView                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_marginLeft="15dp"                android:layout_marginTop="10dp"                android:text="搜索记录"                android:textColor="#666666"                android:textSize="13sp"                android:textStyle="bold"                />            <View                android:layout_width="match_parent"                android:layout_height="1dp"                android:layout_marginTop="10dp"                android:background="#e9e9e9" />            <!--自动换行控件用户的搜索记录-->            <shlm.lmcs.com.lazycat.LazyCatProgramUnt.Views.AutoLineLayout                android:id="@+id/activity_search_searchLogBody"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_marginTop="15dp"                android:background="#ffffff"                android:orientation="horizontal"                >            </shlm.lmcs.com.lazycat.LazyCatProgramUnt.Views.AutoLineLayout>            <TextView                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_marginLeft="15dp"                android:layout_marginTop="10dp"                android:gravity="center"                android:text="清空记录"                android:textColor="#a9a9a9"                android:textSize="13sp"                android:textStyle="bold"                />            <View                android:layout_width="match_parent"                android:layout_height="1dp"                android:layout_marginTop="10dp"                android:background="#e9e9e9" />        </LinearLayout>    </shlm.lmcs.com.lazycat.LazyCatProgramUnt.Views.RefreshScrollView></LinearLayout>