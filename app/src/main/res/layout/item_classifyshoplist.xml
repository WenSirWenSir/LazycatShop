<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:background="#efefef"    android:orientation="vertical">    <!--显示的控件的主要BODY-->    <LinearLayout        android:id="@+id/item_classifyshoplistBody"        android:layout_width="match_parent"        android:layout_height="120dp"        android:layout_marginLeft="15dp"        android:layout_marginTop="5dp"        android:layout_marginRight="15dp"        android:background="#ffffff"        android:orientation="horizontal"        android:padding="5dp">        <!--展示图片的区域-->        <RelativeLayout            android:layout_width="0dp"            android:layout_height="match_parent"            android:layout_weight="1">            <com.makeramen.roundedimageview.RoundedImageView                android:id="@+id/item_classifyshoplistImg"                android:layout_width="90dp"                android:layout_height="90dp"                android:layout_centerInParent="true"                android:layout_margin="2dp"                app:riv_corner_radius="5dp"                app:riv_oval="false" />            <!--没有货源-->            <ImageView                android:id="@+id/item_classifyshoplistNostock"                android:layout_width="match_parent"                android:layout_height="match_parent"                android:alpha="0.8"                android:src="@drawable/no_stocknumber"                android:visibility="gone" />        </RelativeLayout>        <!--显示商品的信息  标题 售价 积分  -->        <LinearLayout            android:layout_width="0dp"            android:layout_height="match_parent"            android:layout_marginLeft="5dp"            android:layout_weight="3"            android:orientation="vertical">            <RelativeLayout                android:layout_width="match_parent"                android:layout_height="0dp"                android:layout_weight="2">                <shlm.lmcs.com.lazycat.LazyShopView.SystemTextView                    android:id="@+id/item_classifyshoplistTitle"                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_centerVertical="true"                    android:ellipsize="end"                    android:maxLines="1"                    android:textColor="@color/colorText"                    android:textSize="13dp" />            </RelativeLayout>            <!--设置箱规-->            <RelativeLayout                android:layout_width="match_parent"                android:layout_height="0dp"                android:layout_weight="1">                <shlm.lmcs.com.lazycat.LazyShopView.SystemTextView                    android:id="@+id/item_classifyshoplistSpec"                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_centerVertical="true"                    android:ellipsize="end"                    android:maxLines="1"                    android:textColor="#666666"                    android:textSize="10dp" />            </RelativeLayout>            <RelativeLayout                android:layout_width="match_parent"                android:layout_height="0dp"                android:layout_weight="1">                <shlm.lmcs.com.lazycat.LazyShopView.SystemTextView                    android:id="@+id/item_classifyshoplistExp"                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_centerVertical="true"                    android:ellipsize="end"                    android:maxLines="1"                    android:textColor="#666666"                    android:textSize="10dp" />            </RelativeLayout>            <RelativeLayout                android:layout_width="match_parent"                android:layout_height="0dp"                android:layout_weight="2">                <shlm.lmcs.com.lazycat.LazyShopView.PriceNumberView                    android:id="@+id/item_classifyshoplistIntegral"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_centerVertical="true"                    android:background="@color/colorVip"                    android:paddingLeft="5dp"                    android:paddingTop="2dp"                    android:paddingRight="5dp"                    android:paddingBottom="2dp"                    android:textColor="#ffffff"                    android:textSize="10sp" />            </RelativeLayout>            <LinearLayout                android:layout_width="match_parent"                android:layout_height="0dp"                android:layout_weight="2">                <LinearLayout                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:orientation="horizontal">                    <shlm.lmcs.com.lazycat.LazyShopView.SystemTextView                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:layout_centerVertical="true"                        android:text="￥:"                        android:textColor="@color/ThemeColor"                        android:textSize="10sp" />                    <shlm.lmcs.com.lazycat.LazyShopView.PriceNumberView                        android:id="@+id/item_classifyshoplistTp"                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:layout_centerVertical="true"                        android:textColor="@color/ThemeColor"                        android:textSize="15sp" />                    <TextView                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:layout_centerVertical="true"                        android:text="/"                        android:textColor="@color/ThemeColor"                        android:textSize="8sp" />                    <TextView                        android:id="@+id/item_classifyshoplisttpUnit"                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:layout_centerVertical="true"                        android:textColor="@color/ThemeColor"                        android:textSize="10sp" />                </LinearLayout>            </LinearLayout>        </LinearLayout>    </LinearLayout></LinearLayout>