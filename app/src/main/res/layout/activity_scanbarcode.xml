<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:fitsSystemWindows="true"    android:orientation="vertical">    <include layout="@layout/assembly_act_head" />    <shlm.lmcs.com.lazycat.LazyCatProgramUnt.Views.RefreshScrollView        android:layout_width="match_parent"        android:layout_height="match_parent"        android:scrollbars="none">        <LinearLayout            android:id="@+id/activity_scanbarcode_ScrollBody"            android:layout_width="match_parent"            android:layout_height="match_parent"            android:orientation="vertical"            android:visibility="visible">            <LinearLayout                android:layout_width="match_parent"                android:layout_height="wrap_content">                <TextView                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:paddingLeft="10dp"                    android:text="条码"                    android:textColor="@color/colorText"                    android:textSize="12sp" />                <ImageView                    android:id="@+id/activity_scanbarcode_ScanBarcodeImg"                    android:layout_width="180dp"                    android:layout_height="40dp"                    android:scaleType="fitXY" />            </LinearLayout>            <LinearLayout                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_marginTop="15dp"                android:orientation="vertical">                <View                    android:layout_width="match_parent"                    android:layout_height="2dp"                    android:layout_marginRight="100dp"                    android:background="@drawable/border_dotted_line"                    android:layerType="software" />                <RelativeLayout                    android:layout_width="match_parent"                    android:layout_height="wrap_content">                    <shlm.lmcs.com.lazycat.LazyShopView.PriceNumberView                        android:id="@+id/activity_scanbarcode_ScanShopstatus"                        android:layout_width="100dp"                        android:layout_height="25dp"                        android:layout_alignParentRight="true"                        android:background="@color/ThemeColor"                        android:gravity="center"                        android:text="订单中暂无该货单"                        android:textColor="#ffffff"                        android:textSize="10sp" />                </RelativeLayout>                <include                    android:id="@+id/activity_scanbarcode_SearchresultBody"                    layout="@layout/item_searchshoplist" />                <!--通知用户的发货记录 告知用户以前的订单是否销售完毕-->                <LinearLayout                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:id="@+id/acitivy_scanbarcode_toSendsystemBody"                    android:layout_marginTop="15dp"                    android:orientation="vertical">                    <TextView                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:layout_marginLeft="10dp"                        android:text="发货记录"                        android:textColor="@color/ThemeColor"                        android:textSize="25sp"                        android:textStyle="bold"                        />                    <shlm.lmcs.com.lazycat.LazyShopView.PriceNumberView                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:layout_marginLeft="10dp"                        android:layout_marginTop="10dp"                        android:text="@string/toScanQRtoSendMsg"                        android:textColor="#020433"                        android:textSize="13sp"                        />                    <RelativeLayout                        android:layout_width="match_parent"                        android:layout_height="wrap_content"                        android:layout_marginTop="15dp">                        <View                            android:layout_width="100dp"                            android:layout_height="2dp"                            android:layout_centerInParent="true"                            android:layout_marginRight="100dp"                            android:background="@drawable/border_dotted_line"                            android:layerType="software" />                    </RelativeLayout>                    <!--展示购买记录的商品的ITEM的BODY-->                    <LinearLayout                        android:layout_width="match_parent"                        android:layout_height="wrap_content"                        android:orientation="vertical">                        <include layout="@layout/item_sendsystemorderact_list" />                    </LinearLayout>                </LinearLayout>                <!--历史的记录 告知用户以前的订单是否销售完毕-->                <LinearLayout                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_marginTop="15dp"                    android:orientation="vertical">                    <TextView                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:layout_marginLeft="10dp"                        android:text="交易完成"                        android:textColor="@color/colorText"                        android:textSize="25sp"                        android:textStyle="bold"                        />                    <shlm.lmcs.com.lazycat.LazyShopView.PriceNumberView                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:layout_marginLeft="10dp"                        android:layout_marginTop="10dp"                        android:text="您还在下列时间中购买过该商品,请确认您已销售完毕哦."                        android:textColor="#020433"                        android:textSize="13sp"                        />                    <RelativeLayout                        android:layout_width="match_parent"                        android:layout_height="wrap_content"                        android:layout_marginTop="15dp">                        <View                            android:layout_width="100dp"                            android:layout_height="2dp"                            android:layout_centerInParent="true"                            android:layout_marginRight="100dp"                            android:background="@drawable/border_dotted_line"                            android:layerType="software" />                    </RelativeLayout>                    <!--展示购买记录的商品的ITEM的BODY-->                    <LinearLayout                        android:layout_width="match_parent"                        android:layout_height="wrap_content"                        android:orientation="vertical">                        <include layout="@layout/item_sendsystemorderact_list" />                        <include layout="@layout/item_sendsystemorderact_list" />                        <include layout="@layout/item_sendsystemorderact_list" />                        <include layout="@layout/item_sendsystemorderact_list" />                    </LinearLayout>                </LinearLayout>            </LinearLayout>        </LinearLayout>    </shlm.lmcs.com.lazycat.LazyCatProgramUnt.Views.RefreshScrollView></LinearLayout>