<?xml version="1.0" encoding="utf-8"?><ScrollView xmlns:android="http://schemas.android.com/apk/res/android"        xmlns:app="http://schemas.android.com/apk/res-auto"        android:layout_width="match_parent"        android:layout_height="match_parent"        android:background="#efefef"        android:fitsSystemWindows="false">    <RelativeLayout            android:layout_width="match_parent"            android:layout_height="match_parent"            android:background="#efefef"            android:fitsSystemWindows="true"            android:orientation="vertical">        <RelativeLayout                android:id="@+id/activity_scanbarcodeIco"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_centerHorizontal="true"                android:layout_marginTop="25dp"                android:orientation="horizontal">            <com.makeramen.roundedimageview.RoundedImageView                    android:layout_width="25dp"                    android:layout_height="25dp"                    android:src="@drawable/ic_launcher_web"                    app:riv_corner_radius="5dp"                    app:riv_oval="false"                    />            <shlm.lmcs.com.lazycat.LazyShopView.SystemTextView                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_centerVertical="true"                    android:layout_marginLeft="30dp"                    android:text="云仓库配送扫描"                    android:textColor="#010101" />        </RelativeLayout>        <!--图片的容器-->        <RelativeLayout                android:id="@+id/activity_scanbarcodeImgBody"                android:layout_width="match_parent"                android:layout_height="300dp"                android:layout_below="@id/activity_scanbarcodeIco"                android:layout_marginTop="20dp">            <com.makeramen.roundedimageview.RoundedImageView                    android:layout_width="300dp"                    android:layout_height="300dp"                    android:id="@+id/activity_scanbarcodeImg"                    android:layout_centerHorizontal="true"                    app:riv_corner_radius="10dp"                    app:riv_oval="false" />        </RelativeLayout>        <!--价格和标题-->        <RelativeLayout                android:id="@+id/activity_scanbarcodeTp"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_below="@id/activity_scanbarcodeImgBody"                android:layout_marginTop="15dp">            <LinearLayout                    android:layout_width="180dp"                    android:layout_height="wrap_content"                    android:layout_centerHorizontal="true"                    android:orientation="horizontal">                <LinearLayout                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:orientation="vertical">                    <shlm.lmcs.com.lazycat.LazyShopView.SystemTextView                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:layout_marginLeft="4dp"                            android:text="R M B"                            android:textColor="#000000"                            />                    <shlm.lmcs.com.lazycat.LazyShopView.SystemTextView                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:text="批 发 价"                            android:textColor="#000000" />                </LinearLayout>                <RelativeLayout                        android:layout_width="wrap_content"                        android:layout_height="match_parent">                    <shlm.lmcs.com.lazycat.LazyShopView.SystemTextView                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:id="@+id/activity_scanbarcodeTpView"                            android:layout_alignParentBottom="true"                            android:layout_marginLeft="5dp"                            android:textColor="@color/colorReserve"                            android:textSize="25dp" />                </RelativeLayout>            </LinearLayout>        </RelativeLayout>        <RelativeLayout                android:id="@+id/activity_scanbarcodeIntegral"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_below="@id/activity_scanbarcodeTp"                android:layout_marginTop="15dp">            <LinearLayout                    android:layout_width="180dp"                    android:layout_height="wrap_content"                    android:layout_centerHorizontal="true"                    android:orientation="horizontal">                <LinearLayout                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:orientation="vertical">                    <shlm.lmcs.com.lazycat.LazyShopView.SystemTextView                            android:layout_width="match_parent"                            android:layout_height="wrap_content"                            android:gravity="center"                            android:text="I N T"                            android:textColor="@color/colorVip" />                    <shlm.lmcs.com.lazycat.LazyShopView.SystemTextView                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:text="得 积 分"                            android:textColor="@color/colorVip" />                </LinearLayout>                <RelativeLayout                        android:layout_width="wrap_content"                        android:layout_height="match_parent">                    <shlm.lmcs.com.lazycat.LazyShopView.SystemTextView                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:layout_alignParentBottom="true"                            android:layout_marginLeft="5dp"                            android:id="@+id/activity_scanbarcodeIntegralView"                            android:textColor="@color/colorVip"                            android:textSize="25dp" />                </RelativeLayout>            </LinearLayout>        </RelativeLayout>        <LinearLayout                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_below="@id/activity_scanbarcodeIntegral"                android:orientation="vertical">            <android.support.v4.view.ViewPager                    android:layout_width="match_parent"                    android:layout_height="2dp"                    android:layout_marginLeft="35dp"                    android:layout_marginTop="10dp"                    android:layout_marginRight="35dp"                    android:background="@drawable/border_dotted_line"                    android:layerType="software" />            <RelativeLayout                    android:layout_width="match_parent"                    android:layout_height="wrap_content">                <shlm.lmcs.com.lazycat.LazyShopView.SystemTextView                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:layout_centerHorizontal="true"                        android:layout_marginLeft="50dp"                        android:id="@+id/activity_scanbarcodeTitle"                        android:layout_marginTop="5dp"                        android:textColor="#000000"                        android:textSize="16dp" />            </RelativeLayout>            <RelativeLayout                    android:layout_width="match_parent"                    android:layout_height="wrap_content">                <shlm.lmcs.com.lazycat.LazyShopView.SystemTextView                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:layout_centerHorizontal="true"                        android:layout_marginLeft="50dp"                        android:layout_marginTop="5dp"                        android:text="@string/SystemBottommsg"                        android:textColor="#a9a9a9"                        android:textSize="10dp" />            </RelativeLayout>            <RelativeLayout                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_marginTop="20dp">                <RelativeLayout                        android:layout_width="60dp"                        android:layout_height="60dp"                        android:layout_centerHorizontal="true"                        android:id="@+id/activity_scanbarcodeBtntoPay"                        android:background="@color/ThemeColor">                    <LinearLayout                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:layout_centerInParent="true"                            android:orientation="vertical">                        <shlm.lmcs.com.lazycat.LazyShopView.SystemTextView                                android:layout_width="wrap_content"                                android:layout_height="wrap_content"                                android:text="立刻"                                android:textColor="#ffffff"                                android:textSize="13dp" />                        <shlm.lmcs.com.lazycat.LazyShopView.SystemTextView                                android:layout_width="wrap_content"                                android:layout_height="wrap_content"                                android:text="补货"                                android:textColor="#ffffff"                                android:textSize="13dp" />                    </LinearLayout>                </RelativeLayout>            </RelativeLayout>        </LinearLayout>    </RelativeLayout>    <!----></ScrollView>