<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="90dp">    <RelativeLayout        android:layout_width="0dp"        android:layout_weight="1"        android:layout_height="match_parent">        <ImageView            android:layout_width="50dp"            android:layout_height="50dp"            android:layout_centerHorizontal="true"            android:id="@+id/assembly_fragment_main_nava_fristImg"            android:layout_marginTop="10dp"            android:src="@drawable/ico_drink"            />        <TextView            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:text="免费饮料"            android:textSize="10sp"            android:layout_below="@id/assembly_fragment_main_nava_fristImg"            android:id="@+id/assembly_fragment_main_nava_fristTitle"            android:layout_marginTop="5dp"            android:textColor="#000000"            android:layout_alignParentBottom="true"            android:gravity="center"            />    </RelativeLayout>    <RelativeLayout        android:layout_width="0dp"        android:layout_weight="1"        android:layout_height="match_parent">        <ImageView            android:layout_width="50dp"            android:layout_height="50dp"            android:layout_centerHorizontal="true"            android:layout_marginTop="10dp"            android:id="@+id/assembly_fragment_main_nava_secondImg"            android:src="@drawable/ico_fruits"            />        <TextView            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_below="@id/assembly_fragment_main_nava_secondImg"            android:id="@+id/assembly_fragment_main_nava_secondTitle"            android:layout_marginTop="5dp"            android:text="特价水果"            android:textSize="10dp"            android:layout_alignParentBottom="true"            android:textColor="#000000"            android:gravity="center"            />    </RelativeLayout>    <RelativeLayout        android:layout_width="0dp"        android:layout_weight="1"        android:layout_height="match_parent">        <ImageView            android:layout_width="50dp"            android:layout_height="50dp"            android:layout_centerHorizontal="true"            android:layout_marginTop="10dp"            android:id="@+id/assembly_fragment_main_nava_threeImg"            android:src="@drawable/ico_roll"            />        <TextView            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_below="@id/assembly_fragment_main_nava_threeImg"            android:id="@+id/assembly_fragment_main_nava_threeTitle"            android:layout_marginTop="5dp"            android:text="免费领劵"            android:textSize="10dp"            android:layout_alignParentBottom="true"            android:textColor="#000000"            android:gravity="center"            />    </RelativeLayout>    <RelativeLayout        android:layout_width="0dp"        android:layout_weight="1"        android:layout_height="match_parent">        <ImageView            android:layout_width="50dp"            android:layout_height="50dp"            android:layout_centerHorizontal="true"            android:src="@drawable/ico_envelope"            android:id="@+id/assembly_fragment_main_nava_fourImg"            android:layout_marginTop="10dp"            />        <TextView            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:text="新人专享"            android:textSize="10dp"            android:layout_below="@id/assembly_fragment_main_nava_fourImg"            android:textColor="#000000"            android:layout_marginTop="5dp"            android:layout_alignParentBottom="true"            android:gravity="center"            />    </RelativeLayout></LinearLayout>