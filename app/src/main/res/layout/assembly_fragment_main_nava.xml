<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="wrap_content">    <RelativeLayout        android:layout_width="0dp"        android:layout_height="wrap_content"        android:id="@+id/assembly_fragment_main_nav_firstBody"        android:layout_weight="1">        <ImageView            android:id="@+id/assembly_fragment_main_nava_fristImg"            android:layout_width="50dp"            android:layout_height="50dp"            android:layout_centerHorizontal="true"            android:layout_marginTop="30dp"            android:src="@drawable/gh88877" />        <TextView            android:id="@+id/assembly_fragment_main_nava_fristTitle"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_below="@id/assembly_fragment_main_nava_fristImg"            android:layout_marginTop="5dp"            android:gravity="center"            android:text="免费饮料"            android:textColor="#000000"            android:textSize="10sp" />        <TextView            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_alignParentRight="true"            android:paddingLeft="10dp"            android:background="@android:color/holo_blue_light"            android:paddingTop="2dp"            android:textColor="#ffffff"            android:paddingRight="10dp"            android:paddingBottom="2dp"            android:layout_marginTop="2dp"            android:id="@+id/assembly_fragment_main_nava_fristStatic"            android:text="正常"            android:textSize="10sp" />    </RelativeLayout>    <RelativeLayout        android:layout_width="0dp"        android:layout_height="wrap_content"        android:layout_weight="1">        <TextView            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_alignParentRight="true"            android:paddingLeft="10dp"            android:paddingTop="2dp"            android:paddingRight="10dp"            android:textColor="#ffffff"            android:paddingBottom="2dp"            android:background="@android:color/holo_orange_dark"            android:text="正常"            android:layout_marginTop="2dp"            android:textSize="10sp" />        <ImageView            android:id="@+id/assembly_fragment_main_nava_secondImg"            android:layout_width="50dp"            android:layout_height="50dp"            android:layout_centerHorizontal="true"            android:layout_marginTop="30dp"            android:src="@drawable/sd8888" />        <TextView            android:id="@+id/assembly_fragment_main_nava_secondTitle"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_below="@id/assembly_fragment_main_nava_secondImg"            android:layout_marginTop="5dp"            android:gravity="center"            android:text="特价水果"            android:textColor="#000000"            android:textSize="10dp" />    </RelativeLayout>    <RelativeLayout        android:layout_width="0dp"        android:layout_height="match_parent"        android:layout_weight="1">        <ImageView            android:id="@+id/assembly_fragment_main_nava_threeImg"            android:layout_width="50dp"            android:layout_height="50dp"            android:layout_centerHorizontal="true"            android:layout_marginTop="30dp"            android:src="@drawable/sb8765" />        <TextView            android:id="@+id/assembly_fragment_main_nava_threeTitle"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_below="@id/assembly_fragment_main_nava_threeImg"            android:layout_alignParentBottom="true"            android:layout_marginTop="5dp"            android:gravity="center"            android:text="免费领劵"            android:textColor="#000000"            android:textSize="10dp" />        <TextView            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_alignParentRight="true"            android:textColor="#ffffff"            android:paddingLeft="10dp"            android:paddingTop="2dp"            android:paddingRight="10dp"            android:paddingBottom="2dp"            android:layout_marginTop="2dp"            android:background="@android:color/darker_gray"            android:text="正常"            android:textSize="10sp" />    </RelativeLayout>    <RelativeLayout        android:layout_width="0dp"        android:layout_height="match_parent"        android:layout_weight="1">        <ImageView            android:id="@+id/assembly_fragment_main_nava_fourImg"            android:layout_width="50dp"            android:layout_height="50dp"            android:layout_centerHorizontal="true"            android:layout_marginTop="30dp"            android:src="@drawable/sdftr77" />        <TextView            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_below="@id/assembly_fragment_main_nava_fourImg"            android:layout_alignParentBottom="true"            android:layout_marginTop="5dp"            android:gravity="center"            android:text="新人专享"            android:textColor="#000000"            android:textSize="10dp" />        <TextView            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_alignParentRight="true"            android:paddingLeft="10dp"            android:textColor="#ffffff"            android:layout_marginRight="2dp"            android:paddingTop="2dp"            android:paddingRight="10dp"            android:paddingBottom="2dp"            android:layout_marginTop="2dp"            android:background="#f30d88"            android:text="正常"            android:textSize="10sp" />    </RelativeLayout></LinearLayout>