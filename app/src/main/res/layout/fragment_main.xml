<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:id="@+id/fragment_main_bigBody"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:orientation="vertical">    <RelativeLayout        android:layout_width="match_parent"        android:layout_height="50dp"        android:layout_marginTop="20dp"        android:background="#ffffff">        <TextView            android:id="@+id/fragment_main_headTitle"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_centerInParent="true"            android:text="仓库网络"            android:textColor="#999999"            android:textSize="17sp" />        <RelativeLayout            android:id="@+id/fragment_main_btnSearchIco"            android:layout_width="40dp"            android:layout_height="40dp"            android:layout_alignParentRight="true"            android:layout_centerVertical="true"            android:layout_marginRight="15dp">            <ImageView                android:layout_width="20dp"                android:layout_height="20dp"                android:layout_centerInParent="true"                android:src="@drawable/ico_search" />        </RelativeLayout>    </RelativeLayout>    <shlm.lmcs.com.lazycat.LazyCatProgramUnt.Views.RefreshScrollView        android:id="@+id/fragment_main_refreshScrollview"        android:layout_width="match_parent"        android:layout_height="match_parent"        android:scrollbars="none">        <!--主要的BODY-->        <LinearLayout            android:id="@+id/fragment_main_body"            android:layout_width="match_parent"            android:layout_height="match_parent"            android:orientation="vertical">            <!--头部标签-->            <LinearLayout                android:id="@+id/fragment_main_refreshHead"                android:layout_width="match_parent"                android:layout_height="0dp"                android:background="#efefef"                android:orientation="vertical"                tools:ignore="Suspicious0dp">                <RelativeLayout                    android:layout_width="match_parent"                    android:layout_height="fill_parent">                    <ProgressBar                        android:id="@+id/fragment_main_Headprogressbar"                        android:layout_width="20dp"                        android:layout_height="20dp"                        android:layout_centerInParent="true" />                    <ImageView                        android:id="@+id/fragment_main_refreshHeadImg"                        android:layout_width="match_parent"                        android:layout_height="fill_parent" />                </RelativeLayout>            </LinearLayout>            <LinearLayout                android:layout_width="match_parent"                android:layout_height="180dp">                <ImageView                    android:layout_width="match_parent"                    android:layout_height="match_parent"                    android:id="@+id/fragment_main_bigHeadMsg"                    android:scaleType="fitXY" />            </LinearLayout>            <!--两个竖向的图片ITEM和两个横向的ITEM-->            <LinearLayout                android:layout_width="match_parent"                android:layout_height="200dp"                android:orientation="horizontal">                <LinearLayout                    android:layout_width="0dp"                    android:layout_height="200dp"                    android:layout_weight="1"                    android:orientation="vertical">                    <RelativeLayout                        android:layout_width="match_parent"                        android:layout_height="0dp"                        android:layout_weight="1"                        android:background="#efefef">                        <ImageView                            android:layout_width="match_parent"                            android:layout_height="match_parent"                            android:scaleType="fitXY"                            android:id="@+id/fragment_main_secondSmallNavAimg"                            android:src="@drawable/_1" />                        <TextView                            android:id="@+id/fragment_main_secondSmallNavAtitle"                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:layout_centerHorizontal="true"                            android:layout_marginTop="5dp"                            android:text="海天促销中"                            android:textColor="#020433"                            android:textSize="12sp"                            android:textStyle="bold" />                        <TextView                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:layout_below="@id/fragment_main_secondSmallNavAtitle"                            android:layout_centerHorizontal="true"                            android:id="@+id/fragment_main_secondSmallNavAcontext"                            android:layout_marginTop="5dp"                            android:text="全场满200立送洗洁精"                            android:textColor="#020433"                            android:textSize="10sp" />                    </RelativeLayout>                    <RelativeLayout                        android:layout_width="match_parent"                        android:layout_height="0dp"                        android:layout_weight="1">                        <ImageView                            android:layout_width="match_parent"                            android:layout_height="match_parent"                            android:id="@+id/fragment_main_secondSmallNavBimg"                            android:scaleType="centerCrop"                            android:src="@drawable/_2" />                        <TextView                            android:id="@+id/fragment_main_secondSmallNavBtitle"                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:layout_centerHorizontal="true"                            android:layout_marginTop="5dp"                            android:text="家居清洁"                            android:textColor="#020433"                            android:textSize="12sp"                            android:textStyle="bold" />                        <TextView                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:layout_below="@id/fragment_main_secondSmallNavBtitle"                            android:layout_centerHorizontal="true"                            android:id="@+id/fragment_main_secondSmallNavBcontext"                            android:layout_marginTop="5dp"                            android:text="给你更好的一个家"                            android:textColor="#020433"                            android:textSize="10sp" />                    </RelativeLayout>                </LinearLayout>                <RelativeLayout                    android:layout_width="0dp"                    android:layout_height="200dp"                    android:layout_weight="1">                    <ImageView                        android:layout_width="match_parent"                        android:layout_height="match_parent"                        android:id="@+id/fragment_main_secondSmallNavCimg"                        android:scaleType="centerCrop"                        android:src="@drawable/_3" />                    <TextView                        android:id="@+id/fragment_main_secondSmallNavCtitle"                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:layout_centerHorizontal="true"                        android:layout_marginTop="35dp"                        android:text="儿童零食新上架"                        android:textColor="#020433"                        android:textSize="12sp"                        android:textStyle="bold" />                    <TextView                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:layout_below="@id/fragment_main_secondSmallNavCtitle"                        android:layout_centerHorizontal="true"                        android:layout_marginTop="5dp"                        android:id="@+id/fragment_main_secondSmallNavCcontext"                        android:text="全场7.5折给力促"                        android:textColor="#020433"                        android:textSize="10sp" />                </RelativeLayout>                <RelativeLayout                    android:layout_width="0dp"                    android:layout_height="200dp"                    android:layout_weight="1">                    <ImageView                        android:layout_width="match_parent"                        android:layout_height="match_parent"                        android:scaleType="centerCrop"                        android:id="@+id/fragment_main_secondSmallNavDimg"                        android:src="@drawable/_4" />                    <TextView                        android:id="@+id/fragment_main_secondSmallNavDtitle"                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:layout_centerHorizontal="true"                        android:layout_marginTop="35dp"                        android:text="纸品卫生7.5折起"                        android:textColor="#020433"                        android:textSize="12sp"                        android:textStyle="bold" />                    <TextView                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:layout_below="@id/fragment_main_secondSmallNavDtitle"                        android:layout_centerHorizontal="true"                        android:layout_marginTop="5dp"                        android:text="火爆促销更多优惠"                        android:id="@+id/fragment_main_secondSmallNavDcontext"                        android:textColor="#020433"                        android:textSize="10sp" />                </RelativeLayout>            </LinearLayout>            <!--显示一个横向的导航-->            <LinearLayout                android:layout_width="match_parent"                android:layout_height="150dp">                <ImageView                    android:layout_width="match_parent"                    android:layout_height="match_parent"                    android:scaleType="centerCrop"                    android:src="@drawable/_5" />            </LinearLayout>            <!--显示三个横向的导航-->            <!--标题-->            <LinearLayout                android:layout_width="match_parent"                android:layout_height="200dp"                android:background="#ffffff"                android:orientation="horizontal">                <LinearLayout                    android:layout_width="0dp"                    android:layout_height="match_parent"                    android:layout_weight="1">                    <ImageView                        android:layout_width="match_parent"                        android:layout_height="match_parent"                        android:scaleType="center"                        android:src="@drawable/_3" />                </LinearLayout>                <LinearLayout                    android:layout_width="0dp"                    android:layout_height="match_parent"                    android:layout_weight="1">                    <ImageView                        android:layout_width="match_parent"                        android:layout_height="match_parent"                        android:scaleType="center"                        android:src="@drawable/_4" />                </LinearLayout>                <LinearLayout                    android:layout_width="0dp"                    android:layout_height="match_parent"                    android:layout_weight="1">                    <ImageView                        android:layout_width="match_parent"                        android:layout_height="match_parent"                        android:scaleType="center"                        android:src="@drawable/_3" />                </LinearLayout>            </LinearLayout>            <!--推荐的标题-->            <TextView                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_marginLeft="15dp"                android:layout_marginTop="15dp"                android:paddingBottom="15dp"                android:text="仓库网络·为您推荐"                android:textColor="#020433"                android:textSize="17sp"                android:textStyle="bold" />        </LinearLayout>    </shlm.lmcs.com.lazycat.LazyCatProgramUnt.Views.RefreshScrollView></LinearLayout>