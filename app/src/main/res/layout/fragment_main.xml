<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    android:id="@+id/fragment_main_bigBody"    android:layout_width="match_parent"    android:layout_height="match_parent">    <include        android:id="@+id/fragment_main_head"        layout="@layout/assembly_head" />    <shlm.lmcs.com.lazycat.LazyCatProgramUnt.Views.RefreshScrollView        android:id="@+id/fragment_main_refreshScrollview"        android:layout_width="match_parent"        android:layout_height="match_parent"        android:layout_marginTop="45dp"        android:scrollbars="none">        <!--主要的BODY-->        <LinearLayout            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:id="@+id/fragment_main_body"            android:orientation="vertical">            <include                android:id="@+id/fragment_main_layoutmore"                layout="@layout/layoutmore" />            <!--模块化管理  所有的模块各自分开各自有各自的处理机制-->            <!--头部的宣传界面的横条-->            <RelativeLayout                android:layout_width="match_parent"                android:layout_height="230dp">                <!--圆弧模块-->                <shlm.lmcs.com.lazycat.LazyCatProgramUnt.Views.ArcView                    android:layout_width="match_parent"                    android:id="@+id/fragment_main_arcView"                    android:layout_height="150dp"                    app:arcColor="#f30d88" />                <LinearLayout                    android:id="@+id/fragment_main_horizontaladv_body"                    android:layout_width="match_parent"                    android:layout_height="250dp"                    android:layout_marginLeft="10dp"                    android:layout_marginTop="10dp"                    android:layout_marginRight="10dp"                    android:orientation="vertical">                </LinearLayout>            </RelativeLayout>            <!--横向导航A-->            <LinearLayout                android:id="@+id/fragment_main_navA_body"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_marginTop="10dp"                android:background="#ffffff"                android:orientation="horizontal">            </LinearLayout>            <!--二批促销的展示-->            <LinearLayout                android:id="@+id/fragment_main_merchant"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:orientation="vertical">            </LinearLayout>            <!--促销与新品上架秒杀等-->            <LinearLayout                android:id="@+id/fragment_main_newShopin"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_marginLeft="5dp"                android:layout_marginTop="15dp"                android:layout_marginRight="5dp"                android:background="#ffffff"                android:orientation="horizontal">            </LinearLayout>            <!--品牌战-->            <!--其他的推荐-->            <!--推荐单个商品列表-->            <LinearLayout                android:id="@+id/fragment_main_singlebody"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_marginTop="15dp"                android:orientation="vertical">            </LinearLayout>            <!--单个商品的促销-->            <LinearLayout                android:layout_width="match_parent"                android:layout_height="wrap_content">                <include layout="@layout/assembly_fragment_main_morebrand" />            </LinearLayout>            <!--最后的一个横幅的图片推荐-->        </LinearLayout>    </shlm.lmcs.com.lazycat.LazyCatProgramUnt.Views.RefreshScrollView></RelativeLayout>