<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    android:id="@+id/fragment_main_bigBody"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:orientation="vertical">    <RelativeLayout        android:layout_width="match_parent"        android:layout_height="50dp"        android:layout_marginTop="20dp"        android:background="#ffffff">        <TextView            android:id="@+id/fragment_main_headTitle"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_centerInParent="true"            android:text="仓库网络"            android:textColor="#999999"            android:textSize="17sp" />        <ImageView            android:layout_width="20dp"            android:layout_height="20dp"            android:layout_alignParentRight="true"            android:layout_centerVertical="true"            android:layout_marginRight="15dp"            android:src="@drawable/ico_search" />    </RelativeLayout>    <shlm.lmcs.com.lazycat.LazyCatProgramUnt.Views.RefreshScrollView        android:id="@+id/fragment_main_refreshScrollview"        android:layout_width="match_parent"        android:layout_height="match_parent"        android:scrollbars="none">        <!--主要的BODY-->        <LinearLayout            android:id="@+id/fragment_main_body"            android:layout_width="match_parent"            android:layout_height="match_parent"            android:orientation="vertical">            <LinearLayout                android:layout_width="match_parent"                android:layout_height="180dp">                <ImageView                    android:layout_width="match_parent"                    android:layout_height="match_parent"                    android:scaleType="fitXY"                    android:src="@drawable/scroll_01" />            </LinearLayout>            <!--两个竖向的图片ITEM和两个横向的ITEM-->            <LinearLayout                android:layout_width="match_parent"                android:layout_height="200dp"                android:orientation="horizontal">                <LinearLayout                    android:layout_width="0dp"                    android:layout_height="200dp"                    android:layout_weight="1"                    android:orientation="vertical">                    <RelativeLayout                        android:layout_width="match_parent"                        android:layout_height="0dp"                        android:layout_weight="1"                        android:background="#efefef">                        <ImageView                            android:layout_width="match_parent"                            android:layout_height="match_parent"                            android:scaleType="center"                            android:src="@drawable/_1" />                    </RelativeLayout>                    <RelativeLayout                        android:layout_width="match_parent"                        android:layout_height="0dp"                        android:layout_weight="1">                        <ImageView                            android:layout_width="match_parent"                            android:layout_height="match_parent"                            android:scaleType="centerCrop"                            android:src="@drawable/_2" />                    </RelativeLayout>                </LinearLayout>                <LinearLayout                    android:layout_width="0dp"                    android:layout_height="200dp"                    android:layout_weight="1">                    <ImageView                        android:layout_width="match_parent"                        android:layout_height="match_parent"                        android:scaleType="centerCrop"                        android:src="@drawable/_3" />                </LinearLayout>                <LinearLayout                    android:layout_width="0dp"                    android:layout_height="200dp"                    android:layout_weight="1">                    <ImageView                        android:layout_width="match_parent"                        android:layout_height="match_parent"                        android:scaleType="centerCrop"                        android:src="@drawable/_4" />                </LinearLayout>            </LinearLayout>            <!--显示一个横向的导航-->            <LinearLayout                android:layout_width="match_parent"                android:layout_height="150dp">                <ImageView                    android:layout_width="match_parent"                    android:layout_height="match_parent"                    android:scaleType="centerCrop"                    android:src="@drawable/_5" />            </LinearLayout>            <!--显示三个横向的导航-->            <!--标题-->            <LinearLayout                android:layout_width="match_parent"                android:layout_height="200dp"                android:background="#ffffff"                android:orientation="horizontal">                <LinearLayout                    android:layout_width="0dp"                    android:layout_height="match_parent"                    android:layout_weight="1">                    <ImageView                        android:layout_width="match_parent"                        android:layout_height="match_parent"                        android:scaleType="center"                        android:src="@drawable/_3" />                </LinearLayout>                <LinearLayout                    android:layout_width="0dp"                    android:layout_height="match_parent"                    android:layout_weight="1">                    <ImageView                        android:layout_width="match_parent"                        android:layout_height="match_parent"                        android:scaleType="center"                        android:src="@drawable/_4" />                </LinearLayout>                <LinearLayout                    android:layout_width="0dp"                    android:layout_height="match_parent"                    android:layout_weight="1">                    <ImageView                        android:layout_width="match_parent"                        android:layout_height="match_parent"                        android:scaleType="center"                        android:src="@drawable/_3" />                </LinearLayout>            </LinearLayout>            <!--推荐的标题-->            <TextView                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_marginLeft="15dp"                android:layout_marginTop="15dp"                android:paddingBottom="15dp"                android:text="仓库网络·为您推荐"                android:textColor="#020433"                android:textSize="17sp"                android:textStyle="bold" />        </LinearLayout>    </shlm.lmcs.com.lazycat.LazyCatProgramUnt.Views.RefreshScrollView></LinearLayout>