<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:fitsSystemWindows="true"    android:orientation="vertical">    <include layout="@layout/assembly_act_head" />    <LinearLayout        android:id="@+id/activity_sendsystemorderact_body"        android:layout_width="match_parent"        android:layout_height="match_parent"        android:orientation="vertical"        >        <ListView            android:id="@+id/activity_sendsystemorderact_listview"            android:layout_width="match_parent"            android:layout_height="match_parent"            android:divider="@null"            android:scrollbars="none"            android:background="#efefef"            android:visibility="visible">        </ListView>        <RelativeLayout            android:layout_width="match_parent"            android:layout_height="match_parent"            android:id="@+id/activity_sendsystemOrderact_nodataBody"            android:visibility="gone"            >            <LinearLayout                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_centerInParent="true"                android:orientation="vertical">                <ImageView                    android:layout_width="150dp"                    android:layout_height="150dp"                    android:src="@drawable/ico_noorder" />                <TextView                    android:layout_width="150dp"                    android:layout_height="wrap_content"                    android:gravity="center"                    android:text="没有发现数据哦"                    android:textColor="@color/colorText"                    android:textSize="13sp" />            </LinearLayout>        </RelativeLayout>    </LinearLayout></LinearLayout>