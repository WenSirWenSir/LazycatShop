<?xml version="1.0" encoding="utf-8"?><!--预约办理--><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:fitsSystemWindows="true"    android:orientation="vertical"    >    <include layout="@layout/assembly_act_head" />    <LinearLayout        android:layout_width="match_parent"        android:layout_height="match_parent"        android:background="#ffffff"        android:orientation="vertical">        <TextView            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:background="#f1f1f1"            android:padding="10dp"            android:text="店铺信息"            android:textColor="@color/ThemeColor"            android:textSize="15sp" />        <RelativeLayout            android:layout_width="match_parent"            android:layout_height="50dp"            android:layout_marginTop="1dp"            android:background="#ffffff">            <TextView                android:layout_width="80dp"                android:layout_height="wrap_content"                android:layout_centerVertical="true"                android:gravity="center|left"                android:paddingLeft="10dp"                android:text="店铺名称"                android:textColor="#000000"                android:textSize="15dp"                android:textStyle="bold" />            <RelativeLayout                android:layout_width="match_parent"                android:layout_height="match_parent"                android:layout_marginLeft="80dp">                <EditText                    android:id="@+id/activity_useraddhome_addr_editName"                    android:layout_width="match_parent"                    android:layout_height="30dp"                    android:layout_centerVertical="true"                    android:background="@null"                    android:inputType="text"                    android:maxLines="1"                    android:paddingLeft="5dp"                    android:text="店铺全称"                    android:textColor="#a9a9a9"                    android:textSize="14dip"                    android:textStyle="bold" />            </RelativeLayout>        </RelativeLayout>        <RelativeLayout            android:layout_width="match_parent"            android:layout_height="50dp"            android:layout_marginTop="1dp"            android:background="#ffffff">            <TextView                android:layout_width="80dp"                android:layout_height="wrap_content"                android:layout_centerVertical="true"                android:gravity="center|left"                android:paddingLeft="10dp"                android:text="店铺地址"                android:textColor="#000000"                android:textSize="15dp"                android:textStyle="bold" />            <!--联系电话-->            <RelativeLayout                android:layout_width="match_parent"                android:layout_height="match_parent"                android:layout_marginLeft="80dp">                <EditText                    android:id="@+id/activity_makebusiness_editAddr"                    android:layout_width="match_parent"                    android:layout_height="30dp"                    android:layout_centerVertical="true"                    android:background="@null"                    android:inputType="text"                    android:maxLines="1"                    android:paddingLeft="5dp"                    android:text="街道、门牌、大楼、建筑、具体位置"                    android:textColor="#a9a9a9"                    android:textSize="14dip"                    android:textStyle="bold" />            </RelativeLayout>        </RelativeLayout>        <!--商户的GPS经纬度位置-->        <LinearLayout            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:orientation="horizontal"            android:paddingBottom="10dp">            <LinearLayout                android:layout_width="0dp"                android:layout_height="wrap_content"                android:layout_weight="1">                <shlm.lmcs.com.lazycat.LazyShopView.PriceNumberView                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:id="@+id/activity_makebusiness_Longitude"                    android:textSize="13sp"                    android:textStyle="bold"                    android:gravity="center"                    android:textColor="#666666"                    android:text="经度:1824.8835h" />            </LinearLayout>            <LinearLayout                android:layout_width="0dp"                android:layout_height="wrap_content"                android:layout_weight="1">                <shlm.lmcs.com.lazycat.LazyShopView.PriceNumberView                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:textSize="13sp"                    android:id="@+id/activity_makebusiness_Latitude"                    android:textColor="#666666"                    android:gravity="center"                    android:textStyle="bold"                    android:text="经度:1824.8835h" />            </LinearLayout>        </LinearLayout>        <TextView            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:background="#f1f1f1"            android:padding="10dp"            android:text="负责人联系方式"            android:textColor="@color/ThemeColor"            android:textSize="15sp" />        <RelativeLayout            android:layout_width="match_parent"            android:layout_height="50dp"            android:layout_marginTop="1dp"            android:background="#ffffff">            <TextView                android:layout_width="80dp"                android:layout_height="wrap_content"                android:layout_centerVertical="true"                android:gravity="center"                android:paddingLeft="10dp"                android:text="姓名"                android:textColor="#000000"                android:textSize="15dp"                android:textStyle="bold" />            <RelativeLayout                android:layout_width="match_parent"                android:layout_height="match_parent"                android:layout_marginLeft="80dp">                <EditText                    android:id="@+id/activity_makebusiness_editPeople"                    android:layout_width="match_parent"                    android:layout_height="30dp"                    android:layout_centerVertical="true"                    android:background="@null"                    android:inputType="text"                    android:maxLines="1"                    android:paddingLeft="5dp"                    android:text="您的姓名"                    android:textColor="#a9a9a9"                    android:textSize="14dip"                    android:textStyle="bold" />            </RelativeLayout>        </RelativeLayout>        <RelativeLayout            android:layout_width="match_parent"            android:layout_height="50dp"            android:layout_marginTop="1dp"            android:background="#ffffff">            <TextView                android:layout_width="80dp"                android:layout_height="wrap_content"                android:layout_centerVertical="true"                android:gravity="center|left"                android:paddingLeft="10dp"                android:text="联系方式"                android:textColor="#000000"                android:textSize="15dp"                android:textStyle="bold" />            <!--联系电话-->            <RelativeLayout                android:layout_width="match_parent"                android:layout_height="match_parent"                android:layout_marginLeft="80dp">                <EditText                    android:id="@+id/activity_makebusiness_editTel"                    android:layout_width="match_parent"                    android:layout_height="30dp"                    android:layout_centerVertical="true"                    android:background="@null"                    android:inputType="text"                    android:maxLines="1"                    android:paddingLeft="5dp"                    android:text="手机/固话"                    android:textColor="#a9a9a9"                    android:textSize="14dip"                    android:textStyle="bold" />            </RelativeLayout>        </RelativeLayout>        <RelativeLayout            android:layout_width="match_parent"            android:layout_height="40dp"            android:layout_marginTop="30dp"            android:background="#ffffff">            <TextView                android:id="@+id/activity_makebusiness_btn_make"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_centerInParent="true"                android:background="@color/ThemeColor"                android:gravity="center"                android:paddingLeft="45dp"                android:paddingTop="8dp"                android:paddingRight="45dp"                android:paddingBottom="8dp"                android:text="预约办理"                android:textColor="#ffffff"                android:textSize="15dp"                android:textStyle="bold" />        </RelativeLayout>    </LinearLayout>    <!--保存按钮--></LinearLayout>