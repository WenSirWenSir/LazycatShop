<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:orientation="vertical"    android:paddingTop="5dp">    <!--满减的标题-->    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:orientation="horizontal">        <TextView            android:id="@+id/item_cart_shopstatic_title"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:paddingLeft="10dp"            android:paddingTop="2dp"            android:paddingRight="10dp"            android:paddingBottom="2dp"            android:text="满减"            android:textSize="10sp" />        <TextView            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:paddingLeft="10dp"            android:paddingTop="2dp"            android:paddingRight="10dp"            android:paddingBottom="2dp"            android:text="已满200.00元,立减10元"            android:textSize="10sp" />    </LinearLayout>    <LinearLayout        android:layout_width="match_parent"        android:layout_height="100dp"        android:orientation="horizontal">        <RelativeLayout            android:layout_width="30dp"            android:layout_height="100dp">            <ImageView                android:layout_width="30dp"                android:layout_height="30dp"                android:layout_centerVertical="true"                android:src="@drawable/ico_car_noselect" />        </RelativeLayout>        <RelativeLayout            android:layout_width="match_parent"            android:layout_height="match_parent">            <LinearLayout                android:layout_width="80dp"                android:layout_height="80dp"                android:layout_centerVertical="true">                <ImageView                    android:id="@+id/item_cart_shop_shopimg"                    android:layout_width="match_parent"                    android:layout_height="match_parent"                    android:src="@drawable/heiren" />            </LinearLayout>            <LinearLayout                android:layout_width="match_parent"                android:layout_height="match_parent"                android:layout_centerVertical="true"                android:layout_marginLeft="80dp"                android:orientation="vertical">                <TextView                    android:id="@+id/item_cart_shop_title"                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_marginTop="5dp"                    android:text="海天750毫升味极鲜酱油调味品"                    android:textColor="#000000"                    android:textSize="13sp" />                <LinearLayout                    android:layout_width="match_parent"                    android:layout_height="wrap_content">                    <TextView                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:layout_marginTop="5dp"                        android:text="箱规:"                        android:textColor="#666666"                        android:textSize="10sp" />                    <TextView                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:layout_marginTop="5dp"                        android:text="16提/箱"                        android:textColor="#666666"                        android:textSize="10sp" />                </LinearLayout>                <RelativeLayout                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_marginTop="5dp"                    android:orientation="horizontal">                    <ImageView                        android:layout_width="15dp"                        android:layout_height="15dp"                        android:layout_centerVertical="true"                        android:src="@drawable/ico_promotion" />                    <TextView                        android:id="@+id/item_car_shop_promotiontitle"                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:layout_centerVertical="true"                        android:layout_marginLeft="18dp"                        android:background="#f30d66"                        android:paddingLeft="5dp"                        android:paddingTop="2dp"                        android:paddingRight="5dp"                        android:paddingBottom="2dp"                        android:text="订单满足139立减20元"                        android:textColor="#ffffff"                        android:textSize="10sp" />                </RelativeLayout>                <RelativeLayout                    android:layout_width="match_parent"                    android:layout_height="match_parent">                    <!--左边的价格-->                    <LinearLayout                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:layout_centerVertical="true">                        <TextView                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:layout_marginTop="5dp"                            android:text="@string/PriceSymbol"                            android:textColor="#f30d66"                            android:textSize="10sp" />                        <TextView                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:layout_marginTop="5dp"                            android:text="89.00"                            android:textColor="#f30d66"                            android:textSize="13sp"                            android:textStyle="bold" />                    </LinearLayout>                    <!--右边增减数量-->                    <LinearLayout                        android:id="@+id/activity_showshopoffice_SeletNumberBody"                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:layout_alignParentRight="true"                        android:layout_centerVertical="true"                        android:layout_marginRight="15dp"                        android:background="#ffffff">                        <TextView                            android:id="@+id/activity_showshopoffice_SeletNumberBtndel"                            android:layout_width="20dp"                            android:layout_height="20dp"                            android:layout_marginRight="5dp"                            android:background="@drawable/btn_del_border"                            android:gravity="center"                            android:text="-"                            android:textColor="#ffffff"                            android:textSize="15sp"                            android:textStyle="bold" />                        <TextView                            android:id="@+id/activity_showshopoffice_SeletNumber"                            android:layout_width="20dp"                            android:layout_height="20dp"                            android:gravity="center"                            android:text="17"                            android:textColor="#000000"                            android:textSize="15dp" />                        <TextView                            android:id="@+id/activity_showshopoffice_SeletNumberBtnadd"                            android:layout_width="20dp"                            android:layout_height="20dp"                            android:layout_marginLeft="5dp"                            android:background="@drawable/btn_add_border"                            android:gravity="center"                            android:text="+"                            android:textColor="#ffffff"                            android:textSize="15sp"                            android:textStyle="bold" />                    </LinearLayout>                </RelativeLayout>            </LinearLayout>        </RelativeLayout>    </LinearLayout></LinearLayout>