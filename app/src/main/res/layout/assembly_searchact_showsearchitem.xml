<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:background="#ffffff"    android:orientation="horizontal">    <TextView        android:id="@+id/assembly_searchact_showsearchitem_title"        android:layout_width="wrap_content"        android:layout_height="match_parent"        android:layout_alignParentLeft="true"        android:layout_centerInParent="true"        android:layout_marginLeft="5dp"        android:maxLines="1"        android:ellipsize="end"        android:layout_marginTop="10dp"        android:layout_marginBottom="10dp"        android:gravity="center"        android:layout_marginRight="35dp"        android:text="尽快落实到付款了圣诞节疯狂了的时间分类考试等级分类考试等级"        android:textColor="#656565"        android:textSize="13dp" />    <TextView        android:id="@+id/assembly_searchact_showsearchitem_static"        android:layout_width="30dp"        android:layout_height="wrap_content"        android:layout_alignParentRight="true"        android:layout_centerInParent="true"        android:layout_marginRight="5dp"        android:paddingLeft="5dp"        android:paddingTop="2dp"        android:paddingRight="5dp"        android:paddingBottom="2dp"        android:text="促销"        android:textColor="#f30d88"        android:textSize="10dp" />    <View        android:layout_width="match_parent"        android:layout_height="1dp"        android:layout_alignParentBottom="true"        android:background="#efefef"        android:id="@+id/assembly_searchact_bottombar"        /></RelativeLayout>