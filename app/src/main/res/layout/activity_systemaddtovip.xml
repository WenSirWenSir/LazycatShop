<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"        android:layout_width="match_parent"        android:layout_height="match_parent"        android:fitsSystemWindows="true"        android:orientation="vertical">    <LinearLayout            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:background="@color/ThemeColor">        <ImageView                android:layout_width="25dp"                android:layout_height="25dp"                android:layout_marginLeft="10dp"                android:layout_marginTop="15dp"                android:src="@drawable/ico_back2" />    </LinearLayout>    <RelativeLayout            android:layout_width="match_parent"            android:layout_height="match_parent"            android:background="#efefef">        <RelativeLayout                android:layout_width="match_parent"                android:layout_height="300dp"                android:background="@color/ThemeColor">            <shlm.lmcs.com.lazycat.LazyShopView.SystemTextView                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_marginLeft="10dp"                    android:layout_marginTop="10dp"                    android:layout_centerHorizontal="true"                    android:text="待支付金额"                    android:id="@+id/activity_systemaddtopVipPaymsg"                    android:textColor="#ffffff" />            <LinearLayout                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_centerHorizontal="true"                    android:layout_below="@id/activity_systemaddtopVipPaymsg"                    android:layout_marginTop="5dp">                <shlm.lmcs.com.lazycat.LazyShopView.SystemTextView                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:text="@string/PriceSymbol"                        android:textColor="#ffffff"                        android:textSize="20sp" />                <shlm.lmcs.com.lazycat.LazyShopView.PriceNumberView                        android:id="@+id/activity_systemaddtoVipPaymoney"                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:layout_marginRight="30dp"                        android:text="68"                        android:textColor="#ffffff"                        android:textSize="80sp" />            </LinearLayout>        </RelativeLayout>        <LinearLayout                android:id="@+id/activity_systemaddtoVipPayMsgbody"                android:layout_width="match_parent"                android:layout_height="300dp"                android:layout_marginLeft="15dp"                android:layout_marginTop="160dp"                android:layout_marginRight="15dp"                android:background="#ffffff"                android:orientation="vertical"                android:paddingTop="10dp">            <shlm.lmcs.com.lazycat.LazyShopView.SystemTextView                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_marginTop="5dp"                    android:gravity="center"                    android:text="支付信息"                    android:textColor="@color/colorText"                    android:textSize="17dp" />            <LinearLayout                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_marginTop="15dp"                    android:orientation="horizontal">                <shlm.lmcs.com.lazycat.LazyShopView.SystemTextView                        android:layout_width="0dp"                        android:layout_height="25dp"                        android:layout_marginLeft="10dp"                        android:layout_weight="1"                        android:text="VIP到期时间"                        android:textColor="@color/colorText"                        android:textSize="14sp" />                <shlm.lmcs.com.lazycat.LazyShopView.SystemTextView                        android:id="@+id/activity_systemaddtoVipoverdue"                        android:layout_width="0dp"                        android:layout_height="25dp"                        android:layout_marginRight="10dp"                        android:layout_weight="1"                        android:gravity="right"                        android:textColor="@color/colorVip"                        android:textSize="14sp" />            </LinearLayout>            <LinearLayout                    android:layout_width="match_parent"                    android:layout_height="1dp"                    android:background="#efefef"                    android:orientation="horizontal">            </LinearLayout>            <LinearLayout                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_marginTop="25dp"                    android:orientation="horizontal">                <shlm.lmcs.com.lazycat.LazyShopView.SystemTextView                        android:layout_width="0dp"                        android:layout_height="25dp"                        android:layout_marginLeft="10dp"                        android:layout_weight="1"                        android:text="VIP包月价格"                        android:textColor="@color/colorText"                        android:textSize="14sp" />                <shlm.lmcs.com.lazycat.LazyShopView.SystemTextView                        android:layout_width="0dp"                        android:layout_height="25dp"                        android:layout_marginRight="10dp"                        android:layout_weight="1"                        android:gravity="right"                        android:text="68"                        android:textColor="@color/colorText"                        android:textSize="14sp" />            </LinearLayout>            <LinearLayout                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_marginTop="25dp"                    android:orientation="horizontal">                <shlm.lmcs.com.lazycat.LazyShopView.SystemTextView                        android:layout_width="0dp"                        android:layout_height="25dp"                        android:layout_marginLeft="10dp"                        android:layout_weight="1"                        android:text="优惠金额"                        android:textColor="@color/colorText"                        android:textSize="14sp" />                <shlm.lmcs.com.lazycat.LazyShopView.SystemTextView                        android:layout_width="0dp"                        android:layout_height="25dp"                        android:layout_marginRight="10dp"                        android:layout_weight="1"                        android:gravity="right"                        android:text="-0"                        android:textColor="@color/colorText"                        android:textSize="14sp" />            </LinearLayout>            <View                    android:layout_width="match_parent"                    android:layout_height="2dp"                    android:layout_marginLeft="15dp"                    android:layout_marginTop="5dp"                    android:background="@drawable/border_dotted_line"                    android:layerType="software" />            <RelativeLayout                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_marginTop="15dp"                    android:orientation="horizontal">                <shlm.lmcs.com.lazycat.LazyShopView.SystemTextView                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:layout_marginLeft="10dp"                        android:layout_marginRight="5dp"                        android:layout_toLeftOf="@id/activity_systemaddtovipVipPrice"                        android:text="合计应支付:"                        android:textColor="@color/colorText"                        android:textSize="13dp" />                <shlm.lmcs.com.lazycat.LazyShopView.SystemTextView                        android:id="@+id/activity_systemaddtovipVipPrice"                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:layout_alignParentRight="true"                        android:layout_marginRight="10dp"                        android:gravity="right"                        android:text="68"                        android:textColor="@color/colorText"                        android:textSize="13dp" />            </RelativeLayout>            <RelativeLayout                    android:layout_width="match_parent"                    android:layout_height="match_parent">                <TextView                        android:id="@+id/activity_systemaddtoVipBtn_topay"                        android:layout_width="200dp"                        android:layout_height="35dp"                        android:layout_centerInParent="true"                        android:gravity="center"                        android:text="确定支付"                        android:textColor="#ffffff"                        android:textSize="15sp" />            </RelativeLayout>        </LinearLayout>    </RelativeLayout></LinearLayout>