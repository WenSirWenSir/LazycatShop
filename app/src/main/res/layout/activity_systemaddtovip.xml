<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:fitsSystemWindows="true"    android:orientation="vertical">    <include layout="@layout/assembly_act_head" />    <RelativeLayout        android:layout_width="match_parent"        android:layout_height="match_parent"        android:background="#efefef">        <RelativeLayout            android:layout_width="match_parent"            android:layout_height="300dp"            android:background="@color/colorPaywindowBack">            <TextView                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_marginLeft="10dp"                android:layout_marginTop="10dp"                android:text="待支付金额"                android:textColor="#ffffff" />            <LinearLayout                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_centerHorizontal="true"                android:layout_marginTop="25dp">                <shlm.lmcs.com.lazycat.LazyShopView.PriceNumberView                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:text="@string/PriceSymbol"                    android:textColor="#ffffff"                    android:textSize="25sp" />                <shlm.lmcs.com.lazycat.LazyShopView.PriceNumberView                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_marginRight="30dp"                    android:text="15"                    android:textColor="#ffffff"                    android:textSize="80sp" />            </LinearLayout>        </RelativeLayout>        <LinearLayout            android:id="@+id/activity_systemaddtoVipPayMsgbody"            android:layout_width="match_parent"            android:layout_height="300dp"            android:layout_marginLeft="15dp"            android:layout_marginTop="150dp"            android:layout_marginRight="15dp"            android:background="#ffffff"            android:orientation="vertical">            <TextView                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_marginTop="5dp"                android:gravity="center"                android:text="支付信息"                android:textColor="@color/colorText"                android:textSize="17sp" />            <LinearLayout                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:orientation="horizontal">                <TextView                    android:layout_width="0dp"                    android:layout_height="25dp"                    android:layout_marginLeft="10dp"                    android:layout_weight="1"                    android:text="VIP到期时间"                    android:textColor="@color/colorText"                    android:textSize="14sp" />                <shlm.lmcs.com.lazycat.LazyShopView.PriceNumberView                    android:layout_width="0dp"                    android:layout_height="25dp"                    android:layout_marginRight="10dp"                    android:layout_weight="1"                    android:gravity="right"                    android:text="2019.18.2"                    android:textColor="@color/colorVip"                    android:textSize="14sp" />            </LinearLayout>            <LinearLayout                android:layout_width="match_parent"                android:layout_height="20dp"                android:background="#efefef"                android:orientation="horizontal">            </LinearLayout>            <LinearLayout                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_marginTop="25dp"                android:orientation="horizontal">                <TextView                    android:layout_width="0dp"                    android:layout_height="25dp"                    android:layout_marginLeft="10dp"                    android:layout_weight="1"                    android:text="VIP包月价格"                    android:textColor="@color/colorText"                    android:textSize="14sp" />                <shlm.lmcs.com.lazycat.LazyShopView.PriceNumberView                    android:layout_width="0dp"                    android:layout_height="25dp"                    android:layout_marginRight="10dp"                    android:layout_weight="1"                    android:gravity="right"                    android:text="30"                    android:textColor="@color/colorText"                    android:textSize="14sp" />            </LinearLayout>            <LinearLayout                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_marginTop="25dp"                android:orientation="horizontal">                <TextView                    android:layout_width="0dp"                    android:layout_height="25dp"                    android:layout_marginLeft="10dp"                    android:layout_weight="1"                    android:text="优惠金额"                    android:textColor="@color/colorText"                    android:textSize="14sp" />                <shlm.lmcs.com.lazycat.LazyShopView.PriceNumberView                    android:layout_width="0dp"                    android:layout_height="25dp"                    android:layout_marginRight="10dp"                    android:layout_weight="1"                    android:gravity="right"                    android:text="-15"                    android:textColor="@color/colorText"                    android:textSize="14sp" />            </LinearLayout>            <View                android:layout_width="match_parent"                android:layout_height="2dp"                android:layout_marginLeft="15dp"                android:layout_marginTop="5dp"                android:background="@drawable/border_dotted_line"                android:layerType="software" />            <LinearLayout                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_marginTop="5dp"                android:orientation="horizontal">                <TextView                    android:layout_width="0dp"                    android:layout_height="25dp"                    android:layout_marginLeft="10dp"                    android:layout_weight="1"                    android:text="合计应支付"                    android:textColor="@color/colorText"                    android:textSize="14sp" />                <shlm.lmcs.com.lazycat.LazyShopView.PriceNumberView                    android:layout_width="0dp"                    android:layout_height="25dp"                    android:layout_marginRight="10dp"                    android:layout_weight="1"                    android:gravity="right"                    android:text="15"                    android:textColor="@color/colorText"                    android:textSize="14sp" />            </LinearLayout>            <RelativeLayout                android:layout_width="match_parent"                android:layout_height="match_parent">                <TextView                    android:layout_width="200dp"                    android:layout_height="35dp"                    android:layout_centerInParent="true"                    android:id="@+id/activity_systemaddtoVipBtn_topay"                    android:gravity="center"                    android:text="确定支付"                    android:textColor="#ffffff"                    android:textSize="15sp" />            </RelativeLayout>        </LinearLayout>    </RelativeLayout></LinearLayout>