<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:id="@+id/activity_login_main"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:background="#ffffff">    <ImageView        android:id="@+id/activity_login_btnBack"        android:layout_width="20dp"        android:layout_height="20dp"        android:layout_marginLeft="15dp"        android:layout_marginTop="35dp"        android:src="@drawable/ico_back" />    <!--标志-->    <ImageView        android:id="@+id/activity_login_logo"        android:layout_width="100dp"        android:layout_height="100dp"        android:layout_centerHorizontal="true"        android:layout_marginTop="100dp"        android:src="@drawable/ico_logo" />    <LinearLayout        android:id="@+id/activity_login_inputbody"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_below="@id/activity_login_logo"        android:layout_centerInParent="true"        android:layout_marginLeft="40dp"        android:layout_marginTop="20dp"        android:layout_marginRight="40dp"        android:background="#ffffff"        android:orientation="vertical"        android:paddingLeft="5dp"        android:paddingTop="15dp"        android:paddingRight="5dp"        android:paddingBottom="10dp">        <RelativeLayout            android:layout_width="match_parent"            android:layout_height="wrap_content">            <EditText                android:id="@+id/activity_login_inputphone"                android:layout_width="match_parent"                android:layout_height="35dp"                android:layout_centerVertical="true"                android:background="#00000000"                android:gravity="center"                android:inputType="number"                android:maxLines="1"                android:singleLine="true"                android:text="点击输入手机号码"                android:textColor="#000000"                android:textSize="15sp" />        </RelativeLayout>    </LinearLayout>    <RelativeLayout        android:id="@+id/activity_login_progressbody"        android:layout_width="match_parent"        android:layout_height="180dp"        android:layout_below="@id/activity_login_logo"        android:layout_centerHorizontal="true"        android:layout_marginTop="20dp"        android:background="@android:color/transparent"        android:visibility="gone">        <RelativeLayout            android:layout_width="70dp"            android:layout_height="70dp"            android:layout_centerInParent="true"            android:background="@drawable/progressbar_boder">            <ProgressBar                android:layout_width="50dp"                android:layout_height="50dp"                android:layout_centerInParent="true"                android:layout_gravity="center"                android:layout_margin="10dp"                android:background="#ffffff" />        </RelativeLayout>    </RelativeLayout>    <!--输入验证码背景框-->    <RelativeLayout        android:layout_width="match_parent"        android:layout_height="match_parent"        android:alpha="0.5"        android:visibility="gone"        android:id="@+id/activity_login_inputCodeBackBody"        android:background="#000000">    </RelativeLayout>    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_alignParentBottom="true"        android:background="#e9e9e9"        android:id="@+id/activity_login_inputCodeBody"        android:visibility="gone"        android:orientation="vertical">        <shlm.lmcs.com.lazycat.LazyShopView.PriceNumberView            android:id="@+id/activity_login_showphoneTitle"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_marginTop="20dp"            android:gravity="center"            android:text="152 0603 6936"            android:textColor="#000000"            android:textSize="30sp"            android:textStyle="bold" />        <!--发送短信验证码按钮-->        <shlm.lmcs.com.lazycat.LazyShopView.PriceNumberView            android:layout_width="match_parent"            android:layout_height="45dp"            android:layout_marginTop="20dp"            android:background="#e0e0e0"            android:gravity="center"            android:id="@+id/activity_login_btnSendCode"            android:text="点击立即发送短信验证码"            android:textColor="#666666"            android:textSize="15sp" />        <!--输入键盘-->        <LinearLayout            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_marginTop="20dp"            android:orientation="horizontal">            <LinearLayout                android:layout_width="0dp"                android:layout_height="wrap_content"                android:layout_weight="3"                android:orientation="vertical">                <LinearLayout                    android:id="@+id/activity_login_inputCodeNumber_frist"                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:orientation="horizontal">                    <shlm.lmcs.com.lazycat.LazyShopView.PriceNumberView                        android:layout_width="0dp"                        android:layout_height="30dp"                        android:layout_margin="5dp"                        android:layout_weight="1"                        android:background="#f30d88"                        android:gravity="center"                        android:padding="5dp"                        android:text="1"                        android:textSize="15dp"                        android:textStyle="bold"                        />                    <shlm.lmcs.com.lazycat.LazyShopView.PriceNumberView                        android:layout_width="0dp"                        android:layout_height="30dp"                        android:layout_margin="5dp"                        android:layout_weight="1"                        android:background="#f30d88"                        android:gravity="center"                        android:padding="5dp"                        android:text="2"                        android:textSize="15dp"                        android:textStyle="bold"                        />                    <shlm.lmcs.com.lazycat.LazyShopView.PriceNumberView                        android:layout_width="0dp"                        android:layout_height="30dp"                        android:layout_margin="5dp"                        android:layout_weight="1"                        android:background="#f30d88"                        android:gravity="center"                        android:padding="5dp"                        android:text="3"                        android:textSize="15dp"                        android:textStyle="bold"                        />                </LinearLayout>                <LinearLayout                    android:id="@+id/activity_login_inputCodeNumber_second"                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:orientation="horizontal">                    <shlm.lmcs.com.lazycat.LazyShopView.PriceNumberView                        android:layout_width="0dp"                        android:layout_height="30dp"                        android:layout_margin="5dp"                        android:layout_weight="1"                        android:background="#f30d88"                        android:gravity="center"                        android:padding="5dp"                        android:text="4"                        android:textSize="15dp"                        android:textStyle="bold"                        />                    <shlm.lmcs.com.lazycat.LazyShopView.PriceNumberView                        android:layout_width="0dp"                        android:layout_height="30dp"                        android:layout_margin="5dp"                        android:layout_weight="1"                        android:background="#f30d88"                        android:gravity="center"                        android:padding="5dp"                        android:text="5"                        android:textSize="15dp"                        android:textStyle="bold"                        />                    <shlm.lmcs.com.lazycat.LazyShopView.PriceNumberView                        android:layout_width="0dp"                        android:layout_height="30dp"                        android:layout_margin="5dp"                        android:layout_weight="1"                        android:background="#f30d88"                        android:gravity="center"                        android:padding="5dp"                        android:text="6"                        android:textSize="15dp"                        android:textStyle="bold"                        />                </LinearLayout>                <LinearLayout                    android:id="@+id/activity_login_inputCodeNumber_three"                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:orientation="horizontal">                    <shlm.lmcs.com.lazycat.LazyShopView.PriceNumberView                        android:layout_width="0dp"                        android:layout_height="30dp"                        android:layout_margin="5dp"                        android:layout_weight="1"                        android:background="#f30d88"                        android:gravity="center"                        android:padding="5dp"                        android:text="7"                        android:textSize="15dp"                        android:textStyle="bold"                        />                    <shlm.lmcs.com.lazycat.LazyShopView.PriceNumberView                        android:layout_width="0dp"                        android:layout_height="30dp"                        android:layout_margin="5dp"                        android:layout_weight="1"                        android:background="#f30d88"                        android:gravity="center"                        android:padding="5dp"                        android:text="8"                        android:textSize="15dp"                        android:textStyle="bold"                        />                    <shlm.lmcs.com.lazycat.LazyShopView.PriceNumberView                        android:layout_width="0dp"                        android:layout_height="30dp"                        android:layout_margin="5dp"                        android:layout_weight="1"                        android:background="#f30d88"                        android:gravity="center"                        android:padding="5dp"                        android:text="9"                        android:textSize="15dp"                        android:textStyle="bold"                        />                </LinearLayout>                <!--数字键盘的最后一排-->                <LinearLayout                    android:id="@+id/activity_login_inputCodeNumber_four"                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:orientation="horizontal">                    <shlm.lmcs.com.lazycat.LazyShopView.PriceNumberView                        android:layout_width="0dp"                        android:layout_height="30dp"                        android:layout_marginLeft="50dp"                        android:layout_marginTop="5dp"                        android:layout_marginRight="50dp"                        android:layout_marginBottom="5dp"                        android:layout_weight="1"                        android:background="#f30d88"                        android:gravity="center"                        android:padding="5dp"                        android:text="0"                        android:textSize="15dp"                        android:textStyle="bold"                        />                </LinearLayout>            </LinearLayout>            <LinearLayout                android:layout_width="0dp"                android:layout_height="match_parent"                android:layout_weight="1"                android:orientation="vertical"                >                <LinearLayout                    android:layout_width="match_parent"                    android:layout_height="0dp"                    android:layout_weight="1"                    android:layout_margin="5dp"                    android:gravity="center"                    android:id="@+id/activity_login_btnCodeDel"                    >                    <ImageView                        android:layout_width="30dp"                        android:layout_height="30dp"                        android:src="@drawable/ico_back"                        />                </LinearLayout>                <LinearLayout                    android:layout_width="match_parent"                    android:layout_height="0dp"                    android:layout_weight="1"                    android:layout_margin="5dp"                    >                    <TextView                        android:layout_width="match_parent"                        android:layout_height="match_parent"                        android:text="确定"                        android:textSize="20sp"                        android:gravity="center"                        android:id="@+id/activity_login_btnCodeGo"                        android:background="#ffffff"                        />                </LinearLayout>            </LinearLayout>        </LinearLayout>    </LinearLayout></RelativeLayout>