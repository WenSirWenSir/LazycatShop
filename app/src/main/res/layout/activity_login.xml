<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:id="@+id/activity_login_main"    android:layout_width="match_parent"    android:fitsSystemWindows="true"    android:layout_height="match_parent"    android:background="#ffffff">    <ImageView        android:layout_width="20dp"        android:layout_height="20dp"        android:layout_alignParentRight="true"        android:layout_marginTop="10dp"        android:id="@+id/activity_login_btnToclose"        android:layout_marginRight="10dp"        android:src="@drawable/ico_close" />    <LinearLayout        android:id="@+id/activity_login_IcoMsg"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_centerHorizontal="true"        android:layout_marginTop="80dp"        android:layout_weight="2"        android:background="#ffffff"        android:gravity="center"        android:orientation="vertical">        <TextView            android:id="@+id/activity_login_ico"            android:layout_width="80dp"            android:layout_height="80dp"            android:gravity="center"            android:text="仓"            android:textColor="#08c299"            android:textSize="70dp" />    </LinearLayout>    <!--登录的总的BODY-->    <RelativeLayout        android:id="@+id/activity_login_Loginbody"        android:layout_width="match_parent"        android:layout_height="230dp"        android:layout_below="@id/activity_login_IcoMsg"        android:layout_marginTop="35dp"        android:orientation="vertical">        <LinearLayout            android:layout_width="match_parent"            android:layout_height="180dp"            android:alpha="0.5"            android:background="@color/ThemeColor">        </LinearLayout>        <RelativeLayout            android:layout_width="match_parent"            android:layout_height="50dp">            <TextView                android:id="@+id/activity_login_context"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_centerInParent="true"                android:layout_marginTop="15dp"                android:text="CangKu Service"                android:textColor="#000000"                android:textSize="18sp" />        </RelativeLayout>        <LinearLayout            android:layout_width="match_parent"            android:layout_height="90dp"            android:layout_marginTop="50dp"            android:background="#ffffff"            android:orientation="vertical">            <EditText                android:id="@+id/activity_login_EtAccount"                android:layout_width="match_parent"                android:layout_height="30dp"                android:layout_marginLeft="30dp"                android:layout_marginTop="5dp"                android:layout_marginRight="30dp"                android:background="@null"                android:gravity="center"                android:inputType="number"                android:maxLength="11"                android:text="@string/loginAccountMsg"                android:textSize="13sp" />            <View                android:layout_width="match_parent"                android:layout_height="2dp"                android:layout_marginLeft="90dp"                android:layout_marginRight="90dp"                android:background="@drawable/border_dotted_line"                android:layerType="software" />            <EditText                android:id="@+id/activity_login_EtCode"                android:layout_width="match_parent"                android:layout_height="30dp"                android:layout_marginLeft="30dp"                android:layout_marginRight="30dp"                android:background="@null"                android:gravity="center"                android:inputType="number"                android:text="@string/loginTokenMsg"                android:textSize="13sp" />        </LinearLayout>        <TextView            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_alignParentBottom="true"            android:layout_marginBottom="65dp"            android:gravity="center"            android:text="账户存在登录问题?点击这里处理"            android:textColor="#666666"            android:textSize="10sp" />        <!--登录按钮-->        <LinearLayout            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_alignParentBottom="true">            <RelativeLayout                android:layout_width="0dp"                android:layout_height="wrap_content"                android:layout_marginTop="15dp"                android:layout_weight="1">                <TextView                    android:id="@+id/activity_login_btnTologin"                    android:layout_width="150dp"                    android:layout_height="30dp"                    android:layout_centerHorizontal="true"                    android:gravity="center"                    android:text="登录系统"                    android:textColor="#ffffff"                    android:textSize="13sp" />            </RelativeLayout>            <RelativeLayout                android:layout_width="0dp"                android:layout_height="wrap_content"                android:layout_alignParentBottom="true"                android:layout_marginTop="15dp"                android:layout_weight="1">                <TextView                    android:id="@+id/activity_login_btnTojoin"                    android:layout_width="150dp"                    android:layout_height="30dp"                    android:layout_centerHorizontal="true"                    android:gravity="center"                    android:text="加入仓库系统"                    android:textColor="#ffffff"                    android:textSize="13sp" />            </RelativeLayout>        </LinearLayout>    </RelativeLayout></RelativeLayout>