<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:id="@+id/activity_login_main"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:background="#ffffff">    <LinearLayout        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_centerHorizontal="true"        android:layout_marginTop="100dp"        android:layout_weight="2"        android:background="#ffffff"        android:gravity="center"        android:orientation="vertical">        <TextView            android:id="@+id/activity_login_ico"            android:layout_width="80dp"            android:layout_height="80dp"            android:gravity="center"            android:text="仓"            android:textColor="#08c299"            android:textSize="70dp" />        <TextView            android:id="@+id/activity_login_context"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_marginTop="15dp"            android:text="CangKu Service"            android:textColor="#000000"            android:textSize="18sp" />        <TextView            android:id="@+id/activity_login_Propaganda"            android:layout_width="290dp"            android:layout_height="wrap_content"            android:layout_marginTop="5dp"            android:gravity="center"            android:text="更加便携的仓储服务配送商城,让您足不出户"            android:textColor="#000000"            android:textSize="14sp" />        <TextView            android:id="@+id/activity_login_Propaganda_b"            android:layout_width="250dp"            android:layout_height="wrap_content"            android:gravity="center"            android:text="享受便携的配送体验"            android:textColor="#000000"            android:textSize="14sp" />    </LinearLayout>    <RelativeLayout        android:layout_width="match_parent"        android:layout_height="35dp"        android:layout_alignParentBottom="true"        android:layout_centerHorizontal="true"        android:layout_marginBottom="100dp">        <RelativeLayout            android:layout_width="200dp"            android:layout_height="35dp"            android:id="@+id/activity_login_BtnLoginin"            android:layout_centerInParent="true"            android:alpha="0.4"            android:elevation="1dp"            android:background="#ffffff">        </RelativeLayout>        <TextView            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_centerInParent="true"            android:text="登录"            android:textColor="#020433"            android:textSize="15sp" />    </RelativeLayout>    <RelativeLayout        android:layout_width="match_parent"        android:layout_height="35dp"        android:layout_marginBottom="60dp"        android:layout_alignParentBottom="true"        android:layout_centerHorizontal="true">        <RelativeLayout            android:layout_width="200dp"            android:layout_height="35dp"            android:layout_centerInParent="true"            android:id="@+id/activity_login_BtnReg"            android:elevation="10dp"            android:background="#08c299">            <TextView                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_centerInParent="true"                android:text="注册"                android:textColor="#ffffff"                android:textSize="15sp" />        </RelativeLayout>    </RelativeLayout></RelativeLayout>