<?xml version="1.0" encoding="utf-8"?><!--显示商品的信息 在搜索中--><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="130dp"    android:background="#ffffff"    android:fitsSystemWindows="false"    android:orientation="vertical">    <LinearLayout        android:layout_width="match_parent"        android:layout_height="match_parent">        <!--图片地址-->        <RelativeLayout            android:layout_width="130dp"            android:layout_height="130dp"            android:layout_weight="0">            <ImageView                android:id="@+id/item_searchshoplist_img"                android:layout_width="120dp"                android:layout_height="120dp"                android:layout_centerInParent="true"                android:src="@drawable/a2343434" />        </RelativeLayout>        <LinearLayout            android:layout_width="match_parent"            android:layout_height="match_parent"            android:layout_weight="1"            android:orientation="vertical">            <!--标题-->            <LinearLayout                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_marginTop="5dp"                android:gravity="center_vertical">                <TextView                    android:id="@+id/item_searchshoplist_titleStatic"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:paddingLeft="3dp"                    android:paddingTop="1dp"                    android:paddingRight="3dp"                    android:paddingBottom="1dp" />                <TextView                    android:id="@+id/item_searchshoplist_title"                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_marginRight="5dp"                    android:ellipsize="end"                    android:maxLines="1"                    android:paddingLeft="5dp"                    android:textColor="#000000"                    android:textSize="12sp"                    android:textStyle="bold" />            </LinearLayout>            <LinearLayout                android:layout_width="match_parent"                android:layout_height="30dp"                android:layout_marginTop="20dp"                android:orientation="horizontal">                <shlm.lmcs.com.lazycat.LazyShopView.PriceNumberView                    android:id="@+id/item_searchshoplist_priceSymbol"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:text="@string/PriceSymbol"                    android:textColor="#666666"                    android:textSize="10sp" />                <shlm.lmcs.com.lazycat.LazyShopView.PriceNumberView                    android:id="@+id/item_searchshoplist_price"                    android:layout_width="wrap_content"                    android:layout_height="match_parent"                    android:layout_marginLeft="2dp"                    android:text="25.0"                    android:textColor="#f30d88"                    android:textSize="20sp" />                <shlm.lmcs.com.lazycat.LazyShopView.PriceNumberView                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_marginLeft="2dp"                    android:text="￥25.0"                    android:textColor="#666666"                    android:textSize="10sp" />            </LinearLayout>            <!--显示一些其他的信息-->            <LinearLayout                android:layout_width="match_parent"                android:layout_height="wrap_content">            </LinearLayout>        </LinearLayout>    </LinearLayout></LinearLayout>