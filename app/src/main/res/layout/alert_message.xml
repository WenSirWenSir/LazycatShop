<?xml version="1.0" encoding="utf-8"?><!--提示一个信息--><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:orientation="vertical">    <shlm.lmcs.com.lazycat.LazyShopView.SystemTextView        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginTop="10dp"        android:gravity="center"        android:text="提示信息"        android:id="@+id/alert_messageTitle"        android:textColor="#020433"        android:textSize="13sp" />    <View        android:layout_width="match_parent"        android:layout_height="2dp"        android:layout_marginTop="5dp"        android:background="@drawable/border_dotted_line"        android:layerType="software" />    <shlm.lmcs.com.lazycat.LazyShopView.SystemTextView        android:id="@+id/alert_messageText"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:padding="10dp"        android:textColor="#020433"        android:textSize="12sp" />    <RelativeLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginTop="10dp"        android:layout_marginBottom="10dp">        <shlm.lmcs.com.lazycat.LazyShopView.SystemTextView            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_centerHorizontal="true"            android:background="@color/ThemeColor"            android:paddingLeft="25dp"            android:paddingTop="5dp"            android:paddingRight="25dp"            android:id="@+id/alert_messageBtnConfirm"            android:paddingBottom="5dp"            android:text="我已知晓"            android:textColor="#ffffff"            android:textSize="10sp" />    </RelativeLayout></LinearLayout>