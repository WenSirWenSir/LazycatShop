<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"        android:layout_width="match_parent"        android:layout_height="match_parent"        android:background="#ffffff"        android:fitsSystemWindows="true"        android:orientation="vertical">    <include layout="@layout/assembly_act_head" />    <!--显示积分的详细信息-->    <LinearLayout            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_centerHorizontal="true"            android:layout_marginTop="55dp">        <RelativeLayout                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:background="#ffffff">            <shlm.lmcs.com.lazycat.LazyShopView.SystemTextView                    android:id="@+id/activity_aboutintegralTitle"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_centerHorizontal="true"                    android:text="采购积分"                    android:textColor="@color/colorText"                    android:textSize="13dp" />            <shlm.lmcs.com.lazycat.LazyShopView.SystemTextView                    android:id="@+id/activity_aboutIntegralHow"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_below="@id/activity_aboutintegralTitle"                    android:layout_centerHorizontal="true"                    android:layout_marginTop="25dp"                    android:layout_marginBottom="25dp"                    android:text="+2000.00"                    android:textColor="@color/colorVip"                    android:textSize="30dp" />            <View                    android:id="@+id/activity_aboutintegralLine"                    android:layout_width="match_parent"                    android:layout_height="2dp"                    android:layout_below="@id/activity_aboutIntegralHow"                    android:layout_marginLeft="15dp"                    android:layout_marginRight="15dp"                    android:background="@drawable/border_dotted_line"                    android:layerType="software" />            <LinearLayout                    android:id="@+id/activity_aboutIntegralAboutBody"                    android:layout_width="275dp"                    android:layout_height="wrap_content"                    android:layout_below="@id/activity_aboutintegralLine"                    android:layout_centerHorizontal="true"                    android:layout_marginTop="20dp"                    android:orientation="horizontal">                <include layout="@layout/item_addintegral_aboutfrozen" />            </LinearLayout>            <RelativeLayout                    android:layout_width="275dp"                    android:layout_height="wrap_content"                    android:layout_below="@id/activity_aboutIntegralAboutBody"                    android:layout_centerHorizontal="true"                    android:layout_marginTop="25dp">                <!--底部的要求帮助的按钮-->                <shlm.lmcs.com.lazycat.LazyShopView.SystemTextView                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:layout_centerInParent="true"                        android:layout_marginBottom="5dp"                        android:text="对该单有疑问？点击这里帮您解决哦"                        android:textColor="@color/ThemeColor"                        android:textSize="10dp" />            </RelativeLayout>        </RelativeLayout>    </LinearLayout></RelativeLayout>