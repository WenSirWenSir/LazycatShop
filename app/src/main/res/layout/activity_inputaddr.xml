<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:orientation="vertical">    <!--地图模块-->    <com.baidu.mapapi.map.MapView        android:id="@+id/activity_inputAddrMap"        android:layout_width="match_parent"        android:layout_height="230dp">    </com.baidu.mapapi.map.MapView>    <!--输入搜索的标题 -->    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginTop="15dp"        android:background="#ffffff"        android:orientation="horizontal">        <EditText            android:id="@+id/activity_inputaddrforsearch"            android:layout_width="match_parent"            android:layout_height="30dp"            android:layout_marginLeft="10dp"            android:layout_marginRight="10dp"            android:layout_weight="1"            android:background="#e9e9e9"            android:paddingLeft="5dp"            android:text="输入你要检索的目的地"            android:textColor="#666666"            android:textSize="13sp" />        <TextView            android:id="@+id/activity_inputaddrBtnSearch"            android:layout_width="50dp"            android:layout_height="30dp"            android:layout_weight="0"            android:gravity="center|left"            android:text="搜索"            android:textColor="#666666"            android:textSize="13sp" />    </LinearLayout>    <ListView        android:id="@+id/activity_inputaddrListView"        android:layout_width="match_parent"        android:layout_height="match_parent"        android:scrollbars="none">    </ListView></LinearLayout>