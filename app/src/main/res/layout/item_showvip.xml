<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:orientation="vertical"    android:paddingBottom="20dp">    <!--标题-->    <RelativeLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:background="@color/ThemeColor"        android:paddingTop="7dp"        android:paddingBottom="7dp">        <TextView            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_centerHorizontal="true"            android:text="VIP加盟特权"            android:textColor="#ffffff" />    </RelativeLayout>    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:orientation="vertical">        <RelativeLayout            android:layout_width="match_parent"            android:layout_height="wrap_content">            <RelativeLayout                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_alignParentLeft="true"                android:layout_marginLeft="35dp"                android:layout_marginTop="15dp">                <ImageView                    android:layout_width="30dp"                    android:layout_height="30dp"                    android:src="@drawable/ico_vipfreightcart" />                <TextView                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_centerVertical="true"                    android:layout_marginLeft="40dp"                    android:text="更快的物流配送,更贴心的服务！"                    android:textColor="#000000"                    android:textSize="15sp" />            </RelativeLayout>        </RelativeLayout>        <!--显示VIP享受积分-->        <RelativeLayout            android:layout_width="match_parent"            android:layout_height="wrap_content">            <RelativeLayout                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_alignParentLeft="true"                android:layout_marginLeft="35dp"                android:layout_marginTop="15dp">                <ImageView                    android:layout_width="27dp"                    android:layout_height="27dp"                    android:layout_centerVertical="true"                    android:layout_marginLeft="2dp"                    android:src="@drawable/ico_vipintegral" />                <TextView                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_centerVertical="true"                    android:layout_marginLeft="40dp"                    android:text="Vip积分生效,享受积分让你更实惠"                    android:textColor="#000000"                    android:textSize="15sp" />            </RelativeLayout>        </RelativeLayout>        <!--显示店铺的退换服务-->        <RelativeLayout            android:layout_width="match_parent"            android:layout_height="wrap_content">            <RelativeLayout                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_alignParentLeft="true"                android:layout_marginLeft="35dp"                android:layout_marginTop="15dp">                <ImageView                    android:layout_width="27dp"                    android:layout_height="27dp"                    android:layout_centerVertical="true"                    android:layout_marginLeft="2dp"                    android:src="@drawable/ico_vipbusinessreturn" />                <TextView                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_centerVertical="true"                    android:layout_marginLeft="40dp"                    android:text="VIP店铺一站式售后服务,更有保障！"                    android:textColor="#000000"                    android:textSize="15sp" />            </RelativeLayout>        </RelativeLayout>    </LinearLayout>    <!--点击我已知晓-->    <RelativeLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginTop="30dp">        <TextView            android:layout_width="160dp"            android:layout_height="30dp"            android:layout_centerHorizontal="true"            android:background="#08c299"            android:gravity="center"            android:text="我已知晓"            android:id="@+id/item_showvipBtnClose"            android:textColor="#ffffff"            android:textSize="15sp" />    </RelativeLayout></LinearLayout>