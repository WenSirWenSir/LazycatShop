<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"        android:layout_width="match_parent"        android:layout_height="match_parent"        android:fitsSystemWindows="true"        android:orientation="vertical">    <RelativeLayout            android:layout_width="match_parent"            android:layout_height="match_parent"            android:background="@color/ThemeColor">        <ImageView                android:id="@+id/activity_systemshakeshopsIco"                android:layout_width="125dp"                android:layout_height="125dp"                android:layout_centerInParent="true"                android:src="@drawable/ico_shake2" />        <shlm.lmcs.com.lazycat.LazyShopView.SystemTextView                android:id="@+id/activity_systemshakeshopsTitle"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_below="@id/activity_systemshakeshopsIco"                android:layout_centerHorizontal="true"                android:layout_marginTop="25dp"                android:text="摇动手机,惊喜马上来领！"                android:textColor="#ffffff"                android:textSize="13dp" />        <shlm.lmcs.com.lazycat.LazyShopView.SystemTextView                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_below="@id/activity_systemshakeshopsTitle"                android:layout_centerHorizontal="true"                android:layout_marginTop="25dp"                android:text="今日剩余摇动次数:5次,加盟商无限制摇动"                android:textColor="#ffffff"                android:textSize="13dp" />        <shlm.lmcs.com.lazycat.LazyShopView.SystemTextView                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_centerHorizontal="true"                android:layout_marginTop="25dp"                android:text="摇一摇"                android:textColor="#ffffff"                android:textSize="17dp" />    </RelativeLayout></LinearLayout>