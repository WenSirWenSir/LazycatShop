droid:paddingBottom="20dp">                <shlm.lmcs.com.lazycat.LazyShopView.SystemTextView                        android:layout_width="match_parent"                        android:layout_height="wrap_content"                        android:layout_marginTop="15dp"                        android:paddingLeft="15dp"                        android:paddingTop="5dp"                        android:text="兑换云仓库配送加盟"                        android:textColor="@color/colorVip"                        android:textSize="15dp" />                <shlm.lmcs.com.lazycat.LazyShopView.SystemTextView                        android:layout_width="match_parent"                        android:layout_height="wrap_content"                        android:paddingLeft="15dp"                        android:paddingTop="5dp"                        android:text="请输入8位兑换码"                        android:textColor="@color/colorText"                        android:textSize="10dp" />                <!--输入兑换码的EDIT-->                <LinearLayout                        android:layout_width="match_parent"                        android:layout_height="wrap_content"                        android:layout_marginTop="30dp">                    <RelativeLayout                            android:layout_width="0dp"                            android:layout_height="40dp"                            android:layout_weight="1">                        <shlm.lmcs.com.lazycat.LazyShopView.SystemEditText                                android:id="@+id/activity_systemExchange_1"                                android:layout_width="40dp"                                android:layout_height="40dp"                                android:layout_centerInParent="true"                                android:gravity="center"                                android:inputType="text"                                android:maxLength="1"                                android:textSize="12sp"    