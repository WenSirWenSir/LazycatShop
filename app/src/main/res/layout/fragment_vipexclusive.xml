<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"        android:layout_width="match_parent"        android:layout_height="match_parent"        android:background="#efefef"        android:orientation="vertical">    <!--VIP专属-->    <include layout="@layout/assembly_act_head" />    <RelativeLayout            android:layout_width="match_parent"            android:layout_height="match_parent">        <ListView                android:id="@+id/fragment_vipexclusiveListview"                android:layout_width="match_parent"                android:layout_height="match_parent"                android:divider="@null"                android:scrollbars="none">        </ListView>        <RelativeLayout                android:layout_width="match_parent"                android:layout_height="50dp"                android:layout_alignParentBottom="true">            <RelativeLayout                    android:id="@+id/fragment_vipexclusiveOrderMsg"                    android:layout_width="match_parent"                    android:layout_height="match_parent"                    android:background="#ffffff"                    android:orientation="vertical">                <shlm.lmcs.com.lazycat.LazyShopView.SystemTextView                        android:id="@+id/fragment_vipexclusiveTotal"                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:layout_marginLeft="10dp"                        android:layout_marginTop="5dp"                        android:text=""                        android:textColor="@color/ThemeColor"                        android:textSize="13dp" />                <shlm.lmcs.com.lazycat.LazyShopView.SystemTextView                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:layout_below="@id/fragment_vipexclusiveTotal"                        android:id="@+id/fragment_vipexclusiveTotalMsg"                        android:layout_centerVertical="true"                        android:layout_marginLeft="10dp"                        android:layout_marginTop="5dp"                        android:textColor="#000000"                        android:textSize="11dp" />            </RelativeLayout>            <LinearLayout                    android:layout_width="match_parent"                    android:layout_height="8dp"                    android:layout_alignParentBottom="true"                    android:background="#ffffff">            </LinearLayout>        </RelativeLayout>    </RelativeLayout></LinearLayout>