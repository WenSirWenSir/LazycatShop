<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:background="#ffffff"    android:orientation="vertical">    <LinearLayout        android:id="@+id/item_searchshoplist_Shopbody"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_margin="5dp"        android:orientation="horizontal">        <RelativeLayout            android:layout_width="0dp"            android:layout_height="100dp"            android:layout_weight="1">            <ImageView                android:layout_width="80dp"                android:layout_height="80dp"                android:layout_centerInParent="true" />        </RelativeLayout>        <LinearLayout            android:layout_width="0dp"            android:layout_height="100dp"            android:layout_marginRight="5dp"            android:layout_weight="3"            android:orientation="vertical">            <!--规定字体为2-->            <LinearLayout                android:layout_width="match_parent"                android:layout_height="0dp"                android:layout_weight="1">                <shlm.lmcs.com.lazycat.LazyShopView.SystemTextView                    android:layout_width="match_parent"                    android:layout_height="match_parent"                    android:ellipsize="end"                    android:gravity="center_vertical"                    android:maxLines="1"                    android:text="海天750ML味极鲜海天750ML味极鲜海天750ML味极鲜"                    android:textColor="#000000"                    android:textSize="15sp"                    android:textStyle="bold" />            </LinearLayout>            <LinearLayout                android:layout_width="match_parent"                android:layout_height="0dp"                android:layout_weight="1"                android:orientation="horizontal">                <!--显示箱规和日期-->                <shlm.lmcs.com.lazycat.LazyShopView.SystemTextView                    android:layout_width="0dp"                    android:layout_height="match_parent"                    android:layout_weight="1"                    android:gravity="center_vertical"                    android:text="箱规:10提/箱"                    android:textColor="#666666"                    android:textSize="12sp" />                <shlm.lmcs.com.lazycat.LazyShopView.SystemTextView                    android:layout_width="0dp"                    android:layout_height="match_parent"                    android:layout_weight="2"                    android:gravity="center_vertical"                    android:text="日期:2019年10月21号"                    android:textColor="#666666"                    android:textSize="12sp" />            </LinearLayout>            <RelativeLayout                android:layout_width="match_parent"                android:layout_height="0dp"                android:layout_weight="1"                android:orientation="horizontal">                <!--显示积分-->                <shlm.lmcs.com.lazycat.LazyShopView.PriceNumberView                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_centerVertical="true"                    android:background="@color/colorVip"                    android:paddingLeft="5dp"                    android:paddingTop="2dp"                    android:paddingRight="5dp"                    android:paddingBottom="2dp"                    android:text="积分:230.00"                    android:textColor="#ffffff"                    android:textSize="10sp" />            </RelativeLayout>            <LinearLayout                android:layout_width="match_parent"                android:layout_height="0dp"                android:layout_weight="1"                android:orientation="horizontal">                <!--批发的价格-->                <RelativeLayout                    android:layout_width="0dp"                    android:layout_height="match_parent"                    android:layout_weight="1">                    <LinearLayout                        android:layout_width="match_parent"                        android:layout_height="wrap_content"                        android:orientation="horizontal">                        <shlm.lmcs.com.lazycat.LazyShopView.SystemTextView                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:layout_centerVertical="true"                            android:text="￥:"                            android:textColor="@color/ThemeColor"                            android:textSize="10sp" />                        <shlm.lmcs.com.lazycat.LazyShopView.PriceNumberView                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:layout_centerVertical="true"                            android:text="220.00"                            android:textColor="@color/ThemeColor"                            android:textSize="15sp" />                        <TextView                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:layout_centerVertical="true"                            android:text="/"                            android:textColor="@color/ThemeColor"                            android:textSize="8sp" />                        <TextView                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:layout_centerVertical="true"                            android:text="箱"                            android:textColor="@color/ThemeColor"                            android:textSize="10sp" />                    </LinearLayout>                </RelativeLayout>                <!--如果是促销就显示之前的价格-->                <RelativeLayout                    android:layout_width="0dp"                    android:layout_height="match_parent"                    android:layout_weight="1">                    <LinearLayout                        android:layout_width="match_parent"                        android:layout_height="wrap_content"                        android:orientation="horizontal">                        <shlm.lmcs.com.lazycat.LazyShopView.SystemTextView                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:layout_centerVertical="true"                            android:text="￥:"                            android:textColor="@color/ThemeColor"                            android:textSize="10sp" />                        <shlm.lmcs.com.lazycat.LazyShopView.PriceNumberView                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:layout_centerVertical="true"                            android:text="220.00"                            android:textColor="@color/ThemeColor"                            android:textSize="15sp" />                        <TextView                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:layout_centerVertical="true"                            android:text="/"                            android:textColor="@color/ThemeColor"                            android:textSize="8sp" />                        <TextView                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:layout_centerVertical="true"                            android:text="箱"                            android:textColor="@color/ThemeColor"                            android:textSize="10sp" />                    </LinearLayout>                </RelativeLayout>                <!--拆分之后的单价-->                <RelativeLayout                    android:layout_width="0dp"                    android:layout_height="match_parent"                    android:layout_weight="1">                    <LinearLayout                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:background="@color/ThemeColor"                        android:orientation="horizontal"                        android:paddingLeft="2dp"                        android:paddingTop="1dp"                        android:paddingRight="2dp"                        android:paddingBottom="1dp">                        <shlm.lmcs.com.lazycat.LazyShopView.SystemTextView                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:layout_centerVertical="true"                            android:text="￥:"                            android:textColor="#ffffff"                            android:textSize="10sp" />                        <shlm.lmcs.com.lazycat.LazyShopView.PriceNumberView                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:layout_centerVertical="true"                            android:text="18.00"                            android:textColor="#ffffff"                            android:textSize="15sp" />                        <TextView                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:layout_centerVertical="true"                            android:text="/"                            android:textColor="#ffffff"                            android:textSize="8sp" />                        <TextView                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:layout_centerVertical="true"                            android:text="提"                            android:textColor="#ffffff"                            android:textSize="10sp" />                    </LinearLayout>                </RelativeLayout>            </LinearLayout>        </LinearLayout>    </LinearLayout></LinearLayout>