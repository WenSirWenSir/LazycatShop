           </RelativeLayout>                <RelativeLayout                        android:layout_width="0dp"                        android:layout_height="match_parent"                        android:layout_weight="2">                    <shlm.lmcs.com.lazycat.LazyShopView.SystemTextView                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:layout_centerVertical="true"                            android:text="帮助和反馈"                            android:textColor="#000000"                            android:textSize="13dp" />                </RelativeLayout>                <RelativeLayout                        android:layout_width="0dp"                        android:layout_height="match_parent"                        android:layout_weight="4">                    <shlm.lmcs.com.lazycat.LazyShopView.SystemTextView                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:layout_alignParentRight="true"                            android:layout_centerVertical="true"                            android:layout_marginRight="25dp"                            android:text="打开"                            android:textColor="#a9a9a9"                            android:textSize="10dp" />                </RelativeLayout>            </LinearLayout>        </LinearLayout>        <!--物流投诉-->        <LinearLayout                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:background="#ffffff"                android:paddingTop="7dp"                android:paddingBottom="7dp">            <LinearLayout                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:orientation="horizontal">                <RelativeLayout                        android:layout_width="0dp"                        android:layout_height="wrap_content"                        android:layout_weight="1">                    <ImageView                            android:layout_width="20dp"                            android:layout_height="20dp"                            android:layout_alignParentRight="true"                            android:layout_marginRight="10dp"                            android:src="@drawable/ico_freight" />                </RelativeLayout>                <RelativeLayout                        android:layout_width="0dp"                        android:layout_height="match_parent"                        android:layout_weight="2">                    <shlm.lmcs.com.lazycat.LazyShopView.SystemTextView                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:layout_centerVertical="true"                            android:text="物流投诉"                            android:textColor="#000000"                            android:textSize="13dp" />                </RelativeLayout>                <RelativeLayout                        android:layout_width="0dp"                        android:layout_height="match_parent"                        android:layout_weight="4">                    <shlm.lmcs.com.lazycat.LazyShopView.SystemTextView                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:layout_alignParentRight="true"                            android:layout_centerVertical="true"                            android:layout_marginRight="25dp"                            android:text="打开"                            android:textColor="#a9a9a9"                            android:textSize="10dp" />                </RelativeLayout>            </LinearLayout>        </LinearLayout>        <!--人员投诉-->        <LinearLayout                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:background="#ffffff"                android:paddingTop="7dp"                android:paddingBottom="7dp">            <LinearLayout                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:orientation="horizontal">                <RelativeLayout                        android:layout_width="0dp"                        android:layout_height="wrap_content"                        android:layout_weight="1">                    <ImageView                            android:layout_width="20dp"                            android:layout_height="20dp"                            android:layout_alignParentRight="true"                            android:layout_marginRight="10dp"                            android:src="@drawable/ico_people" />                </RelativeLayout>                <RelativeLayout                        android:layout_width="0dp"                        android:layout_height="match_parent"                        android:layout_weight="2">                    <shlm.lmcs.com.lazycat.LazyShopView.SystemTextView                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:layout_centerVertical="true"                            android:text="人员投诉"                            android:textColor="#000000"                            android:textSize="13dp" />                </RelativeLayout>                <RelativeLayout                        android:layout_width="0dp"                        android:layout_height="match_parent"                        android:layout_weight="4">                    <shlm.lmcs.com.lazycat.LazyShopView.SystemTextView                            android:id="@+id/activity_systemsetBtnsetOpenorder"                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:layout_alignParentRight="true"                            android:layout_centerVertical="true"                            android:layout_marginRight="25dp"                            android:text="打开"                            android:textColor="#a9a9a9"                            android:textSize="10dp" />                </RelativeLayout>            </LinearLayout>        </LinearLayout>    </LinearLayout>    <LinearLayout            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_alignParentBottom="true"            android:layout_centerHorizontal="true"            android:layout_marginBottom="5dp"            android:orientation="vertical">        <shlm.lmcs.com.lazycat.LazyShopView.SystemTextView                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_marginTop="5dp"                android:text="@string/SystemBottommsg"                android:textColor="#a9a9a9"                android:textSize="11dp" />    </LinearLayout></RelativeLayout>