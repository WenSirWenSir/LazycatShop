<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"        android:layout_width="match_parent"        android:layout_height="match_parent"        android:background="#efefef"        android:fitsSystemWindows="true"        android:orientation="vertical">    <include layout="@layout/assembly_act_head" />    <!--显示系统设置-->    <LinearLayout            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_marginTop="40dp"            android:orientation="vertical">        <LinearLayout                android:id="@+id/activity_integralpostalIntegralBody"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:background="#ffffff"                android:paddingTop="7dp"                android:paddingBottom="7dp">            <LinearLayout                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:orientation="horizontal">                <RelativeLayout                        android:layout_width="0dp"                        android:layout_height="wrap_content"                        android:layout_weight="1">                    <ImageView                            android:layout_width="20dp"                            android:layout_height="20dp"                            android:layout_alignParentRight="true"                            android:layout_marginRight="10dp"                            android:src="@drawable/ico_animation" />                </RelativeLayout>                <RelativeLayout                        android:layout_width="0dp"                        android:layout_height="match_parent"                        android:layout_weight="2">                    <shlm.lmcs.com.lazycat.LazyShopView.SystemTextView                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:layout_centerVertical="true"                            android:text="商品显示动画"                            android:textColor="#000000"                            android:textSize="13dp" />                </RelativeLayout>                <RelativeLayout                        android:layout_width="0dp"                        android:layout_height="match_parent"                        android:layout_weight="4">                    <shlm.lmcs.com.lazycat.LazyShopView.SystemTextView                            android:id="@+id/activity_systemsetBtnsetShopanimation"                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:layout_alignParentRight="true"                            android:layout_centerVertical="true"                            android:layout_marginRight="25dp"                            android:text="打开"                            android:textColor="#a9a9a9"                            android:textSize="10dp" />                </RelativeLayout>            </LinearLayout>        </LinearLayout>        <!--订单共享-->        <LinearLayout                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:background="#ffffff"                android:paddingTop="7dp"                android:paddingBottom="7dp">            <LinearLayout                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:orientation="horizontal">                <RelativeLayout                        android:layout_width="0dp"                        android:layout_height="wrap_content"                        android:layout_weight="1">                    <ImageView                          