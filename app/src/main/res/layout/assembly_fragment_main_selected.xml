<?xml version="1.0" encoding="utf-8"?><!--精品优选商品的选择框--><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res/shlm.lmcs.com.lazycat"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:background="#ffffff"    android:orientation="vertical"    tools:ignore="ResAuto">    <RelativeLayout        android:layout_width="match_parent"        android:layout_height="50dp">        <TextView            android:id="@+id/assembly_fragment_main_selectedTitle"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_centerVertical="true"            android:layout_marginLeft="15dp"            android:text="精品优选"            android:textColor="#000000"            android:textSize="17sp" />        <RelativeLayout            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_alignParentRight="true"            android:layout_centerVertical="true">            <ImageView                android:layout_width="15dp"                android:layout_height="15dp"                android:layout_alignParentRight="true"                android:layout_centerVertical="true"                android:layout_marginRight="55dp"                android:src="@drawable/ico_more" />            <TextView                android:layout_width="50dp"                android:layout_height="wrap_content"                android:layout_alignParentRight="true"                android:layout_centerVertical="true"                android:text="查看全部"                android:textColor="#666666"                android:textSize="10sp" />        </RelativeLayout>    </RelativeLayout>    <LinearLayout        android:id="@+id/assembly_fragment_main_selectedOneBody"        android:layout_width="match_parent"        android:layout_height="120dp"        android:layout_marginLeft="5dp"        android:layout_marginRight="5dp"        android:background="#f30d88"        android:orientation="vertical">    </LinearLayout>    <LinearLayout        android:id="@+id/assembly_fragment_main_selectedTwoBody"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginLeft="5dp"        android:layout_marginTop="5dp"        android:layout_marginRight="5dp"        android:background="#FFFFFF"        android:orientation="vertical">        <shlm.lmcs.com.lazycat.LazyCatProgramUnt.Views.LazyRoundImage            android:id="@+id/assembly_fragment_main_horizontaladv_img"            android:layout_width="match_parent"            android:layout_height="200dp"            android:scaleType="fitXY"            app:FilletHeight = "80"            app:is_circle="true"            app:corner_bottom_right_radius="20dp"            app:corner_bottom_left_radius="20dp"            app:corner_radius="20dp"            android:src="@drawable/aaaa" />    </LinearLayout></LinearLayout>